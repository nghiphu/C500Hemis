@model C500Hemis.Models.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow" style="background-color: #2f4f2f;">
                <div class="card-header text-center" style="background-color: #2f4f2f; border-bottom: none;">
                    <h2 class="text-white mb-0">Đăng nhập</h2>
                </div>
                <div class="card-body">
                    <!-- Hiển thị thông báo lỗi -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <!-- Hiển thị thông báo thành công -->
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success">@TempData["Message"]</div>
                    }

                    <!-- Form Đăng nhập -->
                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken() <!-- Bảo vệ chống CSRF -->

                        <div class="form-group mb-3">
                            <label class="text-white" asp-for="Username"></label>
                            <input asp-for="Username" class="form-control border-0" style="background-color: #3d5c3d; color: #fff;" placeholder="Nhập tên đăng nhập" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label class="text-white" asp-for="Password"></label>
                            <input asp-for="Password" type="password" class="form-control border-0" style="background-color: #3d5c3d; color: #fff;" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-light btn-block" style="width: 100%;">Đăng nhập</button>
                    </form>
                </div>
                <div class="card-footer text-center" style="background-color: #2f4f2f; border-top: none;">
                    <a asp-action="Register" class="text-white" style="text-decoration: underline;">Chưa có tài khoản? Đăng ký tại đây</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Thêm các script validation -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
