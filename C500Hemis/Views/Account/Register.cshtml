@model C500Hemis.Models.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow" style="background-color: #2f4f2f;">
                <div class="card-header text-center" style="background-color: #2f4f2f; border-bottom: none;">
                    <h2 class="text-white mb-0">Đăng ký</h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Register" method="post">
                        <div class="form-group mb-3">
                            <label class="text-white" for="Username">Username:</label>
                            <input asp-for="Username" class="form-control border-0" style="background-color: #3d5c3d; color: #fff;" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="text-white" for="Password">Password:</label>
                            <input asp-for="Password" type="password" class="form-control border-0" style="background-color: #3d5c3d; color: #fff;" />
                        </div>

                        <div class="form-group mb-4">
                            <label class="text-white" for="IdPhong">Id Phòng:</label>
                            <input asp-for="IdPhong" type="number" class="form-control border-0" style="background-color: #3d5c3d; color: #fff;" />
                        </div>

                        <button type="submit" class="btn btn-light btn-block" style="width: 100%;">Đăng ký</button>
                    </form>
                </div>
                <div class="card-footer text-center" style="background-color: #2f4f2f; border-top: none;">
                    <a asp-action="Login" class="text-white" style="text-decoration: underline;">Đã có tài khoản? Đăng nhập tại đây</a>
                </div>
            </div>
        </div>
    </div>
</div>
