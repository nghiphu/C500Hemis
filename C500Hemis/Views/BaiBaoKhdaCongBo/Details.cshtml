@model C500Hemis.Models.TbBaiBaoKhdaCongBo

@{
    ViewData["Title"] = "Chi Tiết Bài Báo";
}

<!-- Bootstrap Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">

<div class="container mt-5 d-flex justify-content-center">
    <div class="card neumorphic-card shadow-lg" style="max-width: 800px; width: 100%;">
        <div class="card-header bg-gradient-primary text-white text-center">
            <h3 class="mb-0">Chi Tiết Bài Báo</h3>
        </div>
        <div class="card-body p-4">
            <dl class="row gy-3">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.MaBaiBaoKh)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MaBaiBaoKh)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.TenBaiBaoKh)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TenBaiBaoKh)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.TenTapChi)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TenTapChi)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.GhiChuDuongDanBaiBao)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.GhiChuDuongDanBaiBao)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.TapSo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TapSo)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Trang)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Trang)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.NamCongBo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NamCongBo)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IdNhiemVuKhcnNavigation)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdNhiemVuKhcnNavigation.IdNhiemVuKhcn)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IdTapChiQuocTeNavigation)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdTapChiQuocTeNavigation.TapChiKhoaHocQuocTe)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IdTapChiTrongNuocNavigation)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdTapChiTrongNuocNavigation.TapChiTrongNuoc)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IdXepHangQNavigation)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdXepHangQNavigation.XepHangQ)
                </dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.IdBaiBaoKhdaCongBo" class="btn btn-gradient-primary">
                    <i class="bi bi-pencil-square"></i> Chỉnh Sửa
                </a>
                <a asp-action="Index" class="btn btn-gradient-secondary">
                    <i class="bi bi-arrow-left"></i> Quay Lại
                </a>
            </div>
        </div>
    </div>
</div>

<!-- tùy chỉnh CSS -->
<style>
    /* Neumorphism Card */
    .neumorphic-card {
        background: #f0f0f3;
        border-radius: 15px;
        box-shadow: 9px 9px 16px #c7c7c7, -9px -9px 16px #ffffff;
    }

    /* Header Gradient */
    .bg-gradient-primary {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }

    .btn-gradient-primary {
        background: linear-gradient(135deg, #42a5f5 0%, #478ed1 100%);
        color: white;
        border: none;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-gradient-primary:hover {
            transform: scale(1.05);
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.3);
        }

    .btn-gradient-secondary {
        background: linear-gradient(135deg, #b1bfd8 0%, #667292 100%);
        color: white;
        border: none;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-gradient-secondary:hover {
            transform: scale(1.05);
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.3);
        }

    /* Dark Mode Support */
    body.dark-mode {
        background-color: #121212;
        color: white;
    }

    .dark-mode .neumorphic-card {
        background: #1e1e1e;
        box-shadow: 5px 5px 15px #0e0e0e, -5px -5px 15px #2a2a2a;
    }

    .dark-mode .btn {
        background: #3e3e3e;
        color: white;
    }
</style>
