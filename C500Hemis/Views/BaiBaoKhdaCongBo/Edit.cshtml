@model C500Hemis.Models.TbBaiBaoKhdaCongBo

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        body {
            background-color: #fff9e9;
            color: #553f3a;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
        }

        .container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 600px;
            width: 100%;
            margin: auto;
            background-color: #ccdee2;
        }

        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                color: #553f3a;
                width: 85%;
                margin-right: 10px;
            }

        label {
            font-size: 16px;
            color: #553f3a;
        }

        h1  {
            text-align: center;
            color: #553f3a;
        }


        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #4b9ab4;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #A1D8EC;
            }
    </style>
</head>

<h1>CHỈNH SỬA THÔNG TIN</h1>

<!-- Bootstrap Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">

<div class="container mt-5 d-flex justify-content-center align-items-center">
    <div class="card neumorphic-card shadow-lg" style="max-width: 650px; width: 100%;">

        <div class="card-body p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="IdBaiBaoKhdaCongBo" />

                <div class="form-floating mb-3">
                    <input asp-for="MaBaiBaoKh" class="form-control" placeholder="Nhập mã bài báo" />
                    <label asp-for="MaBaiBaoKh">Mã Bài Báo</label>
                    <span asp-validation-for="MaBaiBaoKh" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="TenBaiBaoKh" class="form-control" placeholder="Nhập tên bài báo" />
                    <label asp-for="TenBaiBaoKh">Tên Bài Báo</label>
                    <span asp-validation-for="TenBaiBaoKh" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="TenTapChi" class="form-control" placeholder="Nhập tên tạp chí" />
                    <label asp-for="TenTapChi">Tên Tạp Chí</label>
                    <span asp-validation-for="TenTapChi" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="GhiChuDuongDanBaiBao" type="number" class="form-control" placeholder="Nhập đường dẫn bài báo" />
                    <label asp-for="GhiChuDuongDanBaiBao">Ghi chú đường dẫn bài báo</label>
                    <span asp-validation-for="GhiChuDuongDanBaiBao" class="text-danger"></span>
                </div>


                <div class="form-floating mb-3">
                    <input asp-for="TapSo" type="number" class="form-control" placeholder="Nhập tập số" />
                    <label asp-for="TapSo">Tập số</label>
                    <span asp-validation-for="TapSo" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Trang" type="number" class="form-control" placeholder="Nhập trang" />
                    <label asp-for="Trang">Trang</label>
                    <span asp-validation-for="Trang" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="IdNhiemVuKhcn" class="form-control" placeholder="Nhập mã nhiệm vụ KHCN" />
                    <label asp-for="IdNhiemVuKhcn">Mã nhiệm vụ KHCN</label>
                    <span asp-validation-for="IdNhiemVuKhcn" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="NamCongBo" type="number" class="form-control" placeholder="Nhập năm công bố" />
                    <label asp-for="NamCongBo">Năm Công Bố</label>
                    <span asp-validation-for="NamCongBo" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="IdTapChiQuocTe" class="form-select" asp-items="ViewBag.IdTapChiQuocTe"></select>
                    <label asp-for="IdTapChiQuocTe">Tạp chí quốc tế</label>
                    <span asp-validation-for="IdTapChiQuocTe" class="text-danger"></span>
                </div>


                <div class="form-floating mb-3">
                    <select asp-for="IdTapChiTrongNuoc" class="form-select" asp-items="ViewBag.IdTapChiTrongNuoc"></select>
                    <label asp-for="IdTapChiTrongNuoc">Tạp chí trong nước</label>
                    <span asp-validation-for="IdTapChiTrongNuoc" class="text-danger"></span>
                </div>



                <div class="form-floating mb-3">
                    <select asp-for="IdXepHangQ" class="form-select" asp-items="ViewBag.IdXepHangQ"></select>
                    <label asp-for="IdXepHangQ"> Xếp hạng Q</label>
                    <span asp-validation-for="IdXepHangQ" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-gradient-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-gradient-primary">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
