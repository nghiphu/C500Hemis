@model C500Hemis.Models.TbChiTietTaiSanDonVi

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #fff9e9;
            color: #553f3a;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
            margin-bottom: 115px
        }

        .container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 600px;
            width: 100%;
            margin: auto;
            background-color: #ccdee2;
            margin-top: 20px;
        }

        .info-table {
            background-color: #dce3e9;
            padding: 20px;
            border-radius: 10px;
        }

            .info-table label {
                font-weight: bold;
            }

        label {
            font-size: 16px;
            color: #553f3a;
        }

        h1 {
            color: #553f3a;
            text-align: center;
        }

        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            width: 100%;
        }

            .form-group label {
                font-weight: bold;
                color: #553f3a;
                width: 100%;
                margin-right: 10px;
            }

        .cen {
            text-align: center;
        }

        input[type="submit"] {
            width: 10%;
            padding: 10px;
            background-color: #EE2C2C;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #FF6A6A;
            }
    </style>
</head>

<div class="container">
    <h1>Xóa</h1>
    <h3>Bạn có chắc chắn muốn xóa mục này?</h3>

    <h4>Thông tin Tài sản</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MaTaiSan)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaTaiSan)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TenTaiSan)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.TenTaiSan)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NguyenGia)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.NguyenGia)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IdChuSoHuu)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdChuSoHuuNavigation.ChuSoHuu)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IdTaiSanDonVi)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdTaiSanDonViNavigation.IdTaiSanDonVi)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IdTinhTrangThietBi)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdTinhTrangThietBiNavigation.TinhTrangThietBi)</dd>
    </dl>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="IdChiTietTaiSanDonVi" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-back">Quay lại danh sách</a>
    </form>
</div>
