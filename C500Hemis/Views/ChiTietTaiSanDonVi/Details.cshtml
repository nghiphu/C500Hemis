@model C500Hemis.Models.TbChiTietTaiSanDonVi

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #fff9e9;
            color: #553f3a;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
            margin-bottom: 115px
        }

        .container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 600px;
            width: 100%;
            margin: auto;
            background-color: #ccdee2;
            margin-top: 20px;
        }

        label {
            font-size: 16px;
            color: #553f3a;
        }

        h1 {
            color: #553f3a;
            text-align: center;
        }

        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            width: 100%;
        }

            .form-group label {
                font-weight: bold;
                color: #553f3a;
                width: 100%;
                margin-right: 10px;
            }

        .cen {
            text-align: center;
        }

        .custom-btn {
            width: 100%;
            padding: 10px;
            background-color: #4b9ab4;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
        }

            .custom-btn:hover {
                background-color: #A1D8EC; /* Màu khi hover */
            }
    </style>
</head>

<h1>THÔNG TIN CHI TIẾT TÀI SẢN</h1>

<div class="container">
    <hr />
    <dl class="row">
        <dt class="col-sm-4"><b>@Html.DisplayNameFor(model => model.MaTaiSan)</b></dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaTaiSan)</dd>

        <dt class="col-sm-4"><b>@Html.DisplayNameFor(model => model.TenTaiSan)</b></dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.TenTaiSan)</dd>

        <dt class="col-sm-4"><b>@Html.DisplayNameFor(model => model.NguyenGia)</b></dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.NguyenGia)</dd>

        <dt class="col-sm-4"><b>@Html.DisplayNameFor(model => model.IdChuSoHuu)</b></dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdChuSoHuuNavigation.ChuSoHuu)</dd>

        <dt class="col-sm-4"><b>@Html.DisplayNameFor(model => model.IdTaiSanDonVi)</b></dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdTaiSanDonViNavigation.IdTaiSanDonVi)</dd>

        <dt class="col-sm-4"><b>@Html.DisplayNameFor(model => model.IdTinhTrangThietBi)</b></dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdTinhTrangThietBiNavigation.TinhTrangThietBi)</dd>
    </dl>
</div>

<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model?.IdChiTietTaiSanDonVi" class="btn btn-primary btn-custom">Chỉnh sửa</a>
            <a asp-action="Index" class="btn btn-back" style="margin-top:80px; color: #4b9ab4">
                <i class="fa-solid fa-circle-arrow-left"></i>Quay lại danh sách
    </a>
</div>
