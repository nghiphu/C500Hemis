@model C500Hemis.Models.TbChiTietTaiSanDonVi

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        body {
            background-color: #fff9e9;
            color: #553f3a;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
            margin-bottom: 115px
        }

        .container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 600px;
            width: 100%;
            margin: auto;
            background-color: #ccdee2;
        }

        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                color: #553f3a;
                width: 85%;
                margin-right: 10px;
            }

        label {
            font-size: 16px;
            color: #553f3a;
        }

        h1 {
            text-align: center;
            color: #553f3a;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #4b9ab4;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #A1D8EC;
            }
    </style>
</head>

<h1>Chỉnh Sửa Tài Sản Đơn Vị</h1>
<hr />

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<div class="container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdChiTietTaiSanDonVi" />

        <div class="form-group">
            <label asp-for="IdTaiSanDonVi" class="control-label"><b>Tài sản đơn vị</b></label>
            <select asp-for="IdTaiSanDonVi" class="form-control" asp-items="ViewBag.IdTaiSanDonVi"></select>
            <span asp-validation-for="IdTaiSanDonVi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MaTaiSan" class="control-label"><b>Mã tài sản</b></label>
            <input asp-for="MaTaiSan" class="form-control" />
            <span asp-validation-for="MaTaiSan" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TenTaiSan" class="control-label"><b>Tên tài sản</b></label>
            <input asp-for="TenTaiSan" class="form-control" />
            <span asp-validation-for="TenTaiSan" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NguyenGia" class="control-label"><b>Nguyên giá</b></label>
            <input asp-for="NguyenGia" class="form-control" />
            <span asp-validation-for="NguyenGia" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdTinhTrangThietBi" class="control-label"><b>Tình trạng thiết bị</b></label>
            <select asp-for="IdTinhTrangThietBi" class="form-control" asp-items="ViewBag.IdTinhTrangThietBi"></select>
            <span asp-validation-for="IdTinhTrangThietBi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdChuSoHuu" class="control-label"><b>Chủ sở hữu</b></label>
            <select asp-for="IdChuSoHuu" class="form-control" asp-items="ViewBag.IdChuSoHuu"></select>
            <span asp-validation-for="IdChuSoHuu" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Lưu" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn-back">
        <i class="fa-solid fa-circle-arrow-left"></i> Quay lại danh sách
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
