@model IEnumerable<C500Hemis.Models.TbChiTietTaiSanDonVi>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = null;
}
<DOCTYPE html>
<html lang="en"
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Import Bootstrap and JQuery-->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!--DataTables-->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.1.7/css/dataTables.dataTables.css" />

    <script type="text/javascript"
            charset="utf8" src="https://cdn.datatables.net/2.1.7/js/dataTables.js"></script>
    <!--My CSS anf JQuery-->
    <link href="./css/style.css" rel="stylesheet" />
    <script type="text/javascript" src="./js/FileName.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Font+Name&display=swap">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #fff9e9;
            color: #553f3a;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
            margin-bottom: 120px
        }

        .table {
            color: #553f3a;
            background-color: #e4f2ef;
            width: 90%;
            margin: auto;
            border: 5px solid darkgreen;
        }



        tr {
            transition: background-color 0.3s ease; /* Thêm hiệu ứng cho hàng */
        }

            tr:hover {
                background-color: #f1f1f1; /* Màu nền khi di chuột vào hàng */
            }

        th {
            background-color: #007BFF;
            color: #553f3a;
            font-size: 14px;
        }

            th:hover {
                background-color: #388895; /* Màu nền khi di chuột vào tiêu đề */
            }

        h1 {
            color: #553f3a;
            text-align: center;
        }

        .btn-primary {
            background-color: #007BFF;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-edit {
            background-color: #88a764; /* Màu xanh lá cho Chỉnh sửa */
        }

            .btn-edit:hover {
                background-color: #f5f6b4;
                transform: scale(1.05); /* Tạo hiệu ứng phóng to nhẹ khi hover */
            }

        .btn-details {
            background-color: #8fc8d9; /* Màu xanh dương nhạt cho Chi tiết */
        }

            .btn-details:hover {
                background-color: #c4faf0;
                transform: scale(1.05); /* Tạo hiệu ứng phóng to nhẹ khi hover */
            }

        .btn-delete {
            background-color: #dc3f1c; /* Màu đỏ cho Xóa bỏ */
        }

            .btn-delete:hover {
                background-color: #df8584;
                transform: scale(1.05); /* Tạo hiệu ứng phóng to nhẹ khi hover */
            }

        .btn-create {
            background-color: null;
        }

            .btn-create:hover {
                font-weight: bold; /* Chữ sẽ đậm hơn khi hover */
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); /* Thêm hiệu ứng bóng đổ khi hover */
                transform: scale(1.05); /* Tạo hiệu ứng phóng to nhẹ khi hover */
            }

            /* Khi nhấn nút */
            .btn-create:active {
                font-weight: bolder; /* Chữ sẽ đậm hơn khi nhấn */
                text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5); /* Thay đổi bóng đổ khi nhấn */
            }

        .table-custom {
            background-color: #fff;
            border-radius: 0.5rem;
            white-space: nowrap; /* Ngăn không cho các ô tự động ngắt dòng */
        }

            .table-custom th {
                text-align: center;
            }

            .table-custom td {
                text-align: center;
                font-size: 20px;
            }
    </style>
</head>

<body>
    <h1>Danh Sách Tài Sản Đơn Vị</h1>

    <p class="text-center">
        <a asp-action="Create" class="btn btn-primary">
            Tạo Mới <i class="fa-solid fa-plus"></i>
        </a>
    </p>

    <div class="container mt-4">
        <table class="table table-custom table-striped table-bordered">
            <thead>
                <tr>
                    <th>Mã Tài Sản</th>
                    <th>Tên Tài Sản</th>
                    <th>Nguyên Giá</th>
                    <th>Chủ Sở Hữu</th>
                    <th>ID Tài Sản Đơn Vị</th>
                    <th>Tình Trạng Thiết Bị</th>
                    <th>TÙY CHỌN</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MaTaiSan)</td>
                        <td>@Html.DisplayFor(modelItem => item.TenTaiSan)</td>
                        <td>@Html.DisplayFor(modelItem => item.NguyenGia)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdChuSoHuuNavigation.ChuSoHuu)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdTaiSanDonViNavigation.IdTaiSanDonVi)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdTinhTrangThietBiNavigation.TinhTrangThietBi)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdChiTietTaiSanDonVi" class="btn btn-edit btn-custom">
                                <i class="fa-solid fa-pen-to-square"></i> Sửa
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdChiTietTaiSanDonVi" class="btn btn-details btn-custom">
                                <i class="fa-solid fa-circle-info"></i> Xem
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdChiTietTaiSanDonVi" class="btn btn-delete btn-custom">
                                <i class="fa-solid fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.table-custom').DataTable({
                lengthMenu: [5, 10, 15, 20, 50, 100], //điều chỉnh số lượng bản ghi trên 1 trang
                pageLength: 10,
                paging: true, //di chuyển qua các trang
                searching: true, //Tìm kiếm
                ordering: true, //Sắp xếp
                info: true, //Thông tin
                language: {
                    lengthMenu: "Hiển thị _MENU_ mục mỗi trang",
                    zeroRecords: "Không tìm thấy dữ liệu",
                    info: "Tổng số bản ghi _TOTAL_",
                    infoEmpty: "Không có dữ liệu",
                    infoFiltered: "(lọc từ _MAX_ tổng số mục)",
                    search: "Tìm kiếm:",
                    paginate: {
                        first: '<i class="fa-solid fa-backward-fast"></i>',
                        last: '<i class="fa-solid fa-forward-fast"></i>',
                        next: '<i class="fa-solid fa-forward-step"></i>',
                        previous: '<i class="fa-solid fa-backward-step"></i>'
                    }
                },
            });
        });
    </script>
</body>
</html>