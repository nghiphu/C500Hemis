@model C500Hemis.Models.TbChucDanhKhoaHocCuaCanBo

@{
    ViewData["Title"] = "Tạo mới";
}
<style>
    /* Tổng quan */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7f8;
        color: #333;
        padding: 20px;
    }

    h1, h4 {
        color: #2c3e50;
        text-align: center;
    }

    form {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #34495e;
    }

    input.form-control, select.form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        color: #2c3e50;
    }

        input.form-control:focus, select.form-control:focus {
            border-color: #2980b9;
            outline: none;
            box-shadow: 0 0 5px rgba(41, 128, 185, 0.5);
        }

    .btn-primary {
        background-color: #2980b9;
        border-color: #2980b9;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1a5e86;
        }

    .text-danger {
        color: #e74c3c;
    }

    a {
        color: #2980b9;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    hr {
        border: 0;
        height: 1px;
        background: #ddd;
    }

</style>

<h1>THÊM MỚI</h1>

<h4>CHỨC DANH KHOA HỌC CỦA CÁN BỘ</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdChucDanhKhoaHocCuaCanBo" class="control-label"></label>
                <input asp-for="IdChucDanhKhoaHocCuaCanBo" class="form-control" />
                <span asp-validation-for="IdChucDanhKhoaHocCuaCanBo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCanBo" class="control-label"></label>
                <select asp-for="IdCanBo" class="form-control" asp-items="ViewBag.IdCanBo"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdChucDanhKhoaHoc" class="control-label"></label>
                <select asp-for="IdChucDanhKhoaHoc" class="form-control" asp-items="ViewBag.IdChucDanhKhoaHoc"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdThamQuyenQuyetDinh" class="control-label"></label>
                <select asp-for="IdThamQuyenQuyetDinh" class="form-control" asp-items="ViewBag.IdThamQuyenQuyetDinh"></select>
            </div>
            <div class="form-group">
                <label asp-for="SoQuyetDinh" class="control-label"></label>
                <input asp-for="SoQuyetDinh" class="form-control" />
                <span asp-validation-for="SoQuyetDinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayQuyetDinh" class="control-label"></label>
                <input asp-for="NgayQuyetDinh" class="form-control" />
                <span asp-validation-for="NgayQuyetDinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="XÁC NHẬN" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">QUAY LẠI DANH SÁCH</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

