@section Styles {
    <style>

        /* Phần nội dung */
        .web-form {
            border-top: 15px solid red; /* đỏ */
            margin-top: 20px;
            background-color: #fadfdf; /* đỏ nhạt */
            display: flex;
            justify-content: center;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.6);
        }

        /* Định dạng 2 cột nội dung, mỗi cột chứa 12 trường */
        .left-column, .right-column {
            display: inline-block;
            vertical-align: top;
            width: 50%;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
        }

            .row dt, .row dd {
                flex: 1 1 50%; /* Chia đôi chiều rộng của mỗi trường thông tin */
                padding: 5px;
            }

            .row dt {
                font-weight: bold;
            }

        /* Thêm khoảng cách giữa 2 cột */
        .col-half {
            width: 50%;
            box-sizing: border-box;
        }

        /* Phần cuối: khối chứa 2 button */
        .combo-button {
            display: flex; /* Đặt 2 button trên 1 trục ngang từ trái sang phải */
            margin-top: 20px;
            margin-bottom: 20px;
            border-radius: 10px;
        }

        /* Định dạng button "xác nhận đăng kí" */
        .button-submit {
            background-color: #fad8d8; /* đỏ nhạt */
            border-radius: 10px;
            font-size: 20px;
            color: black;
            font-weight: bold;
            cursor: pointer;
            transition: background-color color 0.3s;
            border: none;
            width: 50%;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.6);
            padding: 15px;
            margin-right: 10px;
            text-decoration: none;
            text-align: center;
        }

            .button-submit:hover {
                background-color: red; /* Màu đỏ đậm hơn khi hover */
                color: white;
                font-style: italic;
            }

        /* Định dang button "quay lại danh sách" */
        .button-back {
            background-color: #edf7f1; /* Màu xanh lá cây nhạt */
            font-size: 20px;
            font-weight: bold;
            color: black;
            border-radius: 10px;
            text-decoration: none;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.6);
            transition: background-color 0.3s ease, transform 0.3s ease;
            text-align: center;
            width: 50%;
            padding: 15px;
        }

            .button-back:hover {
                background-color: #009879; /* màu xanh đậm, trùng màu cột tiêu đề */
                color: white;
                font-style: italic;
            }
    </style>
     
}

