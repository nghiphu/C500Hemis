@model C500Hemis.Models.TbChuyenGiaoCongNgheVaDaoTao

@{
    ViewData["Title"] = "Delete";
}


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide|Sofia|Trirong">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-dy+Dvhgi7KkKbP4qxFqDncdchCRO1GfBPOIQFxDb/WIOVQ5SWEphI8MNsxF9auhgGChlpS+nfsP24i7IbxNwOQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
    table {
        font-family: arial, sans-serif; /* Đặt font cho bảng */
        border-collapse: collapse; /* Gộp các đường viền của bảng lại với nhau */
        width: 100%; /* Đặt chiều rộng bảng chiếm toàn bộ chiều rộng container */
    }

    td, th {
        border: 1px solid #dddddd; /* Đường viền của các ô bảng màu xám nhạt */
        text-align: center; /* Căn giữa nội dung trong các ô */
        padding: 8px; /* Đặt khoảng cách giữa nội dung và viền ô */
    }

    tr:nth-child(even) {
        background-color: white; /* Màu nền của hàng chẵn trong bảng */
    }

    thead th {
        white-space: nowrap; /* Đảm bảo nội dung không xuống dòng trong ô header */
        text-align: center; /* Căn giữa nội dung header */
    }

    h1.a {
        font-family: "Audiowide", sans-serif; /* Sử dụng font Audiowide */
        text-shadow: 3px 3px 3px #ababab; /* Đổ bóng cho chữ */
    }

    h1 {
        font-size: 45px; /* Đặt kích thước font lớn cho h1 */
    }

    body {
        position: relative; /* Vị trí của body được đặt tương đối để hỗ trợ các phần tử con có vị trí tuyệt đối */
        background-image: url('https://lh6.googleusercontent.com/wkeQrgK5pTamYY8M618pFEEAcuQJjfbpmIE-Mhp46LBwqYjNOqClsFFWYY-FxA46hjHkmzNIK7v8Dnhw0KSiTUcwoOKKDywa1eqwFXfVFNDfnK3fS3d6oVxCLwWqMraAorSa4ACL'); /* Đặt hình nền cho trang */
        background-size: cover; /* Đảm bảo hình nền bao phủ toàn bộ trang */
        background-position: center; /* Đặt hình nền căn giữa */
        background-attachment: fixed; /* Hình nền cố định khi trang được cuộn */
        background-repeat: no-repeat; /* Không lặp lại hình nền */
        padding-top: 70px; /* Đặt khoảng cách trên cùng của trang để tránh nội dung bị che khuất */
        color: #333; /* Màu chữ chính của trang */
        height: 100vh; /* Chiều cao trang chiếm toàn bộ chiều cao của cửa sổ */
        overflow: hidden; /* Ẩn các phần nội dung tràn ra ngoài */
    }

        body::before {
            content: ""; /* Tạo một phần tử trước body mà không cần nội dung */
            position: absolute; /* Đặt vị trí tuyệt đối cho lớp phủ */
            top: 0; /* Gắn lớp phủ vào mép trên của trang */
            left: 0; /* Gắn lớp phủ vào mép trái của trang */
            right: 0; /* Gắn lớp phủ vào mép phải của trang */
            bottom: 0; /* Gắn lớp phủ vào mép dưới của trang */
            background: rgba(255, 255, 255, 0.1); /* Đặt màu nền trắng mờ với độ trong suốt */
            backdrop-filter: blur(10px); /* Thêm hiệu ứng mờ cho nền */
            z-index: -1; /* Đưa lớp phủ này xuống dưới nội dung của trang */
        }

</style>


<body>
    <div class="container p-5 my-5 border bg-white shadow-sm ">
        <h1 class="a">DELETE</h1>
        <hr />
        <table class="table table-striped">
            <thead style="background-color:#dddddd">
                <tr>
                    <th>Id CGCN&DT</th>
                    <th>Hình Thức CGCN</th>
                    <th>Lĩnh Vực Nghiên Cứu</th>
                    <th>Ngành Kinh Tế</th>
                    <th>Nhiệm Vụ KHCN</th>
                    <th>Trạng Thái Hợp Đồng</th>
                </tr>
            </thead>
            <tbody>
                <tr style="background-color:white">
                    <td>@Model.IdChuyenGiaoCongNgheVaDaoTao</td>
                    <td>@Model.IdHinhThucChuyenGiaoCongNgheNavigation?.HinhThucChuyenGiaoCongNghe</td>
                    <td>@Model.IdLinhVucNghienCuuNavigation?.LinhVucNghienCuu</td>
                    <td>@Model.IdNganhKinhTeNavigation?.NganhKinhTe</td>
                    <td>@Model.IdNhiemVuKhcnNavigation?.TenNhiemVu</td>
                    <td>@Model.IdTrangThaiHopDongNavigation?.TrangThaiHopDong</td>
                </tr>
            </tbody>
        </table>
        <hr />
        <h4 class="fw-bold">Bạn có chắc chắn muốn xóa không?</h4>

        <form asp-action="Delete" asp-controller="ChuyenGiaoCongNgheVaDaoTao">
            <input type="hidden" asp-for="IdChuyenGiaoCongNgheVaDaoTao" />
            <div>
                <input type="submit" value="Xoá" class="btn btn-danger" />
                <a asp-action="Index" asp-controller="ChuyenGiaoCongNgheVaDaoTao" class="btn btn-secondary">Quay lại</a>
            </div>
            <div class="alert alert-warning">
                <strong>Cảnh báo!</strong> Nếu bạn xoá, bạn không thể khôi phục lại được dữ liệu này.
            </div>
        </form>
    </div>
</body>
