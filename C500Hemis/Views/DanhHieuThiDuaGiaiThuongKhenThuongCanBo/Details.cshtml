@model C500Hemis.Models.TbDanhHieuThiDuaGiaiThuongKhenThuongCanBo

@{

    Layout = null;
}
<script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.0/dist/JsBarcode.all.min.js"></script>


<div class="container">
    <div class="curved-shape">
    </div>
    <div class="title-box">
        <h2>Thông tin chi tiết danh hiệu</h2>
        <hr>
        <form action="#">
            <div class="avatar">
                <img src="/HTML/avt.jpg">
            </div>
            <div class="idcb">
                <b>ID Cán Bộ:</b> @Model.IdCanBoNavigation?.IdCanBo
            </div>
            <div class="cancel-box">
                <div class="btn" type="submit">
                    <a asp-action="Index" asp-controller="DanhHieuThiDuaGiaiThuongKhenThuongCanBo" style="text-decoration:none; color:black;">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                </div>

            </div>

        </form>
    </div>
    </div>
    <div class="info-content Login">
        <b>ID Cấp khen thưởng:</b>
        <hr>
        @Model.IdCapKhenThuongNavigation?.IdCapKhenThuong
        <b>ID Loại danh hiệu thi đua giải thưởng khen thưởng:</b>
        <hr>
        @Model.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuongNavigation?.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuong
        <b>ID Phương thức khen thưởng:</b>
        <hr>
        @Model.IdPhuongThucKhenThuongNavigation?.IdPhuongThucKhenThuong
        <b>ID Thi đua Giải thưởng khen thưởng:</b>
        <hr>
        @Model.IdThiDuaGiaiThuongKhenThuongNavigation?.IdThiDuaGiaiThuongKhenThuong
        <b>ID Danh hiệu thi đua giải thưởng khen thưởng cán bộ:</b>
        <hr>
        @Model.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuongNavigation?.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuong
    </div>
    <div id="barcode-container">
        <svg id="barcode"></svg>
    </div>

    <script>

        JsBarcode("#barcode", "iluvyousomuch", {
            format: "CODE128",
            lineColor: "black",
            width: 2,
            height: 40,
            displayValue: false,
            background: "none",

        });
    </script>
