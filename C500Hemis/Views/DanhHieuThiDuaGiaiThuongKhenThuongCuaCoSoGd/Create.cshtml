@model C500Hemis.Models.TbDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-color: #E9EED9;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #00796b; 
        text-align: center;
        margin-bottom: 20px;
    }

    hr {
        border-top: 2px solid #00796b; 
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #00796b;
        padding: 10px;
        font-size: 16px;
    }

    label {
        color: #004d40; 
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #00796b;
        border-color: #00796b;
        padding: 10px 20px;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: #004d40;
            border-color: #004d40;
        }

    a {
        color: #00796b;
        text-decoration: none;
        font-size: 16px;
    }

        a:hover {
            color: #004d40;
            text-decoration: underline;
        }

    .text-danger {
        color: red;
        font-weight: bold;
    }
</style>

<h1>Tạo mới</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Award and Recognition Type -->
            <div class="form-group">
                <label asp-for="IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd" class="control-label "></label>
                <select asp-for="IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd" class="form-control" asp-items="ViewBag.IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd">
                    <option value="">Chọn một tùy chọn</option>
                </select>
            </div>

            <!-- Type of Award -->
            <div class="form-group">
                <label asp-for="IdLoaiDanhHieuThiDuaGiaiThuongKhenThuong" class="control-label"></label>
                <select asp-for="IdLoaiDanhHieuThiDuaGiaiThuongKhenThuong" class="form-control" asp-items="ViewBag.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuong">
                    <option value="">Chọn loại</option>
                </select>
            </div>

            <!-- Award ID -->
            <div class="form-group">
                <label asp-for="IdDanhHieuThiDuaGiaiThuongKhenThuong" class="control-label"></label>
                <input asp-for="IdDanhHieuThiDuaGiaiThuongKhenThuong" class="form-control" placeholder="Nhập mã danh hiệu" />
                <span asp-validation-for="IdDanhHieuThiDuaGiaiThuongKhenThuong" class="text-danger"></span>
            </div>

            <!-- Decision Number -->
            <div class="form-group">
                <label asp-for="SoQuyetDinhKhenThuong" class="control-label"></label>
                <input asp-for="SoQuyetDinhKhenThuong" class="form-control" placeholder="Số quyết định" />
                <span asp-validation-for="SoQuyetDinhKhenThuong" class="text-danger"></span>
            </div>

            <!-- Reward Method -->
            <div class="form-group">
                <label asp-for="IdPhuongThucKhenThuong" class="control-label"></label>
                <select asp-for="IdPhuongThucKhenThuong" class="form-control" asp-items="ViewBag.IdPhuongThucKhenThuong">
                    <option value="">Chọn phương thức</option>
                </select>
            </div>

            <!-- Year of Reward -->
            <div class="form-group">
                <label asp-for="NamKhenThuong" class="control-label"></label>
                <input asp-for="NamKhenThuong" class="form-control" placeholder="YYYY" />
                <span asp-validation-for="NamKhenThuong" class="text-danger"></span>
            </div>

            <!-- Reward Level -->
            <div class="form-group">
                <label asp-for="IdCapKhenThuong" class="control-label"></label>
                <select asp-for="IdCapKhenThuong" class="form-control" asp-items="ViewBag.IdCapKhenThuong">
                    <option value="">Chọn cấp</option>
                </select>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index">⬅️ Quay lại danh sách</a>
</div>

@section Scripts {
    await Html.RenderPartialAsync("_ValidationScriptsPartial")
}