@model C500Hemis.Models.TbDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center text-primary mt-4 mb-4">Chỉnh Sửa Danh Hiệu & Giải Thưởng</h1>

<h4 class="text-secondary">Thông tin danh hiệu</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd" />

            <div class="form-group">
                <label asp-for="IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd" class="control-label font-weight-bold"></label>
                <select asp-for="IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd" class="form-control" asp-items="ViewBag.IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd"></select>
            </div>

            <div class="form-group">
                <label asp-for="IdLoaiDanhHieuThiDuaGiaiThuongKhenThuong" class="control-label font-weight-bold"></label>
                <select asp-for="IdLoaiDanhHieuThiDuaGiaiThuongKhenThuong" class="form-control" asp-items="ViewBag.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuong"></select>
                <span asp-validation-for="IdLoaiDanhHieuThiDuaGiaiThuongKhenThuong" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SoQuyetDinhKhenThuong" class="control-label font-weight-bold"></label>
                <input asp-for="SoQuyetDinhKhenThuong" class="form-control" />
                <span asp-validation-for="SoQuyetDinhKhenThuong" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdPhuongThucKhenThuong" class="control-label font-weight-bold"></label>
                <select asp-for="IdPhuongThucKhenThuong" class="form-control" asp-items="ViewBag.IdPhuongThucKhenThuong"></select>
                <span asp-validation-for="IdPhuongThucKhenThuong" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NamKhenThuong" class="control-label font-weight-bold"></label>
                <input asp-for="NamKhenThuong" class="form-control" />
                <span asp-validation-for="NamKhenThuong" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdCapKhenThuong" class="control-label font-weight-bold"></label>
                <select asp-for="IdCapKhenThuong" class="form-control" asp-items="ViewBag.IdCapKhenThuong"></select>
                <span asp-validation-for="IdCapKhenThuong" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Lưu Thay Đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary ml-2">
                    <i class="fas fa-arrow-left"></i> Quay Lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}