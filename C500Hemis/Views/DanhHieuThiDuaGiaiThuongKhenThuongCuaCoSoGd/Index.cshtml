@model IEnumerable<C500Hemis.Models.TbDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd>

@{
    ViewData["Title"] = "Danh hiệu thi đua giải thường, khen thưởng của cơ sở giáo dục";
}
<head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Import Bootstrap and JQuery-->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!--DataTables-->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.1.7/css/dataTables.dataTables.css" />

    <script type="text/javascript"
            charset="utf8" src="https://cdn.datatables.net/2.1.7/js/dataTables.js"></script>
    <!--My CSS and JQuery-->
    <link href="./css/style.css" rel="stylesheet" />
    <script type="text/javascript" src="./js/FileName.js"></script>

    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }


            table th, table td {
                text-align: center;
                vertical-align: middle;
                padding: 10px;
                border: 1px solid #ddd;
            }

            table th {
                background-color: #f2f2f2;
            }

            table.table th {
                background-color: cadetblue;
                padding: 10px;
                border: 1px solid #ddd;
                text-align: center;
            }

            table.table td {
                background-color: beige;
                padding: 10px;
                border: 1px solid #ddd;
                text-align: center;
                vertical-align: middle;
            }

        body {
            background-color: #fff;
        }

        .container {
            margin-top: 20px;
        }

        h1 {
            font-size: 2em;
            font-weight: bold;
            color: #333;
        }

        .btn {
            font-size: 0.9em;
            margin-right: 5px;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-info {
            background-color: #17a2b8;
            border: none;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }

        .btn:hover {
            opacity: 0.85;
        }
    </style>

</head>

<div class="container">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a class="btn btn-success" asp-action="Create"><i class="fas fa-plus-circle"></i> Tạo mới</a>
    </div>

    <table class="table table-hover" id="Tablehoang">
        <thead class="table-light">
            <tr>
                <th>Hành động</th>
                <th>@Html.DisplayNameFor(model => model.SoQuyetDinhKhenThuong)</th>
                <th>@Html.DisplayNameFor(model => model.NamKhenThuong)</th>
                <th>@Html.DisplayNameFor(model => model.IdCapKhenThuongNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGdNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuongNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.IdPhuongThucKhenThuongNavigation)</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd">
                            <i class="fas fa-info-circle"></i> Chi tiết
                        </a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </a>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.SoQuyetDinhKhenThuong)</td>
                    <td>@Html.DisplayFor(modelItem => item.NamKhenThuong)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdCapKhenThuongNavigation.CapKhenThuong)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGdNavigation.ThiDuaGiaiThuongKhenThuong)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuongNavigation.LoaiDanhHieuThiDuaGiaiThuongKhenThuong)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdPhuongThucKhenThuongNavigation.PhuongThucKhenThuong)</td>

                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $('#Tablehoang').DataTable({
        "language": {
            "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Vietnamese.json"
        },
        "paging": true,
        "lengthChange": true,
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "scrollX": true,
        "scrollY": '200px',
        "scrollCollapse": true,
        "fixedColumns": {
            left: 2 // Cố định 2 cột ở bên trái
        }
    });

    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
</script>