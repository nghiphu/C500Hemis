@model IEnumerable<C500Hemis.Models.TbDanhHieuThiDuaGiaiThuongKhenThuongNguoiHoc>

@{
    ViewData["Title"] = "Index";
}
<head>
    <!-- Import Bootstrap and JQuery-->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!--DataTables-->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.1.7/css/dataTables.dataTables.css" />

    <script type="text/javascript"
            charset="utf8" src="https://cdn.datatables.net/2.1.7/js/dataTables.js"></script>
    <!--My CSS anf JQuery-->
    <link href="./css/style.css" rel="stylesheet" />
</head>
<style>
       th{

           color:black;
           font-family:Arial, Helvetica, sans-serif;
           font-size:large;

       }
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
           
        }

        h1 {
            text-align: center;
            color: #333;
            font-size: 32px;
            margin-bottom: 20px;
        }

        p a {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
        }

            p a:hover {
                background-color: #218838;
            }

    th, td{
        text-align:center;
    }
    table{
        padding-bottom: 50px;
    }
</style>
<h1>Danh hiệu thi đua giải thưởng khen thưởng người học</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SoQuyetDinhKhenThuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NamKhenThuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCapKhenThuongNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDanhHieuThiDuaGiaiThuongKhenThuongNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdHocVienNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuongNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPhuongThucKhenThuongNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SoQuyetDinhKhenThuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamKhenThuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCapKhenThuongNavigation.IdCapKhenThuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDanhHieuThiDuaGiaiThuongKhenThuongNavigation.IdThiDuaGiaiThuongKhenThuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdHocVienNavigation.IdHocVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuongNavigation.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPhuongThucKhenThuongNavigation.IdPhuongThucKhenThuong)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDanhHieuThiDuaGiaiThuongKhenThuongNguoiHoc">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDanhHieuThiDuaGiaiThuongKhenThuongNguoiHoc">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDanhHieuThiDuaGiaiThuongKhenThuongNguoiHoc">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>

