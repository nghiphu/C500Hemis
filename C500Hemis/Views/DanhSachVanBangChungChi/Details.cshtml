    <div class="action-buttons">
        <a class="Nut1 Nut2" asp-action="Edit" asp-route-id="@Model?.IdDanhSachVanBangChungChi">SỬA</a>
        <a class="Nut1 Nut3" asp-action="Index">TRANG CHỦ</a>
