@model C500Hemis.Models.TbDoiTuongThamGium

@{
    ViewData["Title"] = "Delete";
}
@section Heads{
    <style>
        footer {
            visibility: hidden;
        }
    </style>
}
@*
    /*B8D55 AT13 Ca Kỳ Hòa*/
    Nội dung:
        - Tương tự như phần Details, có chức năng xóa
        - Hiển thị nội dung đã nhập
    Hình thức:
        - Sử dụng css làm đẹp
        - Đồng bộ phong cách với các phần khác với màu chủ đạo là đỏ và logo học viện an ninh
        - Có hiệu ứng tương tác với các thuộc tính
*@
<style>
    body {
        background-image: url(https://upload.wikimedia.org/wikipedia/vi/thumb/8/85/Logo_hoc_vien_ANND.png/330px-Logo_hoc_vien_ANND.png); /* Đặt ảnh nền là logo học viện */
        background-repeat: no-repeat; /* Không lặp lại ảnh nền */
        background-position: center; /* Căn giữa ảnh nền */
        background-color: rgb(195,34,34); /* Đặt màu nền chủ đạo là đỏ */
    }

    .khungchua {
        min-height: 80vh; /* Chiều cao tối thiểu là 80% chiều cao màn hình */
        width: 600px; /* Chiều rộng cố định là 600px */
        background-color: #FFF9; /* Màu nền trắng mờ */
        border-radius: 10px; /* Bo tròn góc cho khung chứa */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Đổ bóng mờ nhạt */
        margin: auto; /* Căn giữa khung chứa */
        backdrop-filter: blur(7px); /* Tạo hiệu ứng mờ phía sau khung chứa */
    }

    .header {
        background-color: #d5d1defe; /* Màu nền của phần header */
        border-radius: 10px 10px 0 0; /* Bo tròn góc trên của header */
        height: 105px; /* Chiều cao của header */
    }

    dt {
        white-space: nowrap; /* Ngăn cách đoạn văn bản bị xuống dòng */
    }

    h1, h3 {
        font-family: Apice; /* Đặt font chữ Apice cho tiêu đề */
        text-align: center; /* Căn giữa tiêu đề */
    }

    .row {
        padding: 20px; /* Khoảng đệm cho phần row */
        display: flex; /* Thiết lập flexbox */
        flex-wrap: wrap; /* Cho phép các mục con xuống hàng khi không đủ chỗ */
        text-align: center; /* Căn giữa văn bản bên trong row */
        padding-top: 80px; /* Khoảng đệm trên */
        padding-left: 50px; /* Khoảng đệm bên trái */
    }

    .btn-container {
        display: flex; /* Sử dụng flexbox cho nút */
        justify-content: center; /* Căn giữa các nút */
        margin-top: 20px; /* Khoảng cách phía trên các nút */
    }

    .btn-back {
        background-color: #41B06E; /* Màu nền xanh lá cho nút 'Back' */
        color: #E9EFEC; /* Màu chữ xanh nhạt */
        margin: 0 10px; /* Khoảng cách giữa các nút */
    }

        .btn-back:hover {
            background-color: #8DECB4; /* Màu nền khi rê chuột vào nút 'Back' */
            transform: scale(1.05); /* Phóng to nhẹ nút khi rê chuột */
        }

    .btn-danger:hover {
        transform: scale(1.05); /* Tạo hiệu ứng phóng to nhẹ khi rê chuột vào nút 'Danger' */
    }

    }
</style>

<div class="khungchua">
    <div class="header">
<h1>Xóa</h1>
<h3>Bạn có thật sự muốn xóa?</h3>
    </div>
<div>
    <dl class="row">
        <dt class = "col-sm-4">
            Mã loại tham gia
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.MaLoaiThamGia)
        </dd>
        <dt class = "col-sm-4">
            Loại tham gia
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.IdLoaiThamGiaNavigation.LoaiThamGia)
        </dd>
        <dt class = "col-sm-4">
            Id Người
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.IdNguoiNavigation.name)
        </dd>
        <dt class = "col-sm-4">
            Phân Loại
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.IdPhanLoaiNavigation.PhanLoaiDoiNguNguoiHoc)
        </dd>
        <dt class = "col-sm-4">
            Vai trò
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.IdVaiTroNavigation.VaiTroThamGia)
        </dd>
    </dl>
    <div class="d-flex justify-content-center btn-container mt-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdDoiTuongThamGia" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-back">Back to List</a>
    </form>
    </div>
</div>
</div>
