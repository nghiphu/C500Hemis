@model C500Hemis.Models.TbDoiTuongThamGium

@{
    ViewData["Title"] = "Details";
}
@section Heads{
    <style>
        footer {
            visibility: hidden;
        }
    </style>
}
<style>
    /*B8D55 AT13 Ca Kỳ Hòa*/

    body {
        background-image: url(https://upload.wikimedia.org/wikipedia/vi/thumb/8/85/Logo_hoc_vien_ANND.png/330px-Logo_hoc_vien_ANND.png);
        background-repeat: no-repeat;
        background-position: center;
        background-color: rgb(195,34,34);
    }

    .khungchua {
        min-height: 80vh;
        width: 600px;
        background-color: #FFF9;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        margin: auto;
        backdrop-filter: blur(7px);
    }

    h1, h4 {
        font-family: Apice;
        text-align: center;
    }

    .btn {
        display: inline-block;
        margin: 10px;
    }

    .btn-primary {
        background-color: #41B06E;
        color: #E9EFEC;
    }

    .btn-primary:hover {
        background-color: #8DECB4;
        transform: scale(1.05);
    }

    .btn-container{
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .header {
        background-color: #d5d1defe; /* Màu nền cho header */
        border-radius: 10px 10px 0 0; /* Bo góc cho phần trên */
        height: 100px;
    }
    .row{
        padding: 20px;
    }
    dl{
        text-align: center;
    }
    .row{
        padding-top: 80px;
    }
</style>

<div class="khungchua">
    <div class="header">
    <h1>Chi tiết</h1>
    <h4>Thông tin chi tiết <strong>@Model.IdNguoiNavigation.name</strong></h4>
    </div>
        <dl class="row">
            <dt class="col-sm-6">
                Mã loại tham gia
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.MaLoaiThamGia)
            </dd>
            <dt class="col-sm-6">
                Loại tham gia
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.IdLoaiThamGiaNavigation.LoaiThamGia)
            </dd>
            <dt class="col-sm-6">
                Họ và tên
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.IdNguoiNavigation.name)
            </dd>
            <dt class="col-sm-6">
                Phân loại
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.IdPhanLoaiNavigation.PhanLoaiDoiNguNguoiHoc)
            </dd>
            <dt class="col-sm-6">
                Vai trò
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.IdVaiTroNavigation.VaiTroThamGia)
            </dd>
        <div class="btn btn-container">
            <a asp-action="Edit" asp-route-id="@Model?.IdDoiTuongThamGia" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
        </dl>
</div>
