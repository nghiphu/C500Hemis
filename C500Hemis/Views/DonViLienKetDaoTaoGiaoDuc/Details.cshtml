@model C500Hemis.Models.TbDonViLienKetDaoTaoGiaoDuc

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #fff9e9;
            color: #553f3a;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
        }

        .container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 600px;
            width: 100%;
            margin: auto;
            background-color: #F3D0D7;
            margin-top: 20px;
            height:100%;
        }

        label {
            font-size: 16px;
            color: #553f3a;
        }

        h1 {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: black;
            text-align: center;
        }

        .cen {
            text-align: center;
            margin-top: 100px;
        }

        .custom-btn {
            width: 100%;
            padding: 10px;
            background-color:steelblue;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
           text-align: center;
        }

            .custom-btn:hover {
                background-color: #A1D8EC; /* Màu khi hover */
            }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #4b9ab4;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #A1D8EC;
            }

        .btn-back {
            color:darkred;
        }

            .btn-back:hover {
                font-weight: bold;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
                transform: scale(1.05);
            }

            .btn-back:active {
                font-weight: bolder;
                text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
            }

        .btn i {
            margin-right: 5px;
        }
    </style>
</head>

<h1><b>THÔNG TIN CHI TIẾT</b></h1>

<div class="container">
    <div class="row mb-3">
        <label asp-for="IdDonViLienKetDaoTaoGiaoDuc" class="col-sm-4 col-form-label"><b>ID Đơn Vị</b></label>
        <div class="col-sm-8">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdDonViLienKetDaoTaoGiaoDuc)" readonly>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="DiaChi" class="col-sm-4 col-form-label"><b>Địa Chỉ</b></label>
        <div class="col-sm-8">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.DiaChi)" readonly>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="DienThoai" class="col-sm-4 col-form-label"><b>Điện Thoại</b></label>
        <div class="col-sm-8">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.DienThoai)" readonly>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="IdCoSoGiaoDucNavigation" class="col-sm-4 col-form-label"><b>Cơ Sở Giáo Dục</b></label>
        <div class="col-sm-8">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdCoSoGiaoDucNavigation.TenDonVi)" readonly>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="IdLoaiLienKetNavigation" class="col-sm-4 col-form-label"><b>Loại Liên Kết</b></label>
        <div class="col-sm-8">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdLoaiLienKetNavigation.IdLoaiLienKet)" readonly>
        </div>
    </div>
</div>

<div class="cen">
    <a asp-action="Edit" asp-route-id="@Model?.IdDonViLienKetDaoTaoGiaoDuc" class="custom-btn ">Chỉnh sửa</a>||
    <a asp-action="Index" class="btn btn-back"><i class="fa-solid fa-circle-arrow-left"></i>QUAY LẠI DANH SÁCH</a>
</div>
