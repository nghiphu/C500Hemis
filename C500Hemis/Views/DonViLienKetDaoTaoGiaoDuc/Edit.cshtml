@model C500Hemis.Models.TbDonViLienKetDaoTaoGiaoDuc

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        body {
            background-color: #F0EBE3;
            color: #553f3a;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
        }

        .container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 600px;
            width: 100%;
            margin: auto;
            background-color: #F3D0D7;
        }

        h1 {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: black;
            text-align: center;
        }
        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .form-group label {
            font-weight: bold;
            color: #553f3a;
            width: 85%;
            margin-right: 10px;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #4b9ab4;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #A1D8EC;
        }

        .btn-back {
            color: black;
            margin-top: 100px;
            color: darkred;
        }

            .btn-back:hover {
                font-weight: bold;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
                transform: scale(1.05);
            }

            .btn-back:active {
                font-weight: bolder;
                text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
            }

        .btn i {
            margin-right: 5px;
        }
    </style>
</head>

<h1><b>CHỈNH SỬA THÔNG TIN</b> </h1>

<div class="container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdDonViLienKetDaoTaoGiaoDuc" />
        <div class="form-group">
            <label asp-for="IdDonViLienKetDaoTaoGiaoDuc" class="control-label"><b>ID Đơn Vị</b></label>
            <input asp-for="IdDonViLienKetDaoTaoGiaoDuc" class="form-control" asp-items="ViewBag.IdDonViLienKetDaoTaoGiaoDuc" />
        </div>
        <span asp-validation-for="IdDonViLienKetDaoTaoGiaoDuc" class="text-danger d-flex justify-content-end"></span>
        <div class="form-group">
            <label asp-for="IdCoSoGiaoDuc" class="control-label"><b>Cơ sở giáo dục</b></label>
            <select asp-for="IdCoSoGiaoDuc" class="form-control" asp-items="ViewBag.IdCoSoGiaoDuc"></select>
            <span asp-validation-for="IdCoSoGiaoDuc" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DiaChi" class="control-label"><b>Địa chỉ</b></label>
            <input asp-for="DiaChi" class="form-control" />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DienThoai" class="control-label"><b>Điện thoại</b></label>
            <input asp-for="DienThoai" class="form-control" />
            <span asp-validation-for="DienThoai" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdLoaiLienKet" class="control-label"><b>Loại liên kết</b></label>
            <select asp-for="IdLoaiLienKet" class="form-control" asp-items="ViewBag.IdLoaiLienKet"></select>
            <span asp-validation-for="IdLoaiLienKet" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Lưu" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-back" style="color: darkred">
        <i class="fa-solid fa-circle-arrow-left"></i>QUAY LẠI DANH SÁCH
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
