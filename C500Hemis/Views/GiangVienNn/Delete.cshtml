@model C500Hemis.Models.TbGiangVienNn

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #fff9e9;
            color: #553f3a;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
        }

        .container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 600px;
            width: 100%;
            margin: auto;
            background-color: #ccdee2;
            margin-top: 20px;
        }

        .info-table {
            background-color: #dce3e9;
            padding: 20px;
            border-radius: 10px;
        }

            .info-table label {
                font-weight: bold;
            }

        label {
            font-size: 16px;
            color: #553f3a;
        }

        h1 {
            color: #553f3a;
            text-align: center;
        }

        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            width: 100%;
        }

            .form-group label {
                font-weight: bold;
                color: #553f3a;
                width: 100%;
                margin-right: 10px;
            }

        .cen {
            text-align: center;
        }

        input[type="submit"] {
            width: 10%;
            padding: 10px;
            background-color: #EE2C2C;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #FF6A6A;
            }
    </style>
</head>

<h1>BẠN CÓ CHẮC CHẮN MUỐN XÓA?</h1>

<div class="container">
    <div class="form-group">
        <label asp-for="IdCanBo" class="control-label"><b>ID Cán bộ</b></label>
        <div class="col-sm-6">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdCanBoNavigation.IdCanBo)" readonly>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CoQuanChuQuanOnuocNgoai" class="control-label"><b>Cơ quan chủ quản ở nước ngoài</b></label>
        <div class="col-sm-6">
            <input type="text" class="form-control " value="@Html.DisplayFor(model => model.CoQuanChuQuanOnuocNgoai)" readonly>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="IdNoiDungHoatDongTaiVietNam" class="control-label"><b>ID Nội dung hoạt động tại Việt Nam</b></label>
        <div class="col-sm-6">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdNoiDungHoatDongTaiVietNamNavigation.IdNoiDungHoatDongTaiVietNam)" readonly>
        </div>
    </div>


</div>

<form asp-action="Delete" class="cen" style="margin-top:10px;">
    <input type="hidden" asp-for="IdGvnn" />
    <input type="submit" value="Xóa" class="btn btn-danger" />
</form>

</div>
<div>
    <a asp-action="Index" class="btn btn-back" style="margin-top:100px; color: #4b9ab4">
        <i class="fa-solid fa-circle-arrow-left"></i>Quay lại danh sách
    </a>
</div>