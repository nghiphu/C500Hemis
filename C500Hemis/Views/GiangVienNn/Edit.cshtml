@model C500Hemis.Models.TbGiangVienNn

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        body {
            background-color: #fff9e9;
            color: #553f3a;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
        }

        .container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 600px;
            width: 100%;
            margin: auto;
            background-color: #ccdee2;
        }

        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                color: #553f3a;
                width: 85%;
                margin-right: 10px;
            }

        label {
            font-size: 16px;
            color: #553f3a;
        }

        h1 {
            text-align: center;
            color: #553f3a;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #4b9ab4;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #A1D8EC;
            }
    </style>
</head>

<h1>CHỈNH SỬA THÔNG TIN</h1>

<div class="row">
    <div class="container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdGvnn" />
            <div class="form-group">
                <label asp-for="IdCanBo" class="control-label"><b>Tên Cán bộ</b></label>
                <select asp-for="IdCanBo" class="form-control" asp-items="ViewBag.IdCanBo"></select>
                <span asp-validation-for="IdCanBo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoQuanChuQuanOnuocNgoai" class="control-label"><b>Cơ quan chủ quản ở nước ngoài</b></label>
                <input asp-for="CoQuanChuQuanOnuocNgoai" class="form-control" />
                <span asp-validation-for="CoQuanChuQuanOnuocNgoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNoiDungHoatDongTaiVietNam" class="control-label"><b>Nội dung hoạt động tại Việt Nam</b></label>
                <select asp-for="IdNoiDungHoatDongTaiVietNam" class="form-control" asp-items="ViewBag.IdNoiDungHoatDongTaiVietNam"></select>
                <span asp-validation-for="IdNoiDungHoatDongTaiVietNam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-back" style="margin-top:100px; color: #4b9ab4">
        <i class="fa-solid fa-circle-arrow-left"></i>Quay lại danh sách
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
