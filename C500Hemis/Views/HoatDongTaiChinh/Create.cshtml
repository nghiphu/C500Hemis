@model C500Hemis.Models.TbHoatDongTaiChinh

@{
    ViewData["Title"] = "Create";
}
<a class="btn btn-head">
<h1>THÊM MỚI</h1>
</a>
<style>
    body {
       background-image: url(https://upload.wikimedia.org/wikipedia/vi/8/85/Logo_hoc_vien_ANND.png);
       background-position: center;
       background-repeat: no-repeat;
       background-color: rgb(204, 255, 204, 0.8);
       font-weight: bolder; /* tô đậm */
    }


    .form-container {
        max-width: 500px; /* chiều rộng tối đa của form */
        margin: auto; /* khoảng trắng */
        background-color: rgba(152, 251, 152, 0.95);
        padding: 30px; /* khoảng cách giữa đường viền và nội dung */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* đổ bóng */
        border-radius: 10px; /* bo góc */
        opacity: 0.95;

    }

    h1, h3 {
        text-align: center;
        color: #FF0000;
        margin-bottom: 20px; /* khoảng trắng ở dưới*/
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px; /* khoảng trắng ở dưới*/
    }

        table th, table td {
            padding: 10px; /* khoảng cách giữa chữ và đường viền */
            border: 1px solid #ddd;
            text-align: left;
        }

        table th {
            background-color: #4CAF50;
            color: #FF00FF;
        }

        table td {
            background-color: #00FFFF;
        }

        table tr:hover {
            background-color: #FFFF00;
        }

    .form-group label {
        font-weight: bold;
        color: #333;
        display: block; /* hiển thị phần tử thành một khối */
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #d1d1d1; /* độ rộng, đường viền không đứt đoạn, màu */
        border-radius: 5px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease; /* chuyển đổi mượt mà */
    }

        .form-control:focus {
            border-color: #05c46b;
            box-shadow: 0 0 5px rgba(5, 196, 107, 0.5); /* đổ bóng */
            outline: none; /* loại bỏ đường viền */
        }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #05c46b;
        border: none;
        color: #fff;
        font-weight: bold;
        border-radius: 5px;
        cursor: pointer; /* thay đổi khi chuột di chuyển qua */
        margin-top: 20px;
        transition: background-color 0.3s ease, transform 0.3s ease; /* Hiệu ứng chuyển đổi mượt và hiệu ứng nhấn nút */
    }

        .btn-primary:hover {
            background-color: #048a55;
            transform: scale(1.05); /* phóng to một chút */
        }

    .btn-back {
        background-color:#00CC00;
    }

        .btn-back:hover {
            font-weight: bold; /* Chữ sẽ đậm hơn khi hover */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); /* Thêm hiệu ứng bóng đổ khi hover */
            transform: scale(1.05); /* Tạo hiệu ứng phóng to nhẹ khi hover */

        }

        /* Khi nhấn nút */
        .btn-back:active {
            font-weight: bolder; /* Chữ sẽ đậm hơn khi nhấn */
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5); /* Thay đổi bóng đổ khi nhấn */
        }

    .btn-head {
        background-color: rgba(245, 255, 250, 0.8);
        width: 100%;
        height: 80px;
    }

        .btn-head:hover {
            background-color: rgba(245, 255, 250, 0.4);
        }

    .col-md-4 {
        width: 100%;
    }
</style>
<div class="form-container">
<h3>HOẠT ĐỘNG TÀI CHÍNH</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdHoatDongTaiChinh" class="control-label"></label>
                <input asp-for="IdHoatDongTaiChinh" class="form-control" />
                <span asp-validation-for="IdHoatDongTaiChinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdLoaiHoatDongTaiChinh" class="control-label"></label>
                <select asp-for="IdLoaiHoatDongTaiChinh" class ="form-control" asp-items="ViewBag.IdLoaiHoatDongTaiChinh"></select>
            </div>
            <div class="form-group">
                <label asp-for="NamTaiChinh" class="control-label"></label>
                <input asp-for="NamTaiChinh" class="form-control" />
                <span asp-validation-for="NamTaiChinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KinhPhi" class="control-label"></label>
                <input asp-for="KinhPhi" class="form-control" />
                <span asp-validation-for="KinhPhi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoiDung" class="control-label"></label>
                <input asp-for="NoiDung" class="form-control" />
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>

<div>
    <a asp-action="Index" class="btn btn-back" style="margin-top:100px; color: white">
        <i class="fa-solid fa-circle-arrow-left"></i>Quay lại danh sách
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
