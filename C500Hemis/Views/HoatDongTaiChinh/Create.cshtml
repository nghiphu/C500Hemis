@model C500Hemis.Models.TbHoatDongTaiChinh

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-image: url(https://upload.wikimedia.org/wikipedia/vi/8/85/Logo_hoc_vien_ANND.png);
        background-position: center;
        background-repeat: no-repeat;
        background-color: #ccffcc;
    }

    h1 {
        font-family: Apice;
        text-align: center;
        color: black;
    }

    h4 {
        font-family: Apice;
        text-align: center;
    }

    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #00FF00;
        padding: 20px;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form-control {
        width: 100%;
        max-width: 300px;
    }

    .btn-primary {
        background-color: #FFA500;
        color: white;
        display: block;
        margin: 0 auto;
    }

        .btn-primary:hover {
            background-color: #6A9C89;
            transform: scale(1.05);
        }

    /* Styling for the "Quay lại danh sách" button */
    .btn-blue {
        background-color: #FF4500;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        width: auto; /* Automatically fit the text */
        display: inline-block;
    }

        .btn-blue:hover {
            background-color: #6A9C89;
        }

    /* Center the "Quay lại danh sách" button */
    .back-button-container {
        text-align: center;
        margin-top: 20px;
    }
</style>

<h1>Tạo mới</h1>

<h4>Hoạt động tài chính</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdHoatDongTaiChinh" class="control-label">ID Hoạt động tài chính</label>
                <input asp-for="IdHoatDongTaiChinh" class="form-control" />
                <span asp-validation-for="IdHoatDongTaiChinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdLoaiHoatDongTaiChinh" class="control-label">ID Loại hoạt động tài chính</label>
                <select asp-for="IdLoaiHoatDongTaiChinh" class="form-control" asp-items="ViewBag.IdLoaiHoatDongTaiChinh"></select>
            </div>
            <div class="form-group">
                <label asp-for="NamTaiChinh" class="control-label">Năm tài chính</label>
                <input asp-for="NamTaiChinh" class="form-control" />
                <span asp-validation-for="NamTaiChinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KinhPhi" class="control-label">Kinh phí</label>
                <input asp-for="KinhPhi" class="form-control" />
                <span asp-validation-for="KinhPhi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoiDung" class="control-label">Nội dung</label>
                <input asp-for="NoiDung" class="form-control" />
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Centering the "Quay lại danh sách" button -->
<div class="back-button-container">
    <a class='btn-blue' asp-action="Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}