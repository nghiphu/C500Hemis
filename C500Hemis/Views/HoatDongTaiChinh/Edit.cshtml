@model C500Hemis.Models.TbHoatDongTaiChinh

@{
    ViewData["Title"] = "Edit";
}

<style>
    body{
        background-image: url(https://upload.wikimedia.org/wikipedia/vi/8/85/Logo_hoc_vien_ANND.png);
        background-position: center;
        background-repeat: no-repeat;
        background-color: #ccffcc;
    }

    .form group {
        margin-left: 300px;
    }
</style>
<h1 align="center">Chỉnh Sửa Thông Tin</h1>

<h4 style="text-align:center">Hoạt Động Tài Chính</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdHoatDongTaiChinh" />
            <div class="form-group">
                <label asp-for="IdLoaiHoatDongTaiChinh" class="control-label"><strong> ID Loại hoạt động tài chính</strong></label>
                <select asp-for="IdLoaiHoatDongTaiChinh" class="form-control" asp-items="ViewBag.IdLoaiHoatDongTaiChinh"></select>
                <span asp-validation-for="IdLoaiHoatDongTaiChinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamTaiChinh" class="control-label"><strong>Năm tài chính</strong></label>
                <input asp-for="NamTaiChinh" class="form-control" />
                <span asp-validation-for="NamTaiChinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KinhPhi" class="control-label"><strong>Kinh phí</strong></label>
                <input asp-for="KinhPhi" class="form-control" />
                <span asp-validation-for="KinhPhi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoiDung" class="control-label"><strong>Nội dung</strong></label>
                <input asp-for="NoiDung" class="form-control" />
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
