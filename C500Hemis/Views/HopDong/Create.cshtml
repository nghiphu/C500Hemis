@model C500Hemis.Models.TbHopDong

@{
    ViewData["Title"] = "Tạo hợp đồng";
}

<h1>Tạo hợp đồng</h1>

<h4>Hợp đồng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
