@model C500Hemis.Models.TbHopDong

@{
    ViewData["Title"] = "Xóa Hợp Đồng";
}

<div class="container mt-5 d-flex justify-content-center">
    <!-- Sử dụng card để bọc nội dung -->
    <div class="card shadow-lg border-0" style="width: 700px;">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Xóa Hợp Đồng</h3>
        </div>
        <div class="card-body">
            <h4 class="text-center text-warning">Bạn có chắc chắn muốn xóa hợp đồng này không?</h4>
            <hr />
            <dl class="row">
                <!-- Mã hợp đồng -->
                <dt class="col-sm-5 font-weight-bold">
                    @Html.DisplayNameFor(model => model.SoHopDong)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.SoHopDong)
                </dd>

                <!-- Số quyết định -->
                <dt class="col-sm-5 font-weight-bold">
                    @Html.DisplayNameFor(model => model.SoQuyetDinh)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.SoQuyetDinh)
                </dd>

                <!-- Ngày quyết định -->
                <dt class="col-sm-5 font-weight-bold">
                    @Html.DisplayNameFor(model => model.NgayQuyetDinh)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.NgayQuyetDinh)
                </dd>

                <!-- Có giá trị từ -->
                <dt class="col-sm-5 font-weight-bold">
                    @Html.DisplayNameFor(model => model.CoGiaTriTu)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.CoGiaTriTu)
                </dd>

                <!-- Có giá trị đến -->
                <dt class="col-sm-5 font-weight-bold">
                    @Html.DisplayNameFor(model => model.CoGiaTriDen)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.CoGiaTriDen)
                </dd>

                <!-- Làm việc toàn thời gian -->
                <dt class="col-sm-5 font-weight-bold">
                    @Html.DisplayNameFor(model => model.LamViecToanThoiGian)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.LamViecToanThoiGian)
                </dd>

                <!-- Cán bộ -->
                <dt class="col-sm-5 font-weight-bold">
                    @Html.DisplayNameFor(model => model.IdCanBoNavigation)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.IdCanBoNavigation.IdCanBo)
                </dd>

                <!-- Loại hợp đồng -->
                <dt class="col-sm-5 font-weight-bold">
                    @Html.DisplayNameFor(model => model.IdLoaiHopDongNavigation)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.IdLoaiHopDongNavigation.IdLoaiHopDong)
                </dd>

                <!-- Tình trạng hợp đồng -->
                <dt class="col-sm-5 font-weight-bold">
                    @Html.DisplayNameFor(model => model.IdTinhTrangHopDongNavigation)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.IdTinhTrangHopDongNavigation.IdTinhTrangHopDong)
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdHopDong" />
                <!-- Nút xóa với biểu tượng -->
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Xóa
                </button>
            </form>
            <!-- Nút quay lại với biểu tượng -->
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Sử dụng Bootstrap Icons nếu chưa có -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}