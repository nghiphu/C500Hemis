@model IEnumerable<C500Hemis.Models.TbHopDong>

@{
    ViewData["Title"] = "Danh sách hợp đồng";
}

<h1 class="text-center mt-4">Danh sách hợp đồng</h1>

<!-- Thêm nút tạo hợp đồng mới với class Bootstrap -->
<p class="text-right">
    <a class="btn btn-success" asp-action="Create">Tạo hợp đồng mới</a>
</p>

<!-- Bảng danh sách hợp đồng -->
<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.SoHopDong)</th>
            <th>@Html.DisplayNameFor(model => model.SoQuyetDinh)</th>
            <th>@Html.DisplayNameFor(model => model.NgayQuyetDinh)</th>
            <th>@Html.DisplayNameFor(model => model.CoGiaTriTu)</th>
            <th>@Html.DisplayNameFor(model => model.CoGiaTriDen)</th>
            <th>@Html.DisplayNameFor(model => model.LamViecToanThoiGian)</th>
            <th>@Html.DisplayNameFor(model => model.IdCanBoNavigation)</th>
            <th>@Html.DisplayNameFor(model => model.IdLoaiHopDongNavigation)</th>
            <th>@Html.DisplayNameFor(model => model.IdTinhTrangHopDongNavigation)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.SoHopDong)</td>
                <td>@Html.DisplayFor(modelItem => item.SoQuyetDinh)</td>
                <td>@Html.DisplayFor(modelItem => item.NgayQuyetDinh)</td>
                <td>@Html.DisplayFor(modelItem => item.CoGiaTriTu)</td>
                <td>@Html.DisplayFor(modelItem => item.CoGiaTriDen)</td>
                <td>@Html.DisplayFor(modelItem => item.LamViecToanThoiGian)</td>
                <td>@Html.DisplayFor(modelItem => item.IdCanBoNavigation.IdCanBo)</td>
                <td>@Html.DisplayFor(modelItem => item.IdLoaiHopDongNavigation.IdLoaiHopDong)</td>
                <td>@Html.DisplayFor(modelItem => item.IdTinhTrangHopDongNavigation.IdTinhTrangHopDong)</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.IdHopDong">Chỉnh sửa</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.IdHopDong">Chi tiết</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdHopDong">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Phân trang nếu có -->
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</nav>


