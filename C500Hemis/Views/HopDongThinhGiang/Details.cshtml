@model C500Hemis.Models.TbHopDongThinhGiang

@{
    ViewData["Title"] = "Chi tiết Hợp đồng Thịnh";
}
<style>
    body {
        background-color: #f0f4f8;
        font-family: Arial, sans-serif;
    }

    h1 {
        font-family: Apice;
        color: #34495e;
        text-align: center;
        margin-top: 20px;
    }

    h4 {
        font-family: Apice;
        color: #16423C;
        text-align: center;
        margin-bottom: 20px;
    }

    .details-container-2 {
        position: relative;
        padding: 30px;
        overflow: hidden;
    }

    .details-container {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        max-width: 600px;
        margin: 40px auto;
        text-align: left;
        border: 2px solid #2980b9;
        position: relative;
        z-index: 2;
    }

    .details-container-2::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        opacity: 0.1;
        z-index: 1;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #dee2e6;
        padding: 10px;
        text-align: left;
    }

  

    .action-links {
        text-align: center;
        margin-top: 20px;
    }


    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 2px solid #2980b9;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: rgba(22,66,60,0.5);
        color: #C4DAD2;
        font-size: 1.1em;
        font-weight: bold;
    }

    td {
        background-color: #E9EFEC;
        color: #2c3e50;
        font-size: 1em;
    }

    .action-links {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        background-color: #3498db;
        color: White;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #2980b9;
        }

    .btn-secondary {
        background-color: #e74c3c;
    }

        .btn-secondary:hover {
            background-color: #c0392b;
        }
</style>

<h1>HỢP ĐỒNG THỉNH GIẢNG</h1>

<div class="details-container">
    <h4> THÔNG TIN HỢP ĐỒNG </h4>
    <hr />
    <div class="details-container-2">
        <table>
            <tbody>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.MaHopDongThinhGiang)</th>
                    <td>@Html.DisplayFor(model => model.MaHopDongThinhGiang)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.SoSoLaoDong)</th>
                    <td>@Html.DisplayFor(model => model.SoSoLaoDong)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NgayCapSoLaoDong)</th>
                    <td>@Html.DisplayFor(model => model.NgayCapSoLaoDong)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NoiCapSoLaoDong)</th>
                    <td>@Html.DisplayFor(model => model.NoiCapSoLaoDong)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CoGiaTriTu)</th>
                    <td>@Html.DisplayFor(model => model.CoGiaTriTu)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CoGiaTriDen)</th>
                    <td>@Html.DisplayFor(model => model.CoGiaTriDen)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.TyLeThoiGianGiangDay)</th>
                    <td>@Html.DisplayFor(model => model.TyLeThoiGianGiangDay)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.IdCanBoNavigation)</th>
                    <td>@Html.DisplayFor(model => model.IdCanBoNavigation.IdCanBo)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.IdTrangThaiHopDongNavigation)</th>
                    <td>@Html.DisplayFor(model => model.IdTrangThaiHopDongNavigation.IdTrangThaiHopDong)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="action-links">
    <a class="btn" asp-action="Edit" asp-route-id="@Model?.IdHopDongThinhGiang">Chỉnh Sửa</a>
    <a class="btn btn-secondary" asp-action="Index">Quay Lại Danh Sách</a>
</div>