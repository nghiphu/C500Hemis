@model C500Hemis.Models.TbHopDongThinhGiang

@{
    ViewData["Title"] = "Edit";
}

<style>
    .row {
        width: 900px;
        background-color: transparent;
        color: black;
        border-radius: 10px;
        backdrop-filter: blur(20px);
        box-shadow: 0 0 10px rgba(0, 0, 0, .2);
        padding: 30px 40px;
        border: 2px solid rgba(255, 255, 255, .2);
        margin: auto;
        display: flex;
    }
    .row input {
        width: 100%;
        height: 35px;
        outline: none;
        border: 0.2px solid #000000;
        border-radius: 5px;
    }
    .row h1{
            color: #16423C;
        font-size: 35px;
        text-align: center;
        font-family: Apice;
    }

    .row h4 {
        text-align: center;
    }
    .form-group{
        font-size: 15px;
    } 
    .row form{
        margin: auto;
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* Tạo 2 cột có kích thước bằng nhau */
        grid-column-gap: 200px; /* Khoảng cách giữa các cột và hàng là 20px */
        white-space:nowrap;
        font-weight: bold;
    }
</style>


