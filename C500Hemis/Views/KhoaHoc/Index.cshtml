@model IEnumerable<C500Hemis.Models.TbKhoaHoc>

@{
    ViewData["Title"] = "Index";
}
@section Heads {
    <link href="https://cdn.datatables.net/v/dt/jq-3.7.0/dt-2.1.7/r-3.0.3/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/dt/jq-3.7.0/dt-2.1.7/r-3.0.3/datatables.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
<h1 style="text-align:center; color:darkred"><B>KHOÁ HỌC</B></h1>
<p class="text-end">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> tạo khoá học mới
    </a>
</p>
<style>
    /* Đặt viền đen cho bảng */
    .table {
        border: 3px solid black; /* Viền đen cho bảng */
        border-radius: 10px; /* Bo góc cho bảng */
        border-collapse: separate; /* Để bo góc không bị ảnh hưởng */
    }

    .table th, .table td {
            border: 2px solid black; /* Thêm viền đen cho các ô tiêu đề và dữ liệu */
            padding: 10px;
            text-align: center;
    }
    .table th {
        background-color: #4CAF50; /* Màu nền cho ô tiêu đề */
        color: white; /* Màu chữ trắng cho ô tiêu đề */
        text-align: center; /* Căn giữa nội dung */
        font-weight: bold; /* Chữ đậm */
    }
    .table th:nth-child(3), .table td:nth-child(3) {
        width: 350px; /* Điều chỉnh độ rộng của cột thao tác */
    }
    .table td {
        background-color: #f9f9f9; /* Màu nền cho ô dữ liệu */
        color: black; /* Màu chữ đen cho ô dữ liệu */
        text-align: center; /* Căn giữa nội dung */
    }
    .table tbody tr:nth-child(odd) td {
        background-color: #e6f7ff; /* Màu nền cho các ô dữ liệu ở hàng lẻ */
    }
    .table tbody tr:nth-child(even) td {
        background-color: #fff2e6; /* Màu nền cho các ô dữ liệu ở hàng chẵn */
    }
    body{
    background: pink;
    }
</style>
@{
    int stt = 0;
}
<table id="khoahoctable" class="table">
    <thead>
        <track style="text-align:center">
    <th>STT</th>
    <th>
       TỪ NĂM
    </th>
    <th>
       ĐẾN NĂM
    </th>
    <th>
       THAO TÁC
    </th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@(++stt)</td>
            <td>
                @Html.DisplayFor(modelItem => item.TuNam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DenNam)
            </td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.IdKhoaHoc" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdKhoaHoc" class="btn btn-sm btn-info">
                            <i class="bi bi-info-circle"></i> Chi Tiết
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdKhoaHoc" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
<script>

    new DataTable('#khoahoctable', {
        searching: true, // Mặc định là true, set false để tắt chức năng search
        info: true, // Tắt thông tin về table VD: Showing 1 to 14 of 14 entries
        language: {
            search: "Tìm kiếm",
            lengthMenu: "Điều chỉnh số lượng bản ghi trên 1 trang _MENU_ ",
            info: "Bản ghi từ _START_ đến _END_ Tổng công _TOTAL_ bản ghi",
            zeroRecords: "không tìm thấy kết quả",
            emptyTable: "Không có dữ liệu",
            paginate: {
                first: "Trang đầu",
                previous: "Trang trước",
                next: "Trang sau",
                last: "Trang cuối"
            },
        },
    });
</script>
