}
<h1>Bạn có chắc chắn muốn xóa thông tin khoản thu này</h1>



<div>
    <h4>Khoản nộp ngân sách</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaKhoanNop)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaKhoanNop)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenKhoanNopNganSach)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenKhoanNopNganSach)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SoTien)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoTien)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NamTaiChinh)
        </dt>
        <dd class="col-sm-10">
