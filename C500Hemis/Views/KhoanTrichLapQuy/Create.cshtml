@model C500Hemis.Models.TbKhoanTrichLapQuy

@{
    ViewData["Title"] = "Tạo mới";
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-image: linear-gradient(to right, #8360c3, #2ebf91);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        margin: 0;
        padding: 0;
        color: #333;
        height: 110vh;
    }

    h1 {
        text-align: center;
        color: #00796b;
        margin-top: 20px;
    }

    h4 {
        font-size: 24px;
        color: #00796b;
        text-align: center;
        margin-bottom: 20px;
    }

    hr {
        border: none;
        border-top: 2px solid #8360c3;
        margin-bottom: 20px;
    }

    .container {
        max-width: 600px;
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 300%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .text-danger {
        color: #e74c3c;
    }

    .btn-primary {
        background-image: linear-gradient(to right, #8360c3, #2ebf91);
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        justify-content: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin-top: 20px;
        border-radius: 4px;
    }

    .btn-primary:hover {
        background-image: linear-gradient(to left, #8360c3, #2ebf91);
    }

    .back-to-list {
        margin-top: 20px;
        margin-left: 10px;
    }

    .back-to-list a {
        color: #fff;
        background-image: linear-gradient(to right, #8360c3, #2ebf91);
        padding: 10px 20px;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .back-to-list a:hover {
        background-image: linear-gradient(to left, #8360c3, #2ebf91);
        margin-bottom: 50px;
    }

    .control-label {
        width: 150%;
        color: #00796b;
    }
</style>
<body>
    <h1>Tạo mới</h1>
    <div class="container">
        <h4>Khoản Trích Lập Quỹ</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="IdKhoanTrichLapQuy" class="control-label"></label>
                        <input asp-for="IdKhoanTrichLapQuy" class="form-control" />
                        <span asp-validation-for="IdKhoanTrichLapQuy" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MaKhoanTrichLapQuy" class="control-label"></label>
                        <input asp-for="MaKhoanTrichLapQuy" class="form-control" />
                        <span asp-validation-for="MaKhoanTrichLapQuy" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TenKhoanTrichLapQuy" class="control-label"></label>
                        <input asp-for="TenKhoanTrichLapQuy" class="form-control" />
                        <span asp-validation-for="TenKhoanTrichLapQuy" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NamTaiChinh" class="control-label"></label>
                        <input asp-for="NamTaiChinh" class="form-control" />
                        <span asp-validation-for="NamTaiChinh" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SoTien" class="control-label"></label>
                        <input asp-for="SoTien" class="form-control" />
                        <span asp-validation-for="SoTien" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
<div class="back-to-list">
    <a asp-action="Index">Back to List</a>
</div>
</body>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }