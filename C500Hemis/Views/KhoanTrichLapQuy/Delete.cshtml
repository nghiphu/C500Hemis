                @Html.DisplayNameFor(model => model.MaKhoanTrichLapQuy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaKhoanTrichLapQuy)
            </dd>
            <dt class="col-sm-2">
