            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NamTaiChinh)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SoTien)
            </dt>
            <dd class="col-sm-10">
