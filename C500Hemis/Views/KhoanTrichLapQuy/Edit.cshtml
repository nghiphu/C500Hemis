@model C500Hemis.Models.TbKhoanTrichLapQuy

@{
    ViewData["Title"] = "Chỉnh sửa";
}

<h1>Chỉnh sửa</h1>

<h4>Khoản Trích Lập Quỹ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdKhoanTrichLapQuy" />
            <div class="form-group">
                <label asp-for="MaKhoanTrichLapQuy" class="control-label"></label>
                <input asp-for="MaKhoanTrichLapQuy" class="form-control" />
                <span asp-validation-for="MaKhoanTrichLapQuy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenKhoanTrichLapQuy" class="control-label"></label>
                <input asp-for="TenKhoanTrichLapQuy" class="form-control" />
                <span asp-validation-for="TenKhoanTrichLapQuy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamTaiChinh" class="control-label"></label>
                <input asp-for="NamTaiChinh" class="form-control" />
                <span asp-validation-for="NamTaiChinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoTien" class="control-label"></label>
                <input asp-for="SoTien" class="form-control" />
                <span asp-validation-for="SoTien" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align: center;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="text-align: center; margin-top: 30px;">
    <a asp-action="Index" class="btn-back">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

