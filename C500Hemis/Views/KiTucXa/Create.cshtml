@model C500Hemis.Models.TbKiTucXa

@{
    ViewData["Title"] = "Tạo Mới";
}
@*Dương Minh Vũ*@
<h1>TẠO MỚI THÔNG TIN KÍ TÚC XÁ</h1>
<div class="form-container">
    <h4>Thông Tin Kí Túc Xá</h4>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="IdKiTucXa" class="control-label"></label>
            <input asp-for="IdKiTucXa" class="form-control" />
            <span asp-validation-for="IdKiTucXa" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MaKyTucxa" class="control-label"></label>
            <input asp-for="MaKyTucxa" class="form-control" />
            <span asp-validation-for="MaKyTucxa" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdHinhThucSoHuu" class="control-label"></label>
            <select asp-for="IdHinhThucSoHuu" class="form-control" asp-items="ViewBag.IdHinhThucSoHuu"></select>
        </div>
        <div class="form-group">
            <label asp-for="TongChoO" class="control-label"></label>
            <input asp-for="TongChoO" class="form-control" />
            <span asp-validation-for="TongChoO" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TongDienTich" class="control-label"></label>
            <input asp-for="TongDienTich" class="form-control" />
            <span asp-validation-for="TongDienTich" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdTinhTrangCsvc" class="control-label"></label>
            <select asp-for="IdTinhTrangCsvc" class="form-control" asp-items="ViewBag.IdTinhTrangCsvc"></select>
        </div>
        <div class="form-group">
            <label asp-for="SoPhong" class="control-label"></label>
            <input asp-for="SoPhong" class="form-control" />
            <span asp-validation-for="SoPhong" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NamDuaVaoSuDung" class="control-label"></label>
            <input asp-for="NamDuaVaoSuDung" class="form-control" />
            <span asp-validation-for="NamDuaVaoSuDung" class="text-danger"></span>
        </div>
        <div class="form-group" style="text-align: center; margin-top: 20px;">
            <button type="submit" class="btn btn-primary">Tạo Mới</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

<head>
    <style>
        body {
            background-color: lightblue; /* Màu nền nhẹ cho trang */
        }

        .form-container {
            max-width: 600px; /* Đặt chiều rộng tối đa cho khung chứa biểu mẫu */
            margin: auto; /* Căn giữa khung chứa */
            padding: 20px; /* Thêm khoảng đệm cho khung chứa */
            background-color: mintcream; /* Màu nền trắng cho khung chứa */
            font-size: 18px;
            border-radius: 10px; /* Bo góc cho khung chứa */
            border: 3px solid black; /* Thêm đường viền cho các ô */
        }

        h1, h4 {
            text-align: center; /* Căn giữa tiêu đề */
        }

        .form-group input {
            border: 2px solid #007bff; /* Đường viền màu xanh cho các trường nhập */
            border-radius: 5px; /* Bo góc cho các trường nhập */
            padding: 10px; /* Thêm khoảng đệm cho các trường nhập */
            transition: border-color 0.3s; /* Hiệu ứng chuyển màu đường viền */
        }

            .form-group input:focus {
                border-color: #0056b3; /* Đổi màu đường viền khi tập trung */
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Thêm bóng khi tập trung */
            }

        .btn {
            display: inline-block; /* Để các nút xếp hàng ngang */
            padding: 10px 20px; /* Khoảng đệm cho nút */
            border-radius: 5px; /* Bo góc cho nút */
            font-size: 16px; /* Kích thước font cho nút */
            text-decoration: none; /* Bỏ gạch chân cho liên kết */
            transition: background-color 0.3s, border-color 0.3s; /* Hiệu ứng chuyển màu nền và đường viền */
        }

        .btn-primary {
            background-color: limegreen; /* Màu nền cho nút chính */
            color: white; /* Màu chữ cho nút chính */
            border: none; /* Không có đường viền */
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Màu nền khi di chuột qua */
            }

        .btn-secondary {
            background-color: dodgerblue; /* Màu nền cho nút phụ */
            color: white; /* Màu chữ cho nút phụ */
            border: none; /* Không có đường viền */
            margin-left: 20px; /* Khoảng cách giữa các nút */
        }

            .btn-secondary:hover {
                background-color: #5a6268; /* Màu nền khi di chuột qua */
            }
    </style>
</head>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    } <!-- Kết nối các script xác thực -->
}

