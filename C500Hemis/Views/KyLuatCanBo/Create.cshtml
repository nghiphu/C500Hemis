@model C500Hemis.Models.TbKyLuatCanBo

@{
    ViewData["Title"] = "THÊM HỒ SƠ";
}

<h1>THÊM HỒ SƠ CÁN BỘ BỊ KỶ LUẬT</h1>
<h4>@ViewBag.Loi</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdKyLuatCanBo" class="control-label">ID kỷ luật</label>
                <input asp-for="IdKyLuatCanBo" class="form-control" />
                <span asp-validation-for="IdKyLuatCanBo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCanBo" class="control-label"> Họ và tên cán bộ</label>
                <select asp-for="IdCanBo" class ="form-control" asp-items="ViewBag.IdCanBo"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdLoaiKyLuat" class="control-label">Hình thức kỷ luật</label>
                <select asp-for="IdLoaiKyLuat" class ="form-control" asp-items="ViewBag.IdLoaiKyLuat"></select>
            </div>
            <div class="form-group">
                <label asp-for="LyDo" class="control-label">Lý do kỷ luật</label>
                <input asp-for="LyDo" class="form-control" />
                <span asp-validation-for="LyDo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCapQuyetDinh" class="control-label">Cấp quyết định</label>
                <select asp-for="IdCapQuyetDinh" class ="form-control" asp-items="ViewBag.IdCapQuyetDinh"></select>
            </div>
            <div class="form-group">
                <label asp-for="NgayThangNamQuyetDinh" class="control-label">Ngày nhận quyết định</label>
                <input asp-for="NgayThangNamQuyetDinh" class="form-control" />
                <span asp-validation-for="NgayThangNamQuyetDinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoQuyetDinh" class="control-label">Số quyết định</label>
                <input asp-for="SoQuyetDinh" class="form-control" />
                <span asp-validation-for="SoQuyetDinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamBiKyLuat" class="control-label">Năm bị kỷ luật</label>
                <input asp-for="NamBiKyLuat" class="form-control" />
                <span asp-validation-for="NamBiKyLuat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Xác nhận" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
