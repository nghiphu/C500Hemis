@model C500Hemis.Models.TbKyLuatCanBo

@{
    ViewData["Title"] = "THÊM HỒ SƠ";
}
@section Styles {
    <style>
        /* Thiết lập cơ bản cho form */
        form {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.6);
        }

        h1 {
            font-size: 36px;
            text-align: center; /*Căn giữa*/
            color: #333; 
            margin-bottom: 20px; /**/
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
            color: #444;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
            outline: none;
        }

        .text-danger {
            color: #e3342f;
        }

        /* Nút xác nhận */
        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 12px 20px;
            color: white;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        /* Nút quay lại */
        .back {
            display: inline-block;
            padding: 10px 15px;
            background-color: #6c757d;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            margin-top: 15px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }
        .submit {
            display: flex;
            justify-content: center;
        }

        .back:hover {
            background-color: #5a6268;
            transform: scale(1.05);
            color:white;
        }

        /* Canh giữa form */
        .row {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        /* Hiển thị lỗi */
        .validation-summary-errors {
            background-color: #f8d7da;
            color: yellow;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #f5c6cb;
            margin-bottom: 20px;
        }

    </style>
}


<div class="row">
    <div class="background-image"></div>
    <div class="col-md-6">
        <form asp-action="Create">
            <h1>THÊM HỒ SƠ KỶ LUẬT</h1>
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="form-group">
                <label asp-for="IdKyLuatCanBo" class="control-label">ID kỷ luật</label>
                <input asp-for="IdKyLuatCanBo" class="form-control" />
                <span asp-validation-for="IdKyLuatCanBo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdCanBo" class="control-label"> Họ và tên cán bộ</label>
                <select asp-for="IdCanBo" class="form-control" asp-items="ViewBag.IdCanBo"></select>
            </div>

            <div class="form-group">
                <label asp-for="IdLoaiKyLuat" class="control-label">Hình thức kỷ luật</label>
                <select asp-for="IdLoaiKyLuat" class="form-control" asp-items="ViewBag.IdLoaiKyLuat"></select>
            </div>

            <div class="form-group">
                <label asp-for="LyDo" class="control-label">Lý do kỷ luật</label>
                <input asp-for="LyDo" class="form-control" />
                <span asp-validation-for="LyDo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdCapQuyetDinh" class="control-label">Cấp quyết định</label>
                <select asp-for="IdCapQuyetDinh" class="form-control" asp-items="ViewBag.IdCapQuyetDinh"></select>
            </div>

            <div class="form-group">
                <label asp-for="NgayThangNamQuyetDinh" class="control-label">Ngày nhận quyết định</label>
                <input asp-for="NgayThangNamQuyetDinh" class="form-control" />
                <span asp-validation-for="NgayThangNamQuyetDinh" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SoQuyetDinh" class="control-label">Số quyết định</label>
                <input asp-for="SoQuyetDinh" class="form-control" />
                <span asp-validation-for="SoQuyetDinh" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NamBiKyLuat" class="control-label">Năm bị kỷ luật</label>
                <input asp-for="NamBiKyLuat" class="form-control" />
                <span asp-validation-for="NamBiKyLuat" class="text-danger"></span>
            </div>
            <div class="sub_back">
                <div class="submit">
                    <input type="submit" value="Xác nhận" class="btn btn-primary" />
                </div>
                
                    <a class="back" asp-action="Index">Quay lại</a>
               
            </div>
           
        </form>

       
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
