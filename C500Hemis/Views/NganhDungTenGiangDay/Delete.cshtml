@model C500Hemis.Models.TbNganhDungTenGiangDay

@{
    ViewData["Title"] = "Delete";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .container {
        padding: 20px;
        background-color: white;
        max-width: 800px;
        margin: 40px auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        border: 1px solid #ddd;
    }

    h1 {
        text-align: center;
        color: #dc3545;
        font-family: 'Segoe UI', sans-serif;
        margin-bottom: 20px;
    }

    h3 {
        text-align: center;
        color: #343a40;
        font-family: 'Segoe UI', sans-serif;
        margin-bottom: 30px;
    }

    hr {
        border: 1px solid #f1f1f1;
    }

    .row {
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }

    dt {
        font-weight: bold;
        color: #6c757d;
        flex-basis: 30%; /* Giữ chiều rộng đồng đều */
        max-width: 200px; /* Đảm bảo không vượt quá */
        text-align: left;
    }

    dd {
        color: #343a40;
        background-color: #f8f9fa;
        padding: 10px;
        border-radius: 4px;
        flex-basis: 65%; /* Giữ chiều rộng đồng đều */
        max-width: calc(100% - 200px); /* Đảm bảo cùng chiều rộng với dt */
        margin: 0;
        text-align: left;
    }

    form {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 30px;
        width: 150px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<div class="container">
    <h1><i class="fa fa-trash"></i> Xoá thông tin</h1>
    <h3>Bạn có chắc muốn xoá thông tin này? </h3>

    <div>
        <hr />
        <dl class="row">
            <dt>Cán bộ giảng dạy:</dt>
            <dd>@Html.DisplayFor(model => model.TenCanBo)</dd>


            <dt>Mã ngành đào tạo:</dt>
            <dd>@Html.DisplayFor(model => model.IdNganhDaoTaoNavigation.IdNganhDaoTao)</dd>

            <dl class="row">
                <dt>Ngành giảng dạy:</dt>
                <dd>@Html.DisplayFor(model => model.TenNganhGiangDay)</dd>
            </dl>

            <dl class="row">
                <dt>Ngày bắt đầu giảng dạy:</dt>
                <dd>@Html.DisplayFor(model => model.NgayBatDau)</dd>
            </dl>

           
            <dt>Trọng số:</dt>
            <dd>@Html.DisplayFor(model => model.TrongSo)</dd>
        </dl>

        <form asp-action="Xoá">
            <input type="hidden" asp-for="IdNganhDungTenGiangDay" />
            <input type="submit" value="Xoá" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
        </form>
    </div>
</div>