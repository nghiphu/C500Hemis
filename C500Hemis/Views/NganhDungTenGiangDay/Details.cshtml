@model C500Hemis.Models.TbNganhDungTenGiangDay

@{
    ViewData["Title"] = "Chỉnh sửa thông tin ";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://kit.fontawesome.com/yourcode.js" crossorigin="anonymous"></script>

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: white;
    }

    * {
        box-sizing: border-box;
    }


    .container {
        padding: 16px;
        background-color: white;
    }

    /* Full-width input */
    input[type=text], input[type=date], input[type=email], input[type=number], select {
        width: 100%;
        padding: 15px;
        margin: 5px 0 22px 0;
        display: inline-block;
        border: none;
        background: #f1f1f1;
    }

        input[type=text]:focus, input[type=date], input[type=email], input[type=number], select :focus {
            background-color: #ddd;
            outline: none;
        }

    /* Overwrite default styles of hr */
    hr {
        border: 1px solid #f1f1f1;
        margin-bottom: 25px;
    }

    /* Set a style for the submit button */
    .registerbtn {
        background-color: rgb(236 171 83);
        color: white;
        padding: 16px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        opacity: 0.9;
    }

        .registerbtn:hover {
            opacity: 1;
        }

    /* Add a blue text color to links */
    a {
        color: dodgerblue;
    }

    /* Set a grey background color and center the text of the "sign in" section */
    .signin {
        background-color: #f1f1f1;
        text-align: center;
    }

    .button1 {
        background-color: #58257b;
        border: none;
        color: white;
        padding: 16px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        -webkit-transition-duration: 0.4s;
        transition-duration: 0.4s;
        cursor: pointer;
        border-radius: 4px;
    }



    .button8 {
        background-color: forestgreen;
        color: white;
        border: 2px solid forestgreen;
    }

        .button8:hover {
            background-color: white;
            color: black;
            border: 2px solid forestgreen;
        }

    .btn {
        background-color: DodgerBlue;
        border: none;
        color: white;
        padding: 12px 16px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 30px;
    }

        /* Darker background on mouse-over */
        .btn:hover {
            background-color: RoyalBlue;
        }
</style>


<div>


    <h1 style="text-align:center; color: #CCCC00; font-family: Arial, Helvetica, sans-serif"><b>Thông tin chi tiết</b></h1>
    <p style="text-align: center;"><img src="https://upload.wikimedia.org/wikipedia/vi/8/85/Logo_hoc_vien_ANND.png" alt="Học viện An ninh nhân dân"></p>

    <div>
        <button class="btn" style=" background-color: Forestgreen;text-decoration:none; color: black"><i class="fa fa-home"></i>  <a asp-action="Index" style="text-decoration:none"><b>Trở về </b></a></button>

    </div>

    <hr />
    <dl class="row" style="text-align:center">
        <dt class="col-sm-2">
            Mã cán bộ:
        </dt>
        <dd class="col-sm-10" style="text-align:center">
            @Html.DisplayFor(model => model.IdCanBoNavigation.IdCanBo)
        </dd>
        <dt class="col-sm-2">
            Cán bộ giảng dạy:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenCanBo)
        </dd>
        <dt class="col-sm-2">
            Mã đào tạo:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdNganhDaoTaoNavigation.IdNganhDaoTao)
        </dd>
        <dt class="col-sm-2">
            Ngành giảng dạy:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenNganhGiangDay)
        </dd>
        <dt class="col-sm-2">
            Ngày bắt đầu giảng dạy:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgayBatDau)
        </dd>
        <dt class="col-sm-2">
            Ngày kết thúc giảng dạy:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgayKetThuc)
        </dd>
        <dt class="col-sm-2">
            Trọng số:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrongSo)
        </dd>



    </dl>
</div>
<div style="text-align:center">
    <a asp-action="Edit" asp-route-id="@Model?.IdNganhDungTenGiangDay">Chỉnh sửa</a> |
    <a asp-action="Index">Trở về</a>
</div>
