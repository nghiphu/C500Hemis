        }
    .btn:hover {
        transform: translateY(-5px); /* Nổi lên khi hover */
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2); /* Tạo bóng đổ */
    }

    .btn {
        border-radius: 20px; /* Bo góc nút */
        transition: all 0.3s ease; /* Hiệu ứng chuyển động cho nút */
    }

        body{
