@model IEnumerable<C500Hemis.Models.TbNgonNguGiangDay>

@{
    ViewData["Title"] = "Index";
}
@section Heads
{
    <link href="https://cdn.datatables.net/v/dt/jq-3.7.0/dt-2.1.7/r-3.0.3/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/dt/jq-3.7.0/dt-2.1.7/r-3.0.3/datatables.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

}
<h1 class="mb-4" style="text-align:center; font-size:30px">Chương Trình Đào Tạo</h1>

<p style="text-align:center">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table table-striped table-bordered table-hover mt-3" id="ntable" style="text-align:center">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.IdChuongTrinhDaoTaoNavigation)</th>
            <th>@Html.DisplayNameFor(model => model.IdNgonNguNavigation)</th>
            <th>@Html.DisplayNameFor(model => model.IdTrinhDoNgonNguDauVaoNavigation)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IdChuongTrinhDaoTaoNavigation.IdChuongTrinhDaoTao)</td>
                <td>@Html.DisplayFor(modelItem => item.IdNgonNguNavigation.IdNgoaiNgu)</td>
                <td>@Html.DisplayFor(modelItem => item.IdTrinhDoNgonNguDauVaoNavigation.IdKhungNangLucNgoaiNgu)</td>
                <td class="text-center">
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.IdNgonNguGiangDay">
                        <i class="fas fa-edit"></i>
                        Edit
                    </a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.IdNgonNguGiangDay">
                        <i class="fas fa-info-circle"></i>
                        Details
                    </a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdNgonNguGiangDay">
                        <i class="fas fa-trash"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>

    new DataTable('#ntable', {
        searching: true, // Mặc định là true, set false để tắt chức năng search
        processing: true,
        info: false, // Tắt thông tin về table VD: Showing 1 to 14 of 14 entries
        language: {
            processing: "Message khi đang tải dữ liệu",
            search: "Tìm kiếm",
            lengthMenu: "Điều chỉnh số lượng bản ghi trên 1 trang _MENU_ ",
            info: "Bản ghi từ _START_ đến _END_ Tổng công _TOTAL_ bản ghi",
            infoEmpty: "Khi không có dữ liệu, Hiển thị 0 bản ghi trong 0 tổng cộng 0 ",
            infoFiltered: "(Message bổ sung cho info khi không search đc record nào _MAX_)",
            infoPostFix: "Alo Alo", // Cái này khi thêm vào nó sẽ đứng sau info
            loadingRecords: "",
            zeroRecords: "Khi tìm kiếm không match với record nào",
            emptyTable: "Không có dữ liệu",
            paginate: {
                first: "Trang đầu",
                previous: "Trang trước",
                next: "Trang sau",
                last: "Trang cuối"
            },
            aria: {
                sortAscending: ": Message khi đang sắp xếp theo column",
                sortDescending: ": Message khi đang sắp xếp theo column",
            }
        },
    });
</script>