@model C500Hemis.Models.TbNguoiHocVayTinDung

@{
    ViewData["Title"] = "Details";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #e9f5fb; /* Màu nền nhẹ nhàng */
        background-image: url('https://example.com/your-background-image.jpg'); /* Thêm hình nền */
        background-size: cover; /* Đảm bảo hình nền phủ toàn bộ */
        padding: 20px;
    }

    h1 {
        font-size: 45px; /* Tăng kích thước tiêu đề */
        margin-bottom: 20px;
        text-align: center;
        color: #0056b3; /* Màu tiêu đề đậm */
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2); /* Đổ bóng cho tiêu đề */
    }

    h4 {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #007bff; /* Màu tiêu đề phụ */
    }

    .form-container {
        padding: 30px;
        margin: 0 auto;
        width: 70%;
        background-color: rgba(255, 255, 255, 0.9); /* Nền trắng với độ trong suốt */
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); /* Bóng đổ nhẹ */
    }

    dl.row dt, dl.row dd {
        margin-bottom: 10px;
    }

    dt {
        font-weight: bold;
        border: 2px solid #007bff; /* Đường viền màu xanh */
        border-radius: 8px;
        padding: 10px;
        background-color: #d1ecf1; /* Màu nền cho label */
        color: #0c5460; /* Màu chữ cho label */
    }

    dd {
        margin-bottom: 10px;
        border: 2px solid #007bff; /* Đường viền màu xanh */
        border-radius: 8px;
        padding: 10px;
        background-color: #f8f9fa; /* Màu nền cho giá trị */
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        margin-top: 10px;
        margin-right: 10px;
        border-radius: 5px;
        text-decoration: none;
        transition: transform 0.2s; /* Hiệu ứng chuyển động */
    }

    .btn-primary {
        background-color: #007bff; /* Màu nút chính */
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Màu khi hover */
            transform: scale(1.05); /* Tăng kích thước khi hover */
        }

    .btn-secondary {
        background-color: #6c757d; /* Màu nút phụ */
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Màu khi hover */
            transform: scale(1.05); /* Tăng kích thước khi hover */
        }

    hr {
        margin-top: 20px;
        margin-bottom: 20px;
        border: 0;
        border-top: 1px solid #dee2e6;
    }
</style>

<div class="form-container">
    <h1>Chi tiết</h1>
    <h4>Người học vay tín dụng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SoTienDuocVay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoTienDuocVay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenToChucTinDung)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenToChucTinDung)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NgayVay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgayVay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiaChi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ThoiHanVay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ThoiHanVay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdHocVienNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdHocVienNavigation.IdNguoiNavigation.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TinhTrangVayNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TinhTrangVayNavigation.TuyChon)
        </dd>
    </dl>
    <hr />
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.IdNguoiHocVayTinDung" class="btn btn-primary">Chỉnh sửa</a> |
        <a asp-action="Index" class="btn btn-secondary">Về trang chủ</a>
    </div>
</div>
