@model C500Hemis.Models.TbNhomNghienCuuManh

@{
    ViewData["Title"] = "Tạo mới";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="form-container">
        <form asp-action="Create">
            <h4 class="text-center form-title">Nhóm Nghiên Cứu Mạnh</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdNhomNghienCuuManh" class="control-label">Mã nhóm nghiên cứu mạnh</label>
                <input asp-for="IdNhomNghienCuuManh" class="form-control" />
                <span asp-validation-for="IdNhomNghienCuuManh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNhomNghienCuuManh" class="control-label">Mã nhóm</label>
                <input asp-for="MaNhomNghienCuuManh" class="form-control" />
                <span asp-validation-for="MaNhomNghienCuuManh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenNhomNghienCuuManh" class="control-label">Tên nhóm nghiên cứu mạnh</label>
                <input asp-for="TenNhomNghienCuuManh" class="form-control" />
                <span asp-validation-for="TenNhomNghienCuuManh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoQuyetDinhThanhLap" class="control-label">Số quyết định thành lập</label>
                <input asp-for="SoQuyetDinhThanhLap" class="form-control" />
                <span asp-validation-for="SoQuyetDinhThanhLap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToChucBanHanhQuyetDinh" class="control-label">Tổ chức ban hành quyết định</label>
                <input asp-for="ToChucBanHanhQuyetDinh" class="form-control" />
                <span asp-validation-for="ToChucBanHanhQuyetDinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayQuyetDinh" class="control-label">Ngày quyết định</label>
                <input asp-for="NgayQuyetDinh" class="form-control" type="text" id="ngay-quyet-dinh-picker" />
                <span asp-validation-for="NgayQuyetDinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CacNhiemVuNckh" class="control-label">Các nhiệm vụ NCKH</label>
                <input asp-for="CacNhiemVuNckh" class="form-control" />
                <span asp-validation-for="CacNhiemVuNckh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TomTatKetQuaDatDuoc" class="control-label">Tóm tắt kết quả đạt được</label>
                <input asp-for="TomTatKetQuaDatDuoc" class="form-control" />
                <span asp-validation-for="TomTatKetQuaDatDuoc" class="text-danger"></span>
            </div>


            <div class="form-group text-center">
                <a asp-action="Index" class="btn btn-secondary  btn-spacing">Quay lại</a> <!-- Thêm mx-2 để thêm khoảng cách giữa các nút -->
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />

    <script>
        $(function () {
            $("#ngay-quyet-dinh-picker").datepicker({
                dateFormat: "yy-mm-dd", // Định dạng ngày
                showButtonPanel: true,
                changeMonth: true,
                changeYear: true
            });
        });
    </script>
}

