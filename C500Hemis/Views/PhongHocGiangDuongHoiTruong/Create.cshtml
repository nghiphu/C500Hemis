                <select asp-for="IdPhanLoaiCsvc" class ="form-control" asp-items="ViewBag.IdPhanLoaiCsvc"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdLoaiPhongHoc" class="control-label"></label>
                <select asp-for="IdLoaiPhongHoc" class ="form-control" asp-items="ViewBag.IdLoaiPhongHoc"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdLoaiDeAn" class="control-label"></label>
                <select asp-for="IdLoaiDeAn" class ="form-control" asp-items="ViewBag.IdLoaiDeAn"></select>
            </div>
            <div class="form-group">
                <label asp-for="NamDuaVaoSuDung" class="control-label"></label>
                <input asp-for="NamDuaVaoSuDung" class="form-control" />
                <span asp-validation-for="NamDuaVaoSuDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>
<div class="back">
    <a asp-action="Index">Trở lại</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
