@model C500Hemis.Models.TbPhongHocGiangDuongHoiTruong

@{
    ViewData["Title"] = "Create";
}

<h1 align="center">Tạo mới</h1>

<h4 align="center">Thông Tin Phòng Học Giảng Đường Hội Trường</h4>
<hr />
<style>
    .form-group {
        padding: 10px 50px;
        margin-right: 5px;
        background-color: mintcream;
        color: black;
        text-decoration: none;
        border-radius: 3px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .col-md-4 {
        margin: auto;
    }

    .row {
        margin: auto;
        padding: auto;
    }

    .action-links a {
        padding: auto;
        margin-right: auto;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
        transition: background-color 0.3s ease;
        margin: 100px;
        margin-bottom: auto;
    }

    . back {
        padding: auto;
    }
</style>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
