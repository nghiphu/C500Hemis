                <input asp-for="QuyMoChoNgoi" class="form-control" />
                <span asp-validation-for="QuyMoChoNgoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTinhTrangCoSoVatChat" class="control-label"></label>
                <select asp-for="IdTinhTrangCoSoVatChat" class ="form-control" asp-items="ViewBag.IdTinhTrangCoSoVatChat"></select>
