                <input asp-for="IdPhongHocGiangDuongHoiTruong" class="form-control" />
                <span asp-validation-for="IdPhongHocGiangDuongHoiTruong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaPhongHocGiangDuongHoiTruong" class="control-label"></label>
                <input asp-for="MaPhongHocGiangDuongHoiTruong" class="form-control" />
                <span asp-validation-for="MaPhongHocGiangDuongHoiTruong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenPhongHocGiangDuongHoiTruong" class="control-label"></label>
                <input asp-for="TenPhongHocGiangDuongHoiTruong" class="form-control" />
                <span asp-validation-for="TenPhongHocGiangDuongHoiTruong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DienTich" class="control-label"></label>
                <input asp-for="DienTich" class="form-control" />
                <span asp-validation-for="DienTich" class="text-danger"></span>
            </div>
            <div class="form-group">
