@model C500Hemis.Models.TbPhongThiNghiem

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Phòng Thí Nghiệm</title>
    <style>
        header{
                display: none;
            }
        /* Ẩn footer mặc định */
        footer {
            display: none;
        }

        /* Thiết lập font chữ và nền cho toàn bộ trang */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #f0f4f8, #d9e2ec); /* Nền gradient hiện đại */
            margin: 0;
            padding: 0;
            min-height: 100vh; /* Đảm bảo nội dung chiếm hết chiều cao màn hình */
            display: flex; /* Sử dụng flexbox để căn giữa */
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center; /* Căn giữa theo chiều dọc */
        }

        /* Phần chứa nội dung chính của trang */
        .wrapper {
            background-color: #ffffff; /* Màu nền trắng */
            padding: 40px; /* Khoảng cách padding xung quanh nội dung */
            border-radius: 10px; /* Bo góc cho khung */
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1); /* Bóng đổ để tạo chiều sâu */
            width: 100%; /* Chiều rộng 100% */
            max-width: 600px; /* Giới hạn chiều rộng tối đa */
            text-align: center; /* Căn giữa văn bản */
            animation: fadeIn 1s ease-in-out; /* Hiệu ứng xuất hiện từ từ */
        }

        /* Hiệu ứng khi trang được tải */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px); /* Bắt đầu từ vị trí cao hơn một chút */
            }

            to {
                opacity: 1;
                transform: translateY(0); /* Đưa về vị trí ban đầu */
            }
        }

        /* Tiêu đề chính và phụ */
        .main-function h1, .row h1 {
            color: #2c3e50; /* Màu xanh đậm */
        }

        #main-text {
            font-size: 2em; /* Kích thước lớn cho tiêu đề chính */
            color: #2c3e50;
            margin-bottom: 10px; /* Khoảng cách dưới */
        }

        #main-text-2 {
            font-size: 1.5em; /* Kích thước nhỏ hơn cho tiêu đề phụ */
            color: #34495e;
            margin-bottom: 20px;
        }

        /* Đường kẻ phân cách */
        hr {
            border: none;
            height: 2px;
            background-color: #e0e0e0; /* Màu nhạt cho đường kẻ */
            margin: 20px 0;
        }

        /* Định dạng cho nhóm các trường trong form */
        .form-group {
            margin-bottom: 20px;
            text-align: left; /* Căn trái cho nhãn và ô nhập */
        }

        .form-group label {
            display: block; /* Hiển thị mỗi nhãn trên một dòng */
            margin-bottom: 5px; /* Khoảng cách dưới nhãn */
            color: #333333;
            font-weight: bold; /* Chữ đậm */
        }

        .form-control {
            width: 100%; /* Đảm bảo chiều rộng bằng khung chứa */
            padding: 10px 15px; /* Khoảng cách trong ô nhập */
            border: 1px solid #cccccc; /* Đường viền màu xám nhạt */
            border-radius: 5px; /* Bo góc cho ô nhập */
            transition: border-color 0.3s, box-shadow 0.3s; /* Hiệu ứng khi focus */
        }

        .form-control:focus {
            border-color: #3498db; /* Đổi màu viền khi focus */
            outline: none; /* Bỏ viền mặc định */
            box-shadow: 0 0 5px rgba(52, 152, 219, 0.5); /* Hiệu ứng bóng mờ khi focus */
        }

        /* Định dạng cho văn bản lỗi */
        .text-danger {
            color: #e74c3c; /* Màu đỏ cho cảnh báo */
            font-size: 0.9em;
            margin-top: 5px;
            display: block; /* Hiển thị trên một dòng riêng */
        }

        /* Căn chỉnh nút bấm */
        .form-button {
            text-align: center;
            margin-top: 30px;
        }

        /* Nút bấm chính */
        .button {
            background-color: #3498db; /* Màu nền xanh dương */
            color: #ffffff; /* Màu chữ trắng */
            padding: 12px 30px; /* Khoảng cách nội dung trong nút */
            border: none; /* Không có viền */
            border-radius: 5px; /* Bo góc */
            cursor: pointer;
            font-size: 1em;
            transition: background-color 0.3s, transform 0.2s; /* Hiệu ứng khi hover */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Bóng đổ nhẹ */
        }

        .button:hover {
            background-color: #2980b9; /* Đổi màu nền khi hover */
        }

        .button:active {
            transform: scale(0.98); /* Hiệu ứng thu nhỏ khi bấm */
        }

        /* Liên kết "Trở lại" */
        .back {
            text-align: center;
            margin-top: 20px;
        }

        .back a {
            color: #3498db; /* Màu xanh dương */
            text-decoration: none; /* Bỏ gạch chân */
            font-weight: bold;
            transition: color 0.3s; /* Hiệu ứng khi hover */
        }

        .back a:hover {
            color: #2980b9; /* Đổi màu khi hover */
        }

        /* Thiết kế responsive cho các thiết bị nhỏ */
        @@media (max-width: 600px) {
            .wrapper {
                padding: 20px;
                width: 90%;
            }

            #main-text {
                font-size: 1.5em; /* Điều chỉnh kích thước chữ cho tiêu đề */
            }

            #main-text-2 {
                font-size: 1.2em;
            }

            .form-group {
                margin-bottom: 15px;
            }

            .button {
                width: 100%; /* Nút chiếm hết chiều ngang màn hình */
                padding: 10px 0;
            }

            .back a {
                display: block; /* Hiển thị liên kết trên một dòng riêng */
                margin-top: 10px;
            }
        }

    </style>
</head>
<body>
    <div class="wrapper">
        <div class="main-function">
            <h1 id="main-text">THÊM THÔNG TIN</h1>
        </div>
        <div class="row">
            <h1 id="main-text-2">PHÒNG THÍ NGHIỆM</h1>
            <hr>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdPhongThiNghiem" class="control-label"></label>
                    <input asp-for="IdPhongThiNghiem" class="form-control" />
                    <span asp-validation-for="IdPhongThiNghiem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdCongTrinhCsvc" class="control-label"></label>
                    <select asp-for="IdCongTrinhCsvc" class="form-control" asp-items="ViewBag.IdCongTrinhCsvc"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdLoaiPhongThiNghiem" class="control-label"></label>
                    <select asp-for="IdLoaiPhongThiNghiem" class="form-control" asp-items="ViewBag.IdLoaiPhongThiNghiem"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdLinhVuc" class="control-label"></label>
                    <select asp-for="IdLinhVuc" class="form-control" asp-items="ViewBag.IdLinhVuc"></select>
                </div>
                <div class="form-group">
                    <label asp-for="MucDoDapUngNhuCauNckh" class="control-label"></label>
                    <input asp-for="MucDoDapUngNhuCauNckh" class="form-control" />
                    <span asp-validation-for="MucDoDapUngNhuCauNckh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NamDuaVaoSuDung" class="control-label"></label>
                    <input asp-for="NamDuaVaoSuDung" class="form-control" />
                    <span asp-validation-for="NamDuaVaoSuDung" class="text-danger"></span>
                </div>
                <div class="form-button">
                    <input type="submit" value="Thêm " class="button" />
                </div>
            </form>
        </div>
        <div class="back">
            <a asp-action="Index">Trở lại</a>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

