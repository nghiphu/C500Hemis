@model C500Hemis.Models.TbPhongThiNghiem

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Phòng Thí Nghiệm</title>

    <!-- Thêm Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-pO8V9Z1JJ7qK36vq9ZxZH8Z1A+s0H91wlzUMgE7iIXEJ3tX6xYV0zrX1dp0x0ZTHzFgMqP1X2xY5xO3yXKfHlw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Thêm Bootstrap CSS (Nếu Chưa Có) -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Thêm jQuery và Bootstrap JS (Nếu Cần) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-LtrjvnR4/Jqs6kW/2P/tcLfWW4FvgD8Ic6ABFc6m0ZOVF0M3a65Bu2vjMVrBr/T/"
            crossorigin="anonymous"></script>

    <style>
     footer{
         display: none;
     }
   
        /* Thiết lập font chữ và nền tổng thể cho trang */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Sử dụng font hiện đại, dễ đọc */
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2); /* Nền gradient nhẹ nhàng */
            margin: 0;
            padding: 0;
            line-height: 1.6; /* Tăng khoảng cách giữa các dòng chữ */
        }

        /* Thiết lập giao diện chính của khung nội dung */
        .wrapper {
            max-width: 900px; /* Giới hạn chiều rộng để trang web không trải dài quá mức */
            margin: 60px auto; /* Căn giữa khung nội dung và tạo khoảng cách trên/dưới */
            background: rgba(255, 255, 255, 0.95); /* Nền trắng mờ để nội dung dễ nhìn */
            padding: 40px; /* Tạo khoảng trống giữa nội dung và viền ngoài */
            border-radius: 15px; /* Bo góc khung để tạo cảm giác mềm mại */
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15); /* Bóng đổ để tăng chiều sâu cho khung */
            transition: transform 0.3s ease; /* Hiệu ứng chuyển động mượt khi có tương tác */
        }

        /* Định dạng tiêu đề chính (Xác nhận xóa) */
        .main-function h1#main-text {
            font-size: 2.5em; /* Kích thước chữ lớn cho tiêu đề chính */
            text-align: center; /* Căn giữa tiêu đề */
            color: #34495e; /* Màu chữ xám đậm */
            font-weight: 600; /* Tăng độ đậm cho chữ */
        }

        /* Định dạng tiêu đề phụ (Phòng thí nghiệm) */
        .row h1#main-text-2 {
            font-size: 2em; /* Kích thước chữ nhỏ hơn tiêu đề chính */
            text-align: center; /* Căn giữa tiêu đề phụ */
            color: #7f8c8d; /* Màu chữ xám nhạt */
            margin-bottom: 30px; /* Tạo khoảng cách bên dưới tiêu đề phụ */
        }

        /* Định dạng khung hiển thị thông tin dạng danh sách (dl - dt - dd) */
        dl.row {
            border: 1px solid #dee2e6; /* Đường viền xung quanh danh sách */
            border-radius: 10px; /* Bo góc các khung của danh sách */
            padding: 20px 30px; /* Tạo khoảng trống bên trong khung */
            background-color: #f8f9fa; /* Màu nền xám nhạt */
            margin-bottom: 25px; /* Tạo khoảng cách giữa danh sách và phần nội dung khác */
        }

        /* Định dạng các tiêu đề nhỏ trong danh sách (dt) */
        dl.row dt {
            background-color: #e9ecef; /* Nền xám nhạt để làm nổi bật */
            padding: 10px; /* Tạo khoảng cách giữa chữ và viền của tiêu đề */
            border-radius: 5px; /* Bo góc nhẹ cho tiêu đề */
            margin-bottom: 12px; /* Khoảng cách giữa các tiêu đề */
            font-weight: bold; /* Tăng độ đậm của chữ */
            color: #34495e; /* Màu chữ xám đậm */
            font-size: 1.1em; /* Kích thước chữ vừa phải */
            text-align: left; /* Căn lề trái cho chữ */
        }

        /* Định dạng nội dung tương ứng với các tiêu đề trong danh sách (dd) */
        dl.row dd {
            background-color: #fff; /* Nền trắng cho nội dung */
            padding: 12px; /* Tạo khoảng trống bên trong */
            border: 1px solid #dee2e6; /* Đường viền xung quanh nội dung */
            border-radius: 5px; /* Bo góc nhẹ cho khung */
            margin-bottom: 12px; /* Khoảng cách giữa các khung nội dung */
            color: #555; /* Màu chữ xám trung bình */
            font-size: 1.05em; /* Kích thước chữ vừa phải */
            text-align: left; /* Căn lề trái cho chữ */
        }

        /* Hiệu ứng khi người dùng di chuột qua tiêu đề và nội dung */
        dl.row dt:hover,
        dl.row dd:hover {
            background-color: #d1ecf1; /* Thay đổi màu nền khi hover */
            border-color: #bee5eb; /* Thay đổi màu viền khi hover */
            transition: background-color 0.3s ease, border-color 0.3s ease; /* Hiệu ứng chuyển màu mượt */
        }

        /* Định dạng chung cho các nút (Xóa và Trở lại) */
        .button {
            background-color: #e74c3c; /* Màu nền đỏ cho nút chính */
            color: #fff; /* Màu chữ trắng để nổi bật */
            padding: 12px 25px; /* Kích thước nút vừa phải */
            border: none; /* Loại bỏ viền mặc định */
            border-radius: 5px; /* Bo góc nhẹ cho nút */
            cursor: pointer; /* Con trỏ chuột chuyển thành biểu tượng tay khi hover */
            font-size: 1.2rem; /* Kích thước chữ lớn cho nút */
            font-weight: bold; /* Tăng độ đậm của chữ */
            display: inline-flex; /* Hiển thị các nút theo hàng ngang */
            align-items: center; /* Căn giữa nội dung theo trục dọc */
            justify-content: center; /* Căn giữa nội dung theo trục ngang */
            transition: background-color 0.3s ease, transform 0.2s ease; /* Hiệu ứng hover mượt */
            margin-top: 20px; /* Tạo khoảng cách trên nút */
        }

        /* Hiệu ứng khi di chuột qua nút Xóa */
        .button:hover {
            background-color: #c0392b; /* Màu nền tối hơn khi hover */
            transform: scale(1.05); /* Tăng kích thước nhẹ khi hover */
        }

        /* Định dạng nút Trở lại với màu nền xanh dương */
        .btn-back {
            background-color: #3498db; /* Màu nền xanh dương */
            margin-left: 15px; /* Tạo khoảng cách giữa nút Trở lại và nút Xóa */
            font-weight: bold; /* Tăng độ đậm của chữ */
            padding: 12px 25px; /* Kích thước nút tương tự nút Xóa */
        }

        /* Hiệu ứng khi di chuột qua nút Trở lại */
        .btn-back:hover {
            background-color: #2980b9; /* Màu nền tối hơn khi hover */
        }

        /* Thiết lập responsive cho màn hình nhỏ hơn 768px (thiết bị di động) */
        @@media (max-width: 768px) {
            dl.row dt, dl.row dd {
                display: block; /* Các tiêu đề và nội dung hiển thị theo cột */
                width: 100%; /* Đảm bảo chiếm hết chiều ngang màn hình */
            }

            .wrapper {
                padding: 20px; /* Giảm kích thước padding để phù hợp với màn hình nhỏ */
                margin: 30px auto; /* Điều chỉnh margin để căn giữa */
            }

            .button, .btn-back {
                width: 100%; /* Nút chiếm toàn bộ chiều ngang màn hình */
                padding: 15px; /* Tăng padding cho nút để dễ thao tác trên màn hình cảm ứng */
            }
        }
        /* Hiệu ứng underline động cho tiêu đề */
        .main-function h1#main-text::after,
        .row h1#main-text-2::after {
            content: '';
            display: block;
            width: 50px;
            height: 3px;
            background-color: #3498db;
            margin: 10px auto 0;
            transition: width 0.5s;
        }

        .main-function h1#main-text:hover::after,
        .row h1#main-text-2:hover::after {
            width: 100px;
        }
 

       
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="main-function">
            <h1 id="main-text">
                <i class="fas fa-info-circle"></i> Xác Nhận Xóa Phòng Thí Nghiệm
            </h1>
        </div>
        <div class="row">
            <h1 id="main-text-2">
                <i class="fas fa-flask"></i> Phòng Thí Nghiệm
            </h1>
            <hr>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MucDoDapUngNhuCauNckh)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MucDoDapUngNhuCauNckh)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NamDuaVaoSuDung)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NamDuaVaoSuDung)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdCongTrinhCsvcNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdCongTrinhCsvcNavigation.IdCongTrinhCoSoVatChat)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdLinhVucNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdLinhVucNavigation.IdLinhVucNghienCuu)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdLoaiPhongThiNghiemNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdLoaiPhongThiNghiemNavigation.IdLoaiPhongThiNghiem)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdPhongThiNghiem" />
                <div class="form-group">
                    <label class="text-danger">
                        <i class="fas fa-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa phòng thí nghiệm này?
                    </label>
                </div>
                <div class="form-button">
                    <button type="submit" class="button btn-delete" aria-label="Xóa">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </button>
                    <a asp-action="Index" class="button btn-back" aria-label="Trở lại">
                        <i class="fas fa-arrow-left"></i> Trở lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
