@model C500Hemis.Models.TbPhongThiNghiem

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết Phòng Thí Nghiệm</title>
    <style>
        footer{
            display: none;
        }
        /* Sử dụng gradient linear để tạo nền mịn màng và hiện đại. */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            margin: 0;
            padding: 0;
        }

        /* Giới hạn chiều rộng và căn giữa trang.
                   Màu nền trắng với độ trong suốt nhẹ, bo góc và bóng đổ để tạo chiều sâu.
                   Hiệu ứng hover để nâng wrapper lên và tăng bóng đổ khi người dùng di chuột qua. */
        .wrapper {
            max-width: 800px;
            margin: 50px auto;
            background: rgba(255, 255, 255, 0.9);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .wrapper:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
            }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        .details h4 {
            font-size: 1.8em;
            color: #333;
        }

        .details dt {
            font-weight: bold;
            color: #333;
        }

        .details dd {
            margin-bottom: 15px;
        }

        .action-links {
            margin-top: 20px;
            text-align: center;
        }

            .action-links a {
                text-decoration: none;
                color: #007bff;
                padding: 5px 10px;
                border: 1px solid #007bff;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .action-links a:hover {
                    background-color: #007bff;
                    color: white;
                }
        /* Hiệu ứng cho tiêu đề */
        .header h1 {
            font-size: 2.5em;
            color: #333;
            text-align: center;
            transition: color 0.3s ease, transform 0.3s ease;
            position: relative;
        }

            .header h1:hover {
                color: #3498db;
                transform: scale(1.1); /* Phóng to khi hover */
            }

            /* Thêm hiệu ứng underline động cho tiêu đề */
            .header h1::after {
                content: '';
                display: block;
                width: 50px;
                height: 3px;
                background-color: #3498db;
                margin: 10px auto 0;
                transition: width 0.5s;
            }

            .header h1:hover::after {
                width: 100px; /* Mở rộng underline khi hover */
            }
        /* Định dạng cho các cột */
        dl.row dt, dl.row dd {
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
        }

            /* Hiệu ứng khi hover vào các cột */
            dl.row dt:hover, dl.row dd:hover {
                background-color: #f0f8ff; /* Thay đổi màu nền */
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Tạo bóng đổ nhẹ */
                transform: scale(1.02); /* Phóng to nhẹ */
            }

    </style>
</head>
<body>
    <div class="wrapper">
        <div class="header">
            <h1>Chi tiết Phòng Thí Nghiệm</h1>
            <p>Xem thông tin chi tiết về phòng thí nghiệm</p>
        </div>
        <div class="details">
            <h4>Thông Tin Phòng Thí Nghiệm</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MucDoDapUngNhuCauNckh)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MucDoDapUngNhuCauNckh)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NamDuaVaoSuDung)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NamDuaVaoSuDung)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IdCongTrinhCsvcNavigation)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdCongTrinhCsvcNavigation.IdCongTrinhCoSoVatChat)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IdLinhVucNavigation)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdLinhVucNavigation.IdLinhVucNghienCuu)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IdLoaiPhongThiNghiemNavigation)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdLoaiPhongThiNghiemNavigation.IdLoaiPhongThiNghiem)</dd>
            </dl>
        </div>
        <div class="action-links">
            <a asp-action="Edit" asp-route-id="@Model?.IdPhongThiNghiem">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</body>
</html>
