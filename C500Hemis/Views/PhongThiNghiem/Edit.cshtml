@model C500Hemis.Models.TbPhongThiNghiem

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        footer{
            display: none;
        }
        /* Sử dụng gradient linear để tạo nền mịn màng và hiện đại. */
            body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background:  #e3f2fd;
            margin: 0;
            padding: 0;
        }

        /* Giới hạn chiều rộng và căn giữa trang.
        Màu nền trắng với độ trong suốt nhẹ, bo góc và bóng đổ để tạo chiều sâu.
        Hiệu ứng hover để nâng wrapper lên và tăng bóng đổ khi người dùng di chuột qua. */
        .wrapper {
            max-width: 800px;
            margin: 50px auto;
            background: rgba(255, 255, 255, 0.9);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            position: relative;
            overflow: hidden; /* Ẩn phần ảnh bị tràn ra ngoài div */
        }

            .wrapper::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('https://hocvienanninh.com/public/kh/14102021/uploads/2021/18102021084227quang-truong-hoc-vien-an-ninh-0-0857.jpg') no-repeat center center;
                background-size: cover;
                filter: blur(8px); /* Làm mờ ảnh */
                z-index: -1; /* Đảm bảo ảnh nền nằm dưới nội dung */
                opacity: 0.5; /* Độ trong suốt của ảnh nền */
            }

        .wrapper:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
        }

        .main-function, .row {
            text-align: center;
            margin-bottom: 20px;
        }

        #main-text {     /* Định dạng kích thước và màu sắc cho các tiêu đề chính để nổi bật. */
            font-size: 2em;
            color: #333;
        }

        #main-text-2 {
            font-size: 1.5em;
            color: #555;
        }


        hr {
            border: none;
            height: 2px;
            background-color: #e0e0e0;
            margin-bottom: 30px;
        }

            /* Các nhãn (labels) được định dạng để rõ ràng và dễ đọc.
            Các trường nhập liệu (inputs) có padding, bo góc, và hiệu ứng focus để cải thiện trải nghiệm người dùng. */
        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #66afe9;
            outline: none;
            box-shadow: 0 0 5px rgba(102, 175, 233, 0.5);
        }
        .form-button {
            text-align: center;
            margin-top: 30px;
        }


            /* Nút bấm có màu nền xanh dương, chữ trắng, padding hợp lý, bo góc và hiệu ứng hover làm tăng kích thước nhẹ. */
        .button {
            background-color: #3498db;
            color: #fff;
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .button:hover {
            background-color: #2980b9;
            transform: scale(1.05);
        }

            /* Liên kết trở lại có màu xanh dương, không gạch chân và hiệu ứng hover thay đổi màu sắc */
        .back a {
            display: inline-block;
            margin-top: 20px;
            color: #3498db;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        .back a:hover {
            color: #2980b9;
        }

        /* Responsive Design */
            /* Đảm bảo trang hiển thị tốt trên các thiết bị nhỏ hơn bằng cách điều chỉnh padding, margin và kích thước chữ.
            Nút bấm rộng hơn để dễ thao tác trên màn hình nhỏ. */
        @@media (max-width: 600px) {
            .wrapper {
                padding: 20px;
                margin: 20px;
            }

            #main-text {
                font-size: 1.5em;
            }

            #main-text-2 {
                font-size: 1.2em;
            }

            .button {
                width: 100%;
                padding: 10px;
            }
        }

        /* Định dạng cho form */
        form {
            animation: fadeIn 1s ease-in-out;
        }

        /* Keyframes cho hiệu ứng fadeIn */
        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        /* Thêm hiệu ứng khi di chuột vào các trường nhập liệu */
        .form-control:hover {
            border-color: #2980b9;
        }

        /* Thêm hiệu ứng cho các thông báo lỗi */
        .text-danger {
            color: #e74c3c;
            font-weight: bold;
        }



         /* Hiệu ứng underline động cho tiêu đề */
        .main-function h1#main-text::after,
        .row h1#main-text-2::after {
                content: '';
                display: block;
                width: 50px;
                height: 3px;
                background-color: #3498db;
                margin: 10px auto 0;
                transition: width 0.5s;
         }

            .main-function h1#main-text:hover::after,
            .row h1#main-text-2:hover::after {
                width: 100px;
            }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="main-function">
            <h1 id="main-text">CHỈNH SỬA THÔNG TIN</h1>
        </div>
        <div class="row">
            <h1 id="main-text-2">Phòng Thí Nghiệm</h1>
            <hr>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdPhongThiNghiem" />
                <div class="form-group">
                    <label asp-for="IdCongTrinhCsvc" class="control-label"></label>
                    <select asp-for="IdCongTrinhCsvc" class="form-control" asp-items="ViewBag.IdCongTrinhCsvc"></select>
                    <span asp-validation-for="IdCongTrinhCsvc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdLoaiPhongThiNghiem" class="control-label"></label>
                    <select asp-for="IdLoaiPhongThiNghiem" class="form-control" asp-items="ViewBag.IdLoaiPhongThiNghiem"></select>
                    <span asp-validation-for="IdLoaiPhongThiNghiem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdLinhVuc" class="control-label"></label>
                    <select asp-for="IdLinhVuc" class="form-control" asp-items="ViewBag.IdLinhVuc"></select>
                    <span asp-validation-for="IdLinhVuc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MucDoDapUngNhuCauNckh" class="control-label"></label>
                    <input asp-for="MucDoDapUngNhuCauNckh" class="form-control" />
                    <span asp-validation-for="MucDoDapUngNhuCauNckh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NamDuaVaoSuDung" class="control-label"></label>
                    <input asp-for="NamDuaVaoSuDung" class="form-control" />
                    <span asp-validation-for="NamDuaVaoSuDung" class="text-danger"></span>
                </div>
                <div class="form-button">
                    <input type="submit" value="Lưu" class="button" />
                </div>
            </form>
        </div>
        <div class="back">
            <a asp-action="Index">Trở lại</a>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 