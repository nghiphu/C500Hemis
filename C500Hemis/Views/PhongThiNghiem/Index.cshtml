@model IEnumerable<C500Hemis.Models.TbPhongThiNghiem>
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    @* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-pO8V9Z1JJ7qK36vq9ZxZH8Z1A+s0H91wlzUMgE7iIXEJ3tX6xYV0zrX1dp0x0ZTHzFgMqP1X2xY5xO3yXKfHlw==" 
    crossorigin="anonymous" referrerpolicy="no-referrer" /> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-pO8V9Z1JJ7qK36vq9ZxZH8Z1A+s0H91wlzUMgE7iIXEJ3tX6xYV0zrX1dp0x0ZTHzFgMqP1X2xY5xO3yXKfHlw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Thêm CSS của DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <!-- Thêm jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Thêm JS của DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <style>
        footer{
            display: none;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #e3f2fd;
            margin: 0;
            padding: 0;
        }

       

        .wrapper {
            max-width: 1200px; /* Giới hạn chiều rộng tối đa của container */
            margin: 0 auto; /* Căn giữa container */
            padding: 20px; /* Khoảng cách padding */
            background-color: #f9f9f9; /* Màu nền trắng nhạt */
            border-radius: 8px; /* Bo tròn góc container */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Tạo bóng đổ nhẹ */
        }

            /* Tiêu đề chính của trang */
            .wrapper h1 {
                text-align: center;
                color: #1e88e5; /* Màu chữ đậm */
            }

        /* Nút Tạo Mới */
        .create-new {
            display: inline-block;
            padding: 10px 20px;
            background-color: #1e88e5; /* Màu xanh dương */
            color: white;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .create-new:hover {
                background-color: #1565c0;               
            }

        /* Bảng Phòng Thí Nghiệm */
        #phongThiNghiemTable {
            width: 100%; /* Bảng rộng 100% container */
            border-collapse: collapse; /* Xóa khoảng cách giữa các ô trong bảng */
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            #phongThiNghiemTable thead {
                background-color: #1565c0; /* Màu nền đầu bảng */
                color: #fff; /* Màu chữ trắng */
            }

            /* Các hàng bảng */
            #phongThiNghiemTable tbody tr:nth-child(even) {
                background-color: #f0f8ff; /* Tô màu xen kẽ hàng */
            }

            #phongThiNghiemTable tbody tr:hover {
                background-color: #e3f2fd; /* Hiệu ứng hover */
            }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            gap: 10px; /* Khoảng cách giữa các nút */
        }

            .action-buttons a {
                padding: 5px 10px;
                border-radius: 4px;
                color: white;
                text-decoration: none;
            }

        .btn-edit {
            background-color: #1e88e5; /* Màu xanh cho nút Edit */
        }

        .btn-details {
            background-color: #42a5f5; /* Màu xanh nhạt hơn cho nút Details */
        }

        .btn-delete {
            background-color: #ef5350; /* Màu đỏ cho nút Delete */
        }

        /* Hiệu ứng khi hover */
        .btn-edit:hover {
            background-color: #1565c0;
        }

        .btn-details:hover {
            background-color: #1e88e5;
        }

        .btn-delete:hover {
            background-color: #d32f2f;
        }


    </style>
</head>
<body>
    <div class="wrapper">
        <h1 align="center">Phòng Thí Nghiệm</h1>
        <p>
            <a class="create-new" asp-action="Create">Tạo Mới</a>
        </p>
        <table id="phongThiNghiemTable" class="table display">
            <thead>
                <tr>                   
                    <th>STT Công trình</th>
                    <th>@Html.DisplayNameFor(model => model.IdLinhVucNavigation)</th>
                    <th>@Html.DisplayNameFor(model => model.IdLoaiPhongThiNghiemNavigation)</th>
                    <th>@Html.DisplayNameFor(model => model.MucDoDapUngNhuCauNckh)</th>
                    <th>@Html.DisplayNameFor(model => model.NamDuaVaoSuDung)</th>
                    <th>Thực hiện</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr> 
                        <td data-label="STT Công trình">@Html.DisplayFor(modelItem => item.IdCongTrinhCsvcNavigation.IdCongTrinhCoSoVatChat)</td>
                        <td data-label="Lĩnh Vực Nghiên Cứu">@Html.DisplayFor(modelItem => item.IdLinhVucNavigation.LinhVucNghienCuu)</td>
                        <td data-label="Loại Phòng Thí Nghiệm">@Html.DisplayFor(modelItem => item.IdLoaiPhongThiNghiemNavigation.LoaiPhongThiNghiem)</td>
                        <td data-label="Mức Độ Đáp Ứng Nhu Cầu NCKH">@Html.DisplayFor(modelItem => item.MucDoDapUngNhuCauNckh)</td>
                        <td data-label="Năm Đưa Vào Sử Dụng">@Html.DisplayFor(modelItem => item.NamDuaVaoSuDung)</td>
                        <td data-label="Ghi chú">
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.IdPhongThiNghiem" class="btn-edit" title="Edit">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.IdPhongThiNghiem" class="btn-details" title="Details">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.IdPhongThiNghiem" class="btn-delete" title="Delete">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

    
</body>
</html>

<script>

    new DataTable('#phongThiNghiemTable', {
        searching: true, // Mặc định là true, set false để tắt chức năng search
        ordering: true, // Mặc định là true, set false để tắt chức năng sắp xếp theo collumn
        paging: true, // Mặc định là true, set false để tắt chức năng phân trang
        scrollX: 1300, // Nội dụng của table sẽ hiện thị với with 400px, Nếu quá thì sẽ có thanh scroll
        scrollY: 527, // Nội dụng của table sẽ hiện thị với hieght 400px, Nếu quá thì sẽ có thanh scroll
        processing: true,
        info: true, // Tắt thông tin về table VD: Showing 1 to 14 of 14 entries
        language: {
            processing: "Message khi đang tải dữ liệu",
            search: "Tìm kiếm",
            lengthMenu: "Điều chỉnh số lượng bản ghi trên 1 trang _MENU_ ",
            info: "Bản ghi từ _START_ đến _END_ Tổng cộng _TOTAL_ bản ghi",
            infoEmpty: "Khi không có dữ liệu, Hiển thị 0 bản ghi trong 0 tổng cộng 0 ",
            infoFiltered: "(Message bổ sung cho info khi không search đc record nào _MAX_)",

            loadingRecords: "",
            zeroRecords: "Khi tìm kiếm không match với record nào",
            emptyTable: "Không có dữ liệu",
            paginate: {
                first: "Trang đầu",
                previous: "Trang trước",
                next: "Trang sau",
                last: "Trang cuối"
            },
            aria: {
                sortAscending: ": Message khi đang sắp xếp theo column",
                sortDescending: ": Message khi đang sắp xếp theo column",
            }
        },
    });
</script>