@model C500Hemis.Models.TbPhongThucHanh

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font-family: sans-serif;
            background-image: linear-gradient(to right, rgb(124, 182, 191), rgb(200, 223, 227), #ffff);
        }

        .wrapper {
            background: transparent;
            border: 2px solid rgba(255,255,255,.2);
            backdrop-filter: blur(20px);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            color: black;
            padding: 20px 30px;
        }

        .form-group {
            padding-bottom: 20px;
        }

        .form-control {
            padding: 10px;
            background: rgba(255,255,255,.2);
            height: 35px;
            font-size: 14px;
            border-radius: 10px;
            outline: none;
            transition: .2s ease;
        }

        .row {
            background: transparent;
            border: 2px solid rgba(255,255,255,.2);
            backdrop-filter: blur(20px);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            color: black;
            padding: 20px 30px;
        }

        label {
            display: flex;
            font-size: 16px;
            font-weight: 500;
            padding-bottom: 10px;
        }

        #main-text, #main-text-2 {
            text-align: center;
            font-size: 24px;
            font-weight: 600;
        }

        .button {
            border-radius: 12px;
            border: none;
            color: #fff;
            font-size: 18px;
            padding: 5px 12px;
            background-color: #4070f4;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .button:hover {
                background-color: #0e4bf1;
            }

        .form-button {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-top: 10px;
        }

        .main-function {
            background: transparent;
            border: 2px solid rgba(255,255,255,.2);
            backdrop-filter: blur(20px);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            color: black;
            margin-bottom: 10px;
        }

        .back {
            text-align: left;
            font-size: 16px;
            font-weight: 300;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="main-function">
            <h1 id="main-text">THÊM THÔNG TIN</h1>
        </div>
        <div class="row">
            <h1 id="main-text-2">PHÒNG THỰC HÀNH</h1>
            <hr>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdPhongThucHanh" class="control-label"></label>
                    <input asp-for="IdPhongThucHanh" class="form-control" />
                    <span asp-validation-for="IdPhongThucHanh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdCongTrinhCsvc" class="control-label"></label>
                    <select asp-for="IdCongTrinhCsvc" class="form-control" asp-items="ViewBag.IdCongTrinhCsvc"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdLinhVuc" class="control-label"></label>
                    <select asp-for="IdLinhVuc" class="form-control" asp-items="ViewBag.IdLinhVuc"></select>
                </div>
                <div class="form-group">
                    <label asp-for="MucDoDapUngNhuCauNckh" class="control-label"></label>
                    <input asp-for="MucDoDapUngNhuCauNckh" class="form-control" />
                    <span asp-validation-for="MucDoDapUngNhuCauNckh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NamDuaVaoSuDung" class="control-label"></label>
                    <input asp-for="NamDuaVaoSuDung" class="form-control" />
                    <span asp-validation-for="NamDuaVaoSuDung" class="text-danger"></span>
                </div>
                <div class="form-button">
                    <input type="submit" value="Thêm mới" class="button" />
                </div>
            </form>
        </div>
        <div class="back">
            <a asp-action="Index" class="btn btn-secondary" style="text-decoration: none;">Trở lại</a>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
