@model C500Hemis.Models.TbPhongThucHanh

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font-family: sans-serif;
            background-image: linear-gradient(to right, rgb(124, 182, 191), rgb(200, 223, 227), #ffff);
        }

        .wrapper {
            background: transparent;
            border: 2px solid rgba(255,255,255,.2);
            backdrop-filter: blur(20px);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            color: black;
            padding: 20px 30px; /* giảm padding */
        }

        .form-group {
            padding-bottom: 20px; /* giảm khoảng cách */
        }

        .form-control {
            padding: 20px; /* giảm padding */
            background: rgba(255,255,255,.2);
            height: 40px; /* giảm chiều cao */
            border: 5px; /* giảm border */
            border-radius: 10px; /* giảm độ cong của border */
            outline: none;
            transition: .2s ease;
        }

        .row {
            background: transparent;
            border: 2px solid rgba(255,255,255,.2);
            backdrop-filter: blur(20px);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            color: black;
            padding: 20px 20px; /* giảm padding */
        }

        label {
            display: flex;
            font-size: 20px; /* giảm kích thước chữ */
            font-weight: 400;
            padding-bottom: 10px; /* giảm khoảng cách */
        }

        #main-text {
            text-align: center;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 35px; /* giảm kích thước tiêu đề */
            font-weight: 500;
        }

        .button {
            border-radius: 16px; /* giảm độ cong của nút */
            border: none;
            color: #fff;
            font-weight: 400;
            font-size: 20px; /* giảm kích thước chữ của nút */
            margin: 0 10px;
            padding: 6px 16px; /* giảm padding */
            background-color: #4070f4;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .button:hover {
                background-color: #0e4bf1;
            }

        .form-button {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .main-function {
            background: transparent;
            border: 2px solid rgba(255,255,255,.2);
            backdrop-filter: blur(20px);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            color: black;
            margin-bottom: 10px;
        }

        .back {
            text-align: left;
            font-size: 20px; /* giảm kích thước chữ phần 'Trở lại' */
            font-weight: 300;
        }

        #main-text-2 {
            text-align: center;
            font-size: 45px; /* giảm kích thước chữ của phần 'Phòng Thực Hành' */
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="main-function">
            <h1 id="main-text">CHỈNH SỬA THÔNG TIN</h1>
        </div>
        <div class="row">
            <h1 id="main-text-2">Phòng Thực Hành</h1>
            <hr>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdPhongThucHanh" />
                <div class="form-group">
                    <label asp-for="IdCongTrinhCsvc" class="control-label"></label>
                    <select asp-for="IdCongTrinhCsvc" class="form-control" asp-items="ViewBag.IdCongTrinhCsvc"></select>
                    <span asp-validation-for="IdCongTrinhCsvc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdLinhVuc" class="control-label"></label>
                    <select asp-for="IdLinhVuc" class="form-control" asp-items="ViewBag.IdLinhVuc"></select>
                    <span asp-validation-for="IdLinhVuc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MucDoDapUngNhuCauNckh" class="control-label"></label>
                    <input asp-for="MucDoDapUngNhuCauNckh" class="form-control" />
                    <span asp-validation-for="MucDoDapUngNhuCauNckh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NamDuaVaoSuDung" class="control-label"></label>
                    <input asp-for="NamDuaVaoSuDung" class="form-control" />
                    <span asp-validation-for="NamDuaVaoSuDung" class="text-danger"></span>
                </div>
                <div class="form-button">
                    <input type="submit" value="Lưu" class="button" />
                </div>
            </form>
        </div>
        <div class="back">
            <a asp-action="Index">Trở lại</a>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
