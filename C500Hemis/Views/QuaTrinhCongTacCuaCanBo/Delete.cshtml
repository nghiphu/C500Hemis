@model C500Hemis.Models.TbQuaTrinhCongTacCuaCanBo

@{
    ViewData["Title"] = "Xóa";
}

<h1 class="text-center">Xóa</h1>

<h3 class="text-center">Bạn có chắc chắn muốn xóa không?</h3>
<div class="container">
    <h4>Thông tin chi tiết</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4 font-weight-bold">Từ Tháng/Năm</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.TuThangNam)</dd>

        <dt class="col-sm-4 font-weight-bold">Đến Tháng/Năm</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.DenThangNam)</dd>

        <dt class="col-sm-4 font-weight-bold">Đơn vị công tác</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.DonViCongTac)</dd>

        <dt class="col-sm-4 font-weight-bold">Id Cán bộ</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdCanBoNavigation.IdCanBo)</dd>

        <dt class="col-sm-4 font-weight-bold">Chức danh giảng viên</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdChucDanhGiangVienNavigation.IdChucDanhGiangVien)</dd>

        <dt class="col-sm-4 font-weight-bold">Chức vụ</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdChucVuNavigation.IdChucVu)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdQuaTrinhCongTacCuaCanBo" />
        <div class="text-center mt-4">
            <input type="submit" value="Xóa" class="btn btn-danger mr-2" />
            <a class="btn btn-secondary" asp-action="Index">Quay lại danh sách</a>
        </div>
    </form>
</div>

<style>
    .font-weight-bold {
        font-weight: 600;
    }
    dt {
        background-color: #f8f9fa;
        padding: 8px;
        border-radius: 5px;
    }
    dd {
        padding: 8px 0;
    }
</style>
