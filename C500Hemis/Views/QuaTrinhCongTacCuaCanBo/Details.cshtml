@model C500Hemis.Models.TbQuaTrinhCongTacCuaCanBo

@{
    ViewData["Title"] = "Chi Tiết Quá Trình Công Tác";
}

<h1 class="text-center mt-4">Chi Tiết Quá Trình Công Tác</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- Giữ nguyên để căn giữa cột chứa thông tin. -->
        <div class="col-md-8 shadow-sm p-4 bg-light rounded">
            <!-- Cột với bóng, padding, màu nền sáng và góc tròn -->
            <h4 class="text-secondary">Thông tin chi tiết</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Từ Tháng/Năm
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TuThangNam)
                </dd>
                <dt class="col-sm-2">
                    Đến Tháng/Năm
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DenThangNam)
                </dd>
                <dt class="col-sm-2">
                    Đơn vị công tác
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DonViCongTac)
                </dd>
                <dt class="col-sm-2">
                    Id Cán bộ
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdCanBo)
                </dd>
                <dt class="col-sm-2">
                    Chức danh giảng viên
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdChucDanhGiangVien)
                </dd>
                <dt class="col-sm-2">
                    Chức vụ
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdChucVu)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.IdQuaTrinhCongTacCuaCanBo">Sửa</a>
    <a class="btn btn-secondary" asp-action="Index">Quay lại danh sách</a>
</div>
