@model C500Hemis.Models.TbQuaTrinhDaoTaoCuaCanBo

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Sửa Thông Tin Quá Trình Đào Tạo</h1>

<div class="container">
    <h4 class="text-center">Thông Tin Quá Trình Đào Tạo Của Cán Bộ</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdQuaTrinhDaoTaoCuaCanBo" />

                <div class="form-group">
                    <label asp-for="IdCanBo" class="control-label">Id Cán bộ</label>
                    <select asp-for="IdCanBo" class="form-control" asp-items="ViewBag.IdCanBo"></select>
                    <span asp-validation-for="IdCanBo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdTrinhDoDaoTao" class="control-label">Trình độ đào tạo</label>
                    <select asp-for="IdTrinhDoDaoTao" class="form-control" asp-items="ViewBag.IdTrinhDoDaoTao"></select>
                    <span asp-validation-for="IdTrinhDoDaoTao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdQuocGiaDaoTao" class="control-label">Quốc gia đào tạo</label>
                    <select asp-for="IdQuocGiaDaoTao" class="form-control" asp-items="ViewBag.IdQuocGiaDaoTao"></select>
                    <span asp-validation-for="IdQuocGiaDaoTao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CoSoDaoTao" class="control-label">Cơ sở đào tạo</label>
                    <input asp-for="CoSoDaoTao" class="form-control" placeholder="Nhập cơ sở đào tạo" />
                    <span asp-validation-for="CoSoDaoTao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ThoiGianBatDau" class="control-label">Thời gian bắt đầu</label>
                    <input asp-for="ThoiGianBatDau" class="form-control" placeholder="Nhập thời gian bắt đầu" />
                    <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ThoiGianKetThuc" class="control-label">Thời gian kết thúc</label>
                    <input asp-for="ThoiGianKetThuc" class="form-control" placeholder="Nhập thời gian kết thúc" />
                    <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdNganhDaoTao" class="control-label">Ngành đào tạo</label>
                    <select asp-for="IdNganhDaoTao" class="form-control" asp-items="ViewBag.IdNganhDaoTao"></select>
                    <span asp-validation-for="IdNganhDaoTao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NamTotNghiep" class="control-label">Năm tốt nghiệp</label>
                    <input asp-for="NamTotNghiep" class="form-control" placeholder="Nhập năm tốt nghiệp" />
                    <span asp-validation-for="NamTotNghiep" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdLoaiHinhDaoTao" class="control-label">Loại hình đào tạo</label>
                    <select asp-for="IdLoaiHinhDaoTao" class="form-control" asp-items="ViewBag.IdLoaiHinhDaoTao"></select>
                    <span asp-validation-for="IdLoaiHinhDaoTao" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Lưu" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
