    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<style>
    body {
        background: linear-gradient(to bottom,darkolivegreen,#c6ebd5,white ); /* Màu nền toàn trang xanh lá nhạt */
        font-family: Itim;
        margin: 0;
        padding: 0;
    }

    h4 {
        color: darkolivegreen;
        font-family: Itim;
        text-shadow: 0 0 5px rgba(255, 255, 255, 1), /* Độ sáng tối thiểu */
        0 0 10px rgba(255, 255, 255, 1), /* Độ sáng mạnh hơn */
        0 0 15px rgba(255, 255, 255, 0.8), /* Độ sáng giảm dần */
        0 0 20px rgba(255, 255, 255, 0.6), /* Độ sáng giảm hơn nữa */
        0 0 30px rgba(255, 255, 255, 0.4); /* Viền sáng nhẹ */
        text-align: center;
        font-weight: bold;
        font-size: 25px;
    }

    .content-box {
        background-color: #c6ebd5; /* Màu nền trắng cho box */
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
        max-width: 1200px;
        margin: 40px auto;
        border: darkolivegreen solid 2px; /* Viền màu xanh lá nhạt */
    }

    card-header {
        background-color: darkolivegreen;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
        max-width: 1200px;
        margin: 40px auto;
        border: darkolivegreen solid 2px; /* Viền màu xanh lá nhạt */
        font-weight: bold;
        text-align: center;
        vertical-align: middle;
    }

    card-body {
        background-color: #c6ebd5;
    }

    .btn-edit {
        background-color: green; /* Màu nền */
        color: white; /* Màu chữ */
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 18px;
        font-weight: bold;
        display: inline-flex;
        align-items: center;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-edit i {
            margin-right: 5px;
        }

        .btn-edit:hover {
            background-color: #4d6c44; /* Màu khi di chuột */
            transform: scale(1.05); /* Hiệu ứng phóng to khi di chuột */
        }

    /* CSS cho nút "Cancel" */
    .btn-cancel {
        background-color: red; /* Màu nền đỏ cho Cancel */
        color: white; /* Màu chữ */
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 18px;
        font-weight: bold;
        display: inline-flex;
        align-items: center;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        margin-left: 15px;
    }

        .btn-cancel i {
            margin-right: 5px;
        }

        .btn-cancel:hover {
            background-color: #d32f2f; /* Màu khi di chuột */
            transform: scale(1.05); /* Hiệu ứng phóng to khi di chuột */
        }

    /* Đặt 2 nút cùng hàng */
    .form-group {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
    }

    /* CSS cho link Cancel nếu không sử dụng button */
    a.btn-cancel {
        text-decoration: none;
        color: white;
        display: inline-block;
        padding: 10px 20px;
        background-color: #f44336;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        a.btn-cancel:hover {
            background-color: #d32f2f;
            transform: scale(1.05);
        }

</style>
<body>

    <div class="content-box">
        <div class="card-header">
            <h4>Sửa thông tin sách đã xuất bản</h4>

        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="IdSachDaXuatBan" class="form-label fw-bold">ID sách đã xuất bản</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text bg-light"><i class='bx bx-id-card'></i></span>
                            <input asp-for="IdSachDaXuatBan" class="form-control" placeholder="Nhập ID sách" data-bs-toggle="tooltip" title="Nhập ID sách" />
                        </div>
                        <span asp-validation-for="IdSachDaXuatBan" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="IdNhiemVuKhcn" class="form-label fw-bold">ID nhiệm vụ KHCN</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text bg-light"><i class='bx bx-id-card'></i></span>
                            <select asp-for="IdNhiemVuKhcn" class="form-control" asp-items="ViewBag.IdNhiemVuKhcn" data-bs-toggle="tooltip" title="Chọn ID nhiệm vụ KHCN"></select>
                        </div>
                        <span asp-validation-for="IdNhiemVuKhcn" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaSach" class="form-label fw-bold">Mã sách</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text bg-light"><i class='bx bx-id-card'></i></span>
                            <input asp-for="MaSach" class="form-control" placeholder="Nhập Mã sách" data-bs-toggle="tooltip" title="Nhập Mã sách" />
                        </div>
                        <span asp-validation-for="MaSach" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="TenSach" class="form-label fw-bold">Tên sách</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text bg-light"><i class='bx bx-book-bookmark'></i></span>
                            <input asp-for="TenSach" class="form-control" placeholder="Nhập tên sách" data-bs-toggle="tooltip" title="Nhập tên sách" />
                        </div>
                        <span asp-validation-for="TenSach" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="IdLoaiSachTapChi" class="form-label fw-bold">Loại sách / tạp chí</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text bg-light"><i class='bx bx-library'></i></span>
                            <select asp-for="IdLoaiSachTapChi" class="form-control" asp-items="ViewBag.IdLoaiSachTapChi" data-bs-toggle="tooltip" title="Chọn loại sách / tạp chí"></select>
                        </div>
                        <span asp-validation-for="IdLoaiSachTapChi" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaChuanIsbn" class="form-label fw-bold">Mã chuẩn ISBN</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text bg-light"><i class='bx bxl-baidu'></i></span>
                            <input asp-for="MaChuanIsbn" class="form-control" placeholder="Nhập Mã chuẩn ISBN" data-bs-toggle="tooltip" title="Nhập Mã chuẩn ISBN" />
                        </div>
                        <span asp-validation-for="MaChuanIsbn" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SoTrang" class="form-label fw-bold">Số trang</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text bg-light"><i class='bx bx-bookmark'></i></span>
                            <input asp-for="SoTrang" class="form-control" placeholder="Nhập Số trang" data-bs-toggle="tooltip" title="Nhập Số trang" />
                        </div>
                        <span asp-validation-for="SoTrang" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nxb" class="form-label fw-bold">Nhà xuất bản sách</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text bg-light"><i class='bx bx-edit-alt'></i></span>
                            <input asp-for="Nxb" class="form-control" placeholder="Nhập Nhà xuất bản sách" data-bs-toggle="tooltip" title="Nhập Nhà xuất bản sách" />
                        </div>
                        <span asp-validation-for="Nxb" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NamXuatBan" class="form-label fw-bold">Năm xuất bản</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text bg-light"><i class='bx bx-calendar'></i></i></span>
                            <input asp-for="NamXuatBan" class="form-control" placeholder="Nhập Năm xuất bản" data-bs-toggle="tooltip" title="Nhập Năm xuất bản" />
                        </div>
                        <span asp-validation-for="NamXuatBan" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="NamViet" class="form-label fw-bold">Năm viết</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text bg-light"><i class='bx bx-calendar'></i></span>
                            <input asp-for="NamViet" class="form-control" placeholder="Nhập Năm viết" data-bs-toggle="tooltip" title="Nhập Năm viết" />
                        </div>
                        <span asp-validation-for="NamViet" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="IdDangTaiLieu" class="form-label fw-bold">Dạng tài liệu</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text bg-light"><i class='bx bx-book'></i></span>
                            <select asp-for="IdDangTaiLieu" class="form-control" asp-items="ViewBag.IdDangTaiLieu" data-bs-toggle="tooltip" title="Chọn Dạng tài liệu"></select>
                        </div>
                        <span asp-validation-for="IdDangTaiLieu" class="text-danger small"></span>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <button type="submit" value="Save" class="btn-edit"><i class='bx bx-save'></i>Lưu thay đổi</button>
                    <a asp-action="Index" class="btn-cancel">
                        <i class='bx bx-minus-back'></i>Cancel
                    </a>
                </div>
            </form>
        </div>

    </div>

</body>

</html>


@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}
