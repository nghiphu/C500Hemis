    <div class="content-box">
        <h1 class="text-center mb-4">Sách đã xuất bản</h1>
        <h4 class="count">(Tổng số sách: @Model.Count())</h4><!--đếm số sách tổng-->
        <form class="d-flex" method="get">
            <input placeholder="tên sách cần tìm" type="text" name="TS" value="@ViewBag.TenSach" style="margin-right: 10px;" />
            <button class="btn btn-find" style="margin-right: 10px;" class="btn-find">
                <span class="bi-search"></span>
            </button>
            <a asp-action="Create" class="btn btn-create" style="margin-right: 10px;" class="btn-create">
                <i class="bi bi-file-earmark-plus-fill"></i>
            </a>
            </a>
            <button class="btn btn-sort" type="submit" name="SapXep" value="SapXep" class="btn-sort">
                <i class="bi bi-sort-numeric-down"></i>
            </button>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>
                        Mã sách
                    </th>
                    <th>
                        Tên sách
                    </th>
                    <th>
                        Mã chuẩn ISBN
                    </th>
                    <th>
                        Số trang
                    </th>
                    <th>
                        Nhà xuất bản
                    </th>
                    <th>
                        Năm xuất bản
                    </th>
                    <th>
                        Năm viết
                    </th>
                    <th>
                        Dạng tài liệu
                    </th>
                    <th>
                        Loại sách / tạp chí
                    </th>
                    <th>
                        Nhiệm vụ KHCN
                    </th>
                    <th class="btn-column">Hoạt động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count() > 0)
                {
                    int stt = 1;

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@stt</td>
                            <td>
                                @item.MaSach
                            </td>
                            <td>
                                @item.TenSach
                            </td>
                            <td>
                                @item.MaChuanIsbn
                            </td>
                            <td>
                                @item.SoTrang
                            </td>
                            <td>
                                @item.Nxb
                            </td>
                            <td>
                                @item.NamXuatBan
                            </td>
                            <td>
                                @item.NamViet
                            </td>
                            <td>
                                @item.IdDangTaiLieuNavigation.DangTaiLieu
                            </td>
                            <td>
                                @item.IdLoaiSachTapChiNavigation.LoaiSachTapChi
                            </td>
                            <td>
                                @item.IdNhiemVuKhcnNavigation.IdNhiemVuKhcn
                            </td>
                            <td class="btn-column">
                                <a asp-action="Edit" asp-route-id="@item.IdSachDaXuatBan" class="btn1"><i class='bx bxs-edit'></i></a>
                                <a asp-action="Details" asp-route-id="@item.IdSachDaXuatBan" class="btn2"><i class='bx bxs-user-detail'></i></a>
                                <a asp-action="Delete" asp-route-id="@item.IdSachDaXuatBan" class="btn3"><i class='bx bxs-message-alt-x'></i></a>
                            </td>
                        </tr>
                        stt++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">Không có dữ liệu</td>
                    </tr>
                }
            </tbody>
        </table>

        </tbody>
