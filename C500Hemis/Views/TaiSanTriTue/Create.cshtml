@model C500Hemis.Models.TbTaiSanTriTue

@{
    ViewData["Title"] = "Create";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Sử dụng Bootstrap và jQuery UI -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<!-- CSS tùy chỉnh -->
<style>
    body
    {
        height: 100%;
        margin: 0;
        overflow-y: auto;
        background-image: url("/images/doanhnghiep.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .form-group {
        margin-bottom: 15px;
        margin: 0 15px;
    }

    .btn {
        border-radius: 5px;
    }

    .card-header {
        background-color: #007bff;
        color: white;
    }

    .btn {
        transition: transform 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.2);
        }
        .form-group label{
        padding-left: 10px;
       padding-top: 3px;
    }
    .form-group{
        margin-bottom: 0;

        }

</style>
    
</head>
<body>
     <h1 class="text-center" style="color: rgb(3, 21, 36); font-size: 70px;">@ViewData["Title"] Tài Sản Trí Tuệ</h1>

    <div class="container mt-4" style="margin-bottom: 60px;">
        <div class="row justify-content-center">
            <div class="col-md-8" style="background-color: rgba(127, 255, 212, 0.548); border-radius: 20px;">
                <div class="vienngoai" >
                    <div class="vientrong" style="background-color: rgba(89, 252, 198, 0.548); margin: 20px 20px 20px 20px; border-radius: 20px;">
                        <form asp-action="Create" class="form">

                            <div class="form-group">
                                <label asp-for="IdTaiSanTriTue" class="control-label"></label>
                                <input asp-for="IdTaiSanTriTue" class="form-control" />
                                <span asp-validation-for="IdTaiSanTriTue" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="IdNhiemVuKhcn" class="control-label"></label>
                                <select asp-for="IdNhiemVuKhcn" class="form-control" asp-items="ViewBag.IdNhiemVuKhcn"></select>
                            </div>

                            <div class="form-group">
                                <label asp-for="MaGiaiPhapSangChe" class="control-label"></label>
                                <input asp-for="MaGiaiPhapSangChe" class="form-control" />
                                <span asp-validation-for="MaGiaiPhapSangChe" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TenTaiSanTriTue" class="control-label"></label>
                                <input asp-for="TenTaiSanTriTue" class="form-control" />
                                <span asp-validation-for="TenTaiSanTriTue" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NgayCapBangGiayChungNhan" class="control-label"></label>
                                <input asp-for="NgayCapBangGiayChungNhan" type="date" class="form-control" />
                                <span asp-validation-for="NgayCapBangGiayChungNhan" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="IdLoaiTaiSanTriTue" class="control-label"></label>
                                <select asp-for="IdLoaiTaiSanTriTue" class="form-control" asp-items="ViewBag.IdLoaiTaiSanTriTue"></select>
                            </div>

                            <div class="form-group">
                                <label asp-for="ToChucCapBang" class="control-label"></label>
                                <input asp-for="ToChucCapBang" class="form-control" />
                                <span asp-validation-for="ToChucCapBang" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="SoBang" class="control-label"></label>
                                <input asp-for="SoBang" class="form-control" />
                                <span asp-validation-for="SoBang" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NgayCap" class="control-label"></label>
                                <input asp-for="NgayCap" type="date" class="form-control" />
                                <span asp-validation-for="NgayCap" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="SoDon" class="control-label"></label>
                                <input asp-for="SoDon" class="form-control" />
                                <span asp-validation-for="SoDon" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NgayNopDon" class="control-label"></label>
                                <input asp-for="NgayNopDon" type="date" class="form-control" />
                                <span asp-validation-for="NgayNopDon" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="QuyetDinhCapBangGiayChungNhan" class="control-label"></label>
                                <input asp-for="QuyetDinhCapBangGiayChungNhan" class="form-control" />
                                <span asp-validation-for="QuyetDinhCapBangGiayChungNhan" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CongBoBang" class="control-label"></label>
                                <input asp-for="CongBoBang" class="form-control" />
                                <span asp-validation-for="CongBoBang" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Ipc" class="control-label"></label>
                                <input asp-for="Ipc" class="form-control" />
                                <span asp-validation-for="Ipc" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ChuSoHuu" class="control-label"></label>
                                <input asp-for="ChuSoHuu" class="form-control" />
                                <span asp-validation-for="ChuSoHuu" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TacGiaSangCheGiaiPhap" class="control-label"></label>
                                <input asp-for="TacGiaSangCheGiaiPhap" class="form-control" />
                                <span asp-validation-for="TacGiaSangCheGiaiPhap" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TomTatNoiDungTaiSanTriTue" class="control-label"></label>
                                <input asp-for="TomTatNoiDungTaiSanTriTue" class="form-control" />
                                <span asp-validation-for="TomTatNoiDungTaiSanTriTue" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NguoiChuTri" class="control-label"></label>
                                <input asp-for="NguoiChuTri" class="form-control" />
                                <span asp-validation-for="NguoiChuTri" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NamDuocChapNhanDonHopLe" class="control-label"></label>
                                <input asp-for="NamDuocChapNhanDonHopLe" class="form-control" />
                                <span asp-validation-for="NamDuocChapNhanDonHopLe" class="text-danger"></span>
                            </div>

                            <div class="form-group mt-3" style="text-align: center;">
                                <input type="submit" value="Save" class="btn btn-success mb-4" />
                                <a asp-action="Index" class="btn btn-secondary ml-2 mb-4">Quay lại danh sách</a>
                            </div>
                        </form>
                    </div>
                   
                </div>    
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>

   