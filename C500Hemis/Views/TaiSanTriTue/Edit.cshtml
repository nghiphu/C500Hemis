@model C500Hemis.Models.TbTaiSanTriTue  // Định nghĩa model sử dụng trong view

@{
    ViewData["Title"] = "Edit";  // Đặt tiêu đề cho trang
}

<head>
    <!-- Kết nối các thư viện CSS cần thiết -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="styles.css"> <!-- Kết nối stylesheet tùy chỉnh -->
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&display=swap" rel="stylesheet" /> <!-- Kết nối font chữ -->
</head>

<style>
    body {
        height: 100%;
        margin: 0;
        overflow-y: auto;
        background-image: url("/images/taisantritue.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
    /* Định dạng cho nhãn điều khiển */
    label.control-label {
        margin: 3px;
    }
    /* Định dạng cho nút với hiệu ứng hover */
    .btn {
        transition: transform 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.2);
            // Phóng to nút khi hover
        }

    .form-control {
        background-color: rgb(198, 213, 223);
    }
</style>

<body>

    <div>
        <h1 style="text-align: center; color:#1f0d0d; margin-top:20px; font-family: 'Dancing Script', cursive; font-size:5rem;">
            Chỉnh Sửa
        </h1>
    </div>

    <div class="container mt-5">
        <div class="row justify-content-center table-hover" style="border-radius: 5%;">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div style="background-color:lightblue;">
                        <h4 class="card-title text-center mt-3"><i class="fas fa-user-edit"></i> Chỉnh Sửa Thông Tin</h4>
                    </div>
                    <hr />
                    <form asp-action="Edit" method="post">
                        <!-- Mở form với hành động Edit -->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Hiển thị thông báo lỗi -->
                        <input type="hidden" asp-for="IdTaiSanTriTue" /> <!-- Trường ẩn cho Id tài sản trí tuệ -->
                        <!-- Nhập liệu cho nhiệm vụ KHCN -->
                        <div class="form-group">
                            <label asp-for="IdNhiemVuKhcn" class="control-label" style="padding-left:7px;"></label>
                            <select asp-for="IdNhiemVuKhcn" class="form-control" asp-items="ViewBag.IdNhiemVuKhcn"></select>
                            <span asp-validation-for="IdNhiemVuKhcn" class="text-danger"></span> <!-- Thông báo lỗi nếu có -->
                        </div>

                        <!-- Nhập liệu cho mã giải pháp sáng chế -->
                        <div class="form-group">
                            <label asp-for="MaGiaiPhapSangChe" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="MaGiaiPhapSangChe" class="form-control" />
                            <span asp-validation-for="MaGiaiPhapSangChe" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho tên tài sản trí tuệ -->
                        <div class="form-group">
                            <label asp-for="TenTaiSanTriTue" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="TenTaiSanTriTue" class="form-control" />
                            <span asp-validation-for="TenTaiSanTriTue" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho tổ chức cấp bằng giấy chứng nhận -->
                        <div class="form-group">
                            <label asp-for="ToChucCapBangGiayChungNhan" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="ToChucCapBangGiayChungNhan" class="form-control" />
                            <span asp-validation-for="ToChucCapBangGiayChungNhan" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho loại tài sản trí tuệ -->
                        <div class="form-group">
                            <label asp-for="IdLoaiTaiSanTriTue" class="control-label" style="padding-left:7px;"></label>
                            <select asp-for="IdLoaiTaiSanTriTue" class="form-control" asp-items="ViewBag.IdLoaiTaiSanTriTue"></select>
                            <span asp-validation-for="IdLoaiTaiSanTriTue" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho ngày cấp bằng giấy chứng nhận -->
                        <div class="form-group">
                            <label asp-for="NgayCapBangGiayChungNhan" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="NgayCapBangGiayChungNhan" class="form-control" />
                            <span asp-validation-for="NgayCapBangGiayChungNhan" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho tổ chức cấp bằng -->
                        <div class="form-group">
                            <label asp-for="ToChucCapBang" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="ToChucCapBang" class="form-control" />
                            <span asp-validation-for="ToChucCapBang" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho số bằng -->
                        <div class="form-group">
                            <label asp-for="SoBang" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="SoBang" class="form-control" />
                            <span asp-validation-for="SoBang" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho ngày cấp -->
                        <div class="form-group">
                            <label asp-for="NgayCap" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="NgayCap" class="form-control" />
                            <span asp-validation-for="NgayCap" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho số đơn -->
                        <div class="form-group">
                            <label asp-for="SoDon" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="SoDon" class="form-control" />
                            <span asp-validation-for="SoDon" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho ngày nộp đơn -->
                        <div class="form-group">
                            <label asp-for="NgayNopDon" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="NgayNopDon" class="form-control" />
                            <span asp-validation-for="NgayNopDon" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho quyết định cấp bằng giấy chứng nhận -->
                        <div class="form-group">
                            <label asp-for="QuyetDinhCapBangGiayChungNhan" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="QuyetDinhCapBangGiayChungNhan" class="form-control" />
                            <span asp-validation-for="QuyetDinhCapBangGiayChungNhan" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho công bố bằng -->
                        <div class="form-group">
                            <label asp-for="CongBoBang" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="CongBoBang" class="form-control" />
                            <span asp-validation-for="CongBoBang" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho IPC -->
                        <div class="form-group">
                            <label asp-for="Ipc" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="Ipc" class="form-control" />
                            <span asp-validation-for="Ipc" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho chủ sở hữu -->
                        <div class="form-group">
                            <label asp-for="ChuSoHuu" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="ChuSoHuu" class="form-control" />
                            <span asp-validation-for="ChuSoHuu" class="text-danger"></span>
                        </div>
                        <!-- Nhập liệu cho tác giả sáng chế giải pháp -->
                        <div class="form-group">
                            <label asp-for="TacGiaSangCheGiaiPhap" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="TacGiaSangCheGiaiPhap" class="form-control" />
                            <span asp-validation-for="TacGiaSangCheGiaiPhap" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho tóm tắt nội dung tài sản trí tuệ -->
                        <div class="form-group">
                            <label asp-for="TomTatNoiDungTaiSanTriTue" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="TomTatNoiDungTaiSanTriTue" class="form-control" />
                            <span asp-validation-for="TomTatNoiDungTaiSanTriTue" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho người chủ trì -->
                        <div class="form-group">
                            <label asp-for="NguoiChuTri" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="NguoiChuTri" class="form-control" />
                            <span asp-validation-for="NguoiChuTri" class="text-danger"></span>
                        </div>

                        <!-- Nhập liệu cho năm được chấp nhận đơn hợp lệ -->
                        <div class="form-group">
                            <label asp-for="NamDuocChapNhanDonHopLe" class="control-label" style="padding-left:7px;"></label>
                            <input asp-for="NamDuocChapNhanDonHopLe" class="form-control" />
                            <span asp-validation-for="NamDuocChapNhanDonHopLe" class="text-danger"></span>
                        </div>



                        <!-- Nút lưu thông tin -->
                        <div class="form-group mt-4">
                            <input type="submit" value="Save" class="btn btn-primary" title="Lưu" />
                        </div>



                    </form>
                    <!-- Nút quay lại -->
                    <div style="display: inline-block;">
                        <a asp-action="Index" class="btn ">
                            <i class="fas fa-undo" title="Quay Lại "></i>
                        </a>
                        <div class="col-10"></div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }  <!-- Kết nối script kiểm tra dữ liệu nhập -->
    }

</body>