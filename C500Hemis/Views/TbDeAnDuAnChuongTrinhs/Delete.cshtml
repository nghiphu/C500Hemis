@model C500Hemis.Models.TbDeAnDuAnChuongTrinh

@{
    ViewData["Title"] = "Delete";
}
@*PHẠM XUÂN lONG 019-B8D55 LÀM VÀ COMMIT..
    Nội dung:-Tương tự như phần create nhưng chỉ cho phép xem không được sửa
             -Hiển thị nội dung đã nhập
    Hình thức: -sử dụng css làm đẹp
               - đồng bộ phong cách với các phần khác với màu chủ đạo là xanh và logo học viện an ninh
               - có hiệu ứng tương tác với các thuộc tính


*@
<h1 style="text-align:center">XÓA</h1>
<hr />
<style>
    body {
        background-color: rgb(250, 243, 240);
    }

    .form-container {
        background-color: rgb(156, 169, 134);
        max-width: 800px;
        background-image: url(https://upload.wikimedia.org/wikipedia/vi/8/85/Logo_hoc_vien_ANND.png); /*ảnh nền */
        background-position: center;
        background-repeat: no-repeat;
        margin: auto;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    h1, h4 {
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        table th, table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        table th {
            background-color: #4CAF50; /* Nền xanh lá */
            color: #fff; /* chữ trắng */
        }

        table td {
            background-color: rgba(225,225,225,0.8);
        }

        table tr:hover {
            background-color: rgba(221,221,221,0.6);
        }

    .form-group label {
        font-weight: bold;
        color: #333;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #d1d1d1;
        border-radius: 5px;
        background-color: rgba(225,225,225,0.5);
        transition: border-color 0.3s ease, box-shadow 0.3s ease; /* Smooth transitions */
    }

        .form-control:focus {
            border-color: #05c46b;
            box-shadow: 0 0 5px rgba(5, 196, 107, 0.6); /* Slight glow */
            outline: none;
            background-color: rgba(225,225,225,0.5);
        }

    .btn-danger {
        width: 100%;
        padding: 12px;
        background-color: darkred;
        border: none;
        color: #fff;
        font-weight: bold;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn-back:hover {
        background-color: rgb(105, 132, 116);
        transform: scale(1.05);
    }
</style>


<div class="form-container">
    <h4 style="text-align:center">ĐỀ ÁN, DỰ ÁN, CHƯƠNG TRÌNH</h4>
    <hr />
    <table>
        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="IdDeAnDuAnChuongTrinh" class="control-label">Đề án, dự án, chương trình</label>
                    <div class="hi">
                        <input type="text" class="form-control" value="@Html.DisplayFor(Model => Model.IdDeAnDuAnChuongTrinh)" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MaDeAnDuAnChuongTrinh" class="control-label">Mã đề án, dự án, chương trình</label>
                    <div class="hi">
                        <input type="text" class="form-control" value="@Html.DisplayFor(Model => Model.MaDeAnDuAnChuongTrinh)" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="TenDeAnDuAnChuongTrinh" class="control-label">Tên đề án, dự án, chương trình</label>
                    <div class="hi">
                        <input type="text" class="form-control" value="@Html.DisplayFor(Model => Model.TenDeAnDuAnChuongTrinh)" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NoiDungTomTat" class="control-label">Nội dung tóm tắt</label>
                    <div class="hi">
                        <input type="text" class="form-control" value="@Html.DisplayFor(Model => Model.NoiDungTomTat)" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MucTieu" class="control-label">Mục tiêu</label>
                    <div class="hi">
                        <input type="text" class="form-control" value="@Html.DisplayFor(Model => Model.MucTieu)" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ThoiGianHopTacTu" class="control-label">Thời gian hợp tác từ</label>
                    <div class="hi">
                        <input type="text" class="form-control" value="@Html.DisplayFor(Model => Model.ThoiGianHopTacTu)" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ThoiGianHopTacDen" class="control-label">Thời gian hợp tác đến</label>
                    <div class="hi">
                        <input type="text" class="form-control" value="@Html.DisplayFor(Model => Model.ThoiGianHopTacTu)" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="TongKinhPhi" class="control-label">Tổng kinh phí</label>
                    <div class="hi">
                        <input type="text" class="form-control" value="@Html.DisplayFor(Model => Model.ThoiGianHopTacDen)" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="IdNguonKinhPhiDeAnDuAnChuongTrinh" class="control-label">Nguồn kinh phí đề án, dự án, chương trình</label>
                    <div class="hi">
                        <input type="text" class="form-control" value="@Html.DisplayFor(Model => Model.IdNguonKinhPhiDeAnDuAnChuongTrinhNavigation.NguonKinhPhiChoDeAn)" readonly />
                    </div>
                </div>
            </td>
        </tr>
    </table>



    <form asp-action="Delete">
        <input type="hidden" asp-for="IdDeAnDuAnChuongTrinh" />
        <input type="submit" value="Xóa" class="btn btn-danger" />

    </form>
</div>
<div>
    <a asp-action="Index" class="btn btn-back" style="margin-top:10px; background-color:darkolivegreen; margin-left:250px">
        <b style="color:ghostwhite">Quay lại</b>
    </a>
</div>
