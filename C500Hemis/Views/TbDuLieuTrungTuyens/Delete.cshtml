@model C500Hemis.Models.TbDuLieuTrungTuyen

@{
    ViewData["Title"] = "Xóa dữ liệu trúng tuyển";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<style>
    /* Màu nền tổng thể của trang */
    body {
        background-color: #f2f4f8;
    }

    /* Định dạng cho tiêu đề */
    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #dc3545; /* Màu đỏ đậm */
    }

    h3 {
        font-size: 1.5rem;
        font-weight: normal;
        color: #6c757d; /* Màu xám */
    }

    /* Định dạng phần chứa thông tin */
    .info-container {
        background-color: #f8d7da;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0px 4px 10px rgba(220, 53, 69, 0.4);
    }

    /* Định dạng cho dl (danh sách mô tả) */
    dl.row {
        margin-top: 20px;
    }

    dt {
        font-weight: bold;
        color: #343a40; /* Màu đen nhạt */
    }

    dd {
        font-weight: normal;
        color: #495057; /* Màu xám đậm */
    }

    hr {
        border-top: 2px solid #dc3545; /* Đường kẻ đỏ đậm */
    }

    /* Hiệu ứng cho các nút hành động */
    .btn {
        transition: all 0.3s ease; /* Hiệu ứng chuyển đổi mượt mà */
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
    }

        /* Hiệu ứng hover */
        .btn:hover {
            transform: translateY(-3px); /* Di chuyển lên khi hover */
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Bóng mờ khi hover */
        }

        /* Hiệu ứng active khi nhấn */
        .btn:active {
            transform: scale(0.95); /* Giảm kích thước nhẹ khi nhấn */
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>

