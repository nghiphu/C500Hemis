@model C500Hemis.Models.TbDuLieuTrungTuyen

@{
    ViewData["Title"] = "Sửa dữ liệu trúng tuyển";
}

<h1 class="text-center text-primary mt-5">Sửa dữ liệu trúng tuyển</h1>

<div class="container mt-5 py-5" style="background-color: #f0f8ff; border-radius: 15px; box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);">
    <h4 class="text-center text-secondary">Dữ liệu trúng tuyển</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Form để sửa dữ liệu trúng tuyển -->
            <form asp-action="Edit">
                <!-- Hiển thị thông báo lỗi cho toàn bộ form nếu có -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Nhập ID dữ liệu trúng tuyển -->
                <input type="hidden" asp-for="IdDuLieuTrungTuyen" />

                <!-- Nhập CCCD -->
                <div class="form-group mb-3">
                    <label asp-for="Cccd" class="form-label fw-bold"></label>
                    <input asp-for="Cccd" class="form-control border-info" placeholder="Nhập Căn cước công dân" />
                    <span asp-validation-for="Cccd" class="text-danger"></span>
                </div>

                <!-- Nhập Họ và tên -->
                <div class="form-group mb-3">
                    <label asp-for="HoVaTen" class="form-label fw-bold"></label>
                    <input asp-for="HoVaTen" class="form-control border-info" placeholder="Nhập Họ và tên" />
                    <span asp-validation-for="HoVaTen" class="text-danger"></span>
                </div>

                <!-- Nhập Mã tuyển sinh -->
                <div class="form-group mb-3">
                    <label asp-for="MaTuyenSinh" class="form-label fw-bold"></label>
                    <input asp-for="MaTuyenSinh" class="form-control border-info" placeholder="Nhập Mã tuyển sinh" />
                    <span asp-validation-for="MaTuyenSinh" class="text-danger"></span>
                </div>

                <!-- Nhập Khóa đào tạo trúng tuyển -->
                <div class="form-group mb-3">
                    <label asp-for="KhoaDaoTaoTrungTuyen" class="form-label fw-bold"></label>
                    <input asp-for="KhoaDaoTaoTrungTuyen" class="form-control border-info" placeholder="Nhập Khóa đào tạo trúng tuyển" />
                    <span asp-validation-for="KhoaDaoTaoTrungTuyen" class="text-danger"></span>
                </div>

                <!-- Dropdown chọn Đối tượng đầu vào và Đối tượng ưu tiên -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdDoiTuongDauVao" class="form-label fw-bold"></label>
                            <select asp-for="IdDoiTuongDauVao" class="form-control border-info" asp-items="ViewBag.IdDoiTuongDauVao">
                                <option value=""> --Chọn Đối Tượng Tuyển Sinh-- </option>
                            </select>
                            <span asp-validation-for="IdDoiTuongDauVao" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdDoiTuongUuTien" class="form-label fw-bold"></label>
                            <select asp-for="IdDoiTuongUuTien" class="form-control border-info" asp-items="ViewBag.IdDoiTuongUuTien">
                                <option value=""> --Chọn Đối Tượng Ưu Tiên-- </option>
                            </select>
                            <span asp-validation-for="IdDoiTuongUuTien" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Dropdown chọn Hình thức tuyển sinh và Khu vực tuyển sinh -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdHinhThucTuyenSinh" class="form-label fw-bold"></label>
                            <select asp-for="IdHinhThucTuyenSinh" class="form-control border-info" asp-items="ViewBag.IdHinhThucTuyenSinh">
                                <option value=""> --Chọn Hình Thức Tuyển Sinh-- </option>
                            </select>
                            <span asp-validation-for="IdHinhThucTuyenSinh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdKhuVuc" class="form-label fw-bold"></label>
                            <select asp-for="IdKhuVuc" class="form-control border-info" asp-items="ViewBag.IdKhuVuc">
                                <option value=""> --Chọn Khu Vực-- </option>
                            </select>
                            <span asp-validation-for="IdKhuVuc" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Các ô nhập điểm môn 1, môn 2 và môn 3 cùng điểm ưu tiên -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DiemMon1" class="form-label fw-bold"></label>
                            <input asp-for="DiemMon1" class="form-control border-info" placeholder="Nhập Điểm môn 1" />
                            <span asp-validation-for="DiemMon1" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DiemMon2" class="form-label fw-bold"></label>
                            <input asp-for="DiemMon2" class="form-control border-info" placeholder="Nhập Điểm môn 2" />
                            <span asp-validation-for="DiemMon2" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DiemMon3" class="form-label fw-bold"></label>
                            <input asp-for="DiemMon3" class="form-control border-info" placeholder="Nhập Điểm môn 3" />
                            <span asp-validation-for="DiemMon3" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DiemUuTien" class="form-label fw-bold"></label>
                            <input asp-for="DiemUuTien" class="form-control border-info" placeholder="Nhập Điểm ưu tiên" />
                            <span asp-validation-for="DiemUuTien" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Tổng điểm xét tuyển được tính tự động và không cho người dùng chỉnh sửa -->
                <div class="form-group mb-3">
                    <label asp-for="TongDiemXetTuyen" class="form-label fw-bold"></label>
                    <input asp-for="TongDiemXetTuyen" class="form-control border-info" readonly />
                    <span asp-validation-for="TongDiemXetTuyen" class="text-danger"></span>
                </div>

                <!-- Các thông tin bổ sung khác -->
                <div class="form-group mb-3">
                    <label asp-for="SoQuyetDinhTrungTuyen" class="form-label"></label>
                    <input asp-for="SoQuyetDinhTrungTuyen" class="form-control border-info" placeholder="Nhập Số quyết định trúng tuyển" />
                    <span asp-validation-for="SoQuyetDinhTrungTuyen" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NgayBanHanhQuyetDinhTrungTuyen" class="form-label"></label>
                    <input asp-for="NgayBanHanhQuyetDinhTrungTuyen" class="form-control border-info" type="date" />
                    <span asp-validation-for="NgayBanHanhQuyetDinhTrungTuyen" class="text-danger"></span>
                </div>

                <!-- Nút lưu form -->
                <div class="text-center mt-4">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-success px-4 py-2" style="font-size: 18px; box-shadow: 0px 4px 10px rgba(0, 128, 0, 0.4); transition: transform 0.2s;">
                </div>
            </form>
        </div>
    </div>

    <!-- Nút quay lại -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary px-3 py-2" style="font-size: 16px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); transition: transform 0.2s;">Quay lại trang danh sách</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
