@model C500Hemis.Models.TbHoiThaoHoiNghi

@{
    ViewData["Title"] = "Create";
}
<style>
    /*body*/
    body {
        background-color: #dacae3;
    }
    /*thanh tiêu đề*/
    h1 {
        color: #29337C;
        text-align: center;
        font-weight: bold;
        font-family: 'UVN Chim Bien Nang';
    }
    /*table*/
    div .row {
        background-color: #7E60BF;
        justify-content: center;
        align-items: center;
    }
    /*title*/
    .control-label {
        font-size: 20px;
        font-weight: bold;
        color: #FFE1FF;
        -webkit-text-stroke: 0.3px #433878;
        margin-top: 10px;
    }
    /*content*/
    .form-control {
        margin-top: 10px;
        background-color: #F5EFFF;
        color: #29337C;
        font-weight: 400;
    }
    /*button*/
    .btn-primary {
        width:100%;
        border: solid #433878 0.5px;
        margin: 10px 0;
        background-color: #FAF7F0;
        color: #433878;
    }

        .btn-primary:hover {
            color: #FAF7F0;
            background-color: #433878;
            border: solid #433878 0.5px;
        }
    .comeback {
        border-radius: 5px;
        margin: 10px 0;
        background-color: #433878;
        color: #FAF7F0;
        border: solid #433878 0.5px;
    }
        .comeback:hover {
            transform: scale(1.05);
            background-color: #FAF7F0;
            color: #433878;
        }
   
</style>
<h1>THÊM MỚI DỮ LIỆU</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="IdHoiThaoHoiNghi" class="control-label"></label>
                        <input asp-for="IdHoiThaoHoiNghi" class="form-control" placeholder="12345"/>
                        <span asp-validation-for="IdHoiThaoHoiNghi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaHoiThaoHoiNghi" class="control-label"></label>
                        <input asp-for="MaHoiThaoHoiNghi" class="form-control" placeholder="HT" />
                        <span asp-validation-for="MaHoiThaoHoiNghi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TenHoiThaoHoiNghi" class="control-label"></label>
                        <input asp-for="TenHoiThaoHoiNghi" class="form-control" placeholder="Hội nghị nâng cao kĩ năng ATTT C500" />
                        <span asp-validation-for="TenHoiThaoHoiNghi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CoQuanCoThamQuyenCapPhep" class="control-label"></label>
                        <input asp-for="CoQuanCoThamQuyenCapPhep" class="form-control" placeholder="Khoa NV7"/>
                        <span asp-validation-for="CoQuanCoThamQuyenCapPhep" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MucTieu" class="control-label"></label>
                        <input asp-for="MucTieu" class="form-control" placeholder="Nâng cao kĩ năng ATTT của học viên lớp ATTT"/>
                        <span asp-validation-for="MucTieu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NoiDung" class="control-label"></label>
                        <input asp-for="NoiDung" class="form-control" placeholder="thảo luận về phương hướng, giải pháp nâng cao kĩ năng ATTT"/>
                        <span asp-validation-for="NoiDung" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SoLuongDaiBieuThamDu" class="control-label"></label>
                        <input asp-for="SoLuongDaiBieuThamDu" class="form-control"placeholder="300"/>
                        <span asp-validation-for="SoLuongDaiBieuThamDu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SoLuongDaiBieuQuocTeThamDu" class="control-label"></label>
                        <input asp-for="SoLuongDaiBieuQuocTeThamDu" class="form-control" placeholder="100"/>
                        <span asp-validation-for="SoLuongDaiBieuQuocTeThamDu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThoiGianToChuc" class="control-label"></label>
                        <input asp-for="ThoiGianToChuc" class="form-control" placeholder="05/10/2024"/>
                        <span asp-validation-for="ThoiGianToChuc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiaDiemToChuc" class="control-label"></label>
                        <input asp-for="DiaDiemToChuc" class="form-control" placeholder="Học viện An ninh nhân dân"/>
                        <span asp-validation-for="DiaDiemToChuc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdNguonKinhPhiHoiThao" class="control-label"></label>
                        <select asp-for="IdNguonKinhPhiHoiThao" class="form-control" asp-items="ViewBag.IdNguonKinhPhiHoiThao"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="DonViChuTri" class="control-label">Đơn vị chủ trì</label>
                        <input asp-for="DonViChuTri" class="form-control" placeholder="Khoa NV7"/>
                        <span asp-validation-for="DonViChuTri" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>


<div>
    <a class="btn comeback" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
