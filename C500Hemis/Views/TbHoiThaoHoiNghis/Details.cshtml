@model C500Hemis.Models.TbHoiThaoHoiNghi

@{
    ViewData["Title"] = "Details";
}

<style>
    /*body*/
    body {
        background-color: #dacae3;
    }
    /*thanh tiêu đề*/
    h1 {
        color: #433878;
        font-weight: bold;
        text-align: center;
        font-family: 'UVN Chim Bien Nang';
    }
    /*table*/
    table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 2px 5px 10px rgba(0, 0, 0, 0.5);
    }
    /*title*/
    th, td {
        border: 2px solid #433878;
        background-color: #F5EFFF;
        text-align: left;
        padding: 8px;
    }

    th {
        font-weight: bold;
        accent-color: #433878;
    }
    /*button*/
    .btn-primary {
        margin-top: 5px;
        background-color: #433878;
        color: #FAF7F0;
        border: solid #433878 0.5px;
    }

        .btn-primary:hover {
            transform: scale(1.05);
            background-color: #FAF7F0;
            color: #433878;
        }
</style>

<h1>CHI TIẾT VỀ THÔNG TIN</h1>
<table class="details-table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.MaHoiThaoHoiNghi)</th>
        <td>@Html.DisplayFor(model => model.MaHoiThaoHoiNghi)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.TenHoiThaoHoiNghi)</th>
        <td>@Html.DisplayFor(model => model.TenHoiThaoHoiNghi)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.CoQuanCoThamQuyenCapPhep)</th>
        <td>@Html.DisplayFor(model => model.CoQuanCoThamQuyenCapPhep)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.MucTieu)</th>
        <td>@Html.DisplayFor(model => model.MucTieu)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.NoiDung)</th>
        <td>@Html.DisplayFor(model => model.NoiDung)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.SoLuongDaiBieuThamDu)</th>
        <td>@Html.DisplayFor(model => model.SoLuongDaiBieuThamDu)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.SoLuongDaiBieuQuocTeThamDu)</th>
