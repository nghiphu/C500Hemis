@model C500Hemis.Models.TbHoiThaoHoiNghi

@{
    ViewData["Title"] = "Edit";
}
<style>
    /*body*/
    div {
        margin: auto;
    }

    body {
        background-color: #dacae3;
    }
    /*thanh tiêu đề*/
    h1 {
        color: #29337C;
        text-align: center;
        font-weight: bold;
        font-family: 'UVN Chim Bien Nang';
    }
    /*table*/
    .row {
        background-color: #7E60BF;
        justify-content: center;
        align-items: center;
    }
    /*title*/
    .control-label {
        size: 20px;
        font-weight: bold;
        color: #FFE1FF;
        -webkit-text-stroke: 0.3px #433878;
        margin-top: 10px;
    }

    #line1 {
        margin-bottom: 10px;
    }
    /*content*/
    .form-control {
        margin-top: 10px;
        background-color: #F5EFFF;
        color: #29337C;
        font-weight: 400;
    }
    /*button*/
    /*nút comeback*/
    .comeback {
        margin-top: 10px;
        margin-right: 50px;
        background-color: #29337C;
        color: #F5EFFF;
        padding: 5px 10px;
        border-radius: 5px;
    }

        .comeback:hover {
            transform: scale(1.05);
            background-color: #F5EFFF;
            color: #29337C;
        }
    /*nút save*/
    .btn-primary {
        margin: 20px 0;
        background-color: #F5EFFF;
        color: #433878;
        border: none;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #433878;
            color: #F5EFFF;
            transform: scale(1.05);
        }
</style>
<h1>CHỈNH SỬA</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdHoiThaoHoiNghi" />
            <!--11 dòng nên lẻ 1 nên sẽ nằm 1 hàng riêng-->
            <div class="form-group" id="line1">
                <!--1 dòng lẻ-->
                <label asp-for="MaHoiThaoHoiNghi" class="control-label"></label>
                <input asp-for="MaHoiThaoHoiNghi" class="form-control" />
                <span asp-validation-for="MaHoiThaoHoiNghi" class="text-danger"></span>
            </div>
            <div class="row">
                <!--10 dòng còn lại-->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TenHoiThaoHoiNghi" class="control-label"></label>
                        <input asp-for="TenHoiThaoHoiNghi" class="form-control" />
                        <span asp-validation-for="TenHoiThaoHoiNghi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CoQuanCoThamQuyenCapPhep" class="control-label"></label>
                        <input asp-for="CoQuanCoThamQuyenCapPhep" class="form-control" />
                        <span asp-validation-for="CoQuanCoThamQuyenCapPhep" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MucTieu" class="control-label"></label>
                        <input asp-for="MucTieu" class="form-control" />
                        <span asp-validation-for="MucTieu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NoiDung" class="control-label"></label>
                        <input asp-for="NoiDung" class="form-control" />
                        <span asp-validation-for="NoiDung" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SoLuongDaiBieuThamDu" class="control-label"></label>
                        <input asp-for="SoLuongDaiBieuThamDu" class="form-control" />
                        <span asp-validation-for="SoLuongDaiBieuThamDu" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SoLuongDaiBieuQuocTeThamDu" class="control-label"></label>
                        <input asp-for="SoLuongDaiBieuQuocTeThamDu" class="form-control" />
                        <span asp-validation-for="SoLuongDaiBieuQuocTeThamDu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThoiGianToChuc" class="control-label"></label>
                        <input asp-for="ThoiGianToChuc" class="form-control" />
                        <span asp-validation-for="ThoiGianToChuc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiaDiemToChuc" class="control-label"></label>
                        <input asp-for="DiaDiemToChuc" class="form-control" />
                        <span asp-validation-for="DiaDiemToChuc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdNguonKinhPhiHoiThao" class="control-label"></label>
                        <select asp-for="IdNguonKinhPhiHoiThao" class="form-control" asp-items="ViewBag.IdNguonKinhPhiHoiThao"></select>
                        <span asp-validation-for="IdNguonKinhPhiHoiThao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DonViChuTri" class="control-label"></label>
                        <input asp-for="DonViChuTri" class="form-control" />
                        <span asp-validation-for="DonViChuTri" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn comeback" asp-action="Index">Trở về trang chủ</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
