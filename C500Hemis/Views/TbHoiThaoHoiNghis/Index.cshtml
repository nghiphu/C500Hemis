@model IEnumerable<C500Hemis.Models.TbHoiThaoHoiNghi>

@{
    ViewData["Title"] = "Hội Thảo Hội Nghị";
}
<!--thực hiện bởi: Lê Xuân Hưng B8D55-->
<style>
    /*body*/
    body {
        background-color: #dacae3;
    }
    /*thanh tiêu đề*/
    h1 {
        text-align: center;
        background-color: #433878;
        color: #FAF7F0;
        font-weight: bold;
        padding: 10px;
        border-radius: 5px;
        font-family: 'UVN Chim Bien Nang';
    }
    /*thanh hiển thị bản ghi*/
    h5 {
        text-align: center;
        color: #433878;
        font-weight: bold;
        font-family: 'UVN Chim Bien Nang';
    }
    /*table*/
    table {
        background-color: #F5EFFF;
        box-shadow: 2px 5px 10px rgba(0, 0, 0, 0.5);
        border: solid #433878 1px;
    }
    /*title*/
    thead {
        background-color: #433878;
    }

    th {
        border: solid #FFE1FF 1px;
        color: #FFE1FF;
        text-align: center !important;
        vertical-align: middle;
        font-family: 'UVN Chim Bien Nang';
    }
    /*content*/
    td {
        border: solid #433878 1px;
        padding: 10px;
        text-align: left;
        color: #433878;
    }
    /*button*/
    .btn {
        border: none;
        margin: 5px;
    }

    .btn-primary {
        white-space: nowrap;
        background-color: #433878;
        color: #FAF7F0;
    }

        .btn-primary:hover {
            transform: scale(1.05);
            background-color: #FAF7F0;
            color: #433878;
        }
</style>
<h1> HỘI THẢO/HỘI NGHỊ</h1>
<h5>Đã nhập @Model.Count() Hội thảo, hội nghị</h5>
<head>
    <!--bootstrap css icon-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!--tìm kiếm dựa trên thư viện jquery-->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
</head>
<body>
    <table id="ntable" class="table table-striped table-bordered" id="productsTable">
        <thead>
            <tr>
                <th class="STT">STT</th>
                <th>@Html.DisplayNameFor(model => model.TenHoiThaoHoiNghi)</th>
                <th>@Html.DisplayNameFor(model => model.MucTieu)</th>
                <th>@Html.DisplayNameFor(model => model.SoLuongDaiBieuThamDu)</th>
                <th>@Html.DisplayNameFor(model => model.ThoiGianToChuc)</th>
                <th>@Html.DisplayNameFor(model => model.DiaDiemToChuc)</th>
                <th>@Html.DisplayNameFor(model => model.IdNguonKinhPhiHoiThaoNavigation)</th>
                <th>Quản Trị</th>
            </tr>
        </thead>
        <tbody>
            <!--khai báo stt để hiện thị bản ghi-->
            @{
                int stt = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td class="STT">@(stt++)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenHoiThaoHoiNghi)</td>
                    <td>@Html.DisplayFor(modelItem => item.MucTieu)</td>
                    <td>@Html.DisplayFor(modelItem => item.SoLuongDaiBieuThamDu)</td>
                    <td>@Html.DisplayFor(modelItem => item.ThoiGianToChuc)</td>
                    <td>@Html.DisplayFor(modelItem => item.DiaDiemToChuc)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdNguonKinhPhiHoiThaoNavigation.NguonKinhPhi)</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdHoiThaoHoiNghi"><i class="fa fa-pencil"></i> Sửa</a>
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.IdHoiThaoHoiNghi"><i class="fa fa-info-circle"></i> Chi tiết</a>
                            <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.IdHoiThaoHoiNghi"><i class="fa fa-trash"></i> Xoá</a>

                        </div>


                    </td>

                </tr>
            }
        </tbody>
    </table>
    <p>
        <a class="btn btn-primary" asp-action="Create"> Tạo mới </a>
    </p>
</body>
<script>
    new DataTable('#ntable', {
        searching: true, // Mặc định là true, set false để tắt chức năng search
        processing: true,
        info: false, // Tắt thông tin về table VD: Showing 1 to 14 of 14 entries
        language: {
            processing: "Message khi đang tải dữ liệu",
            search: "Tìm kiếm",
            lengthMenu: "Điều chỉnh số lượng bản ghi trên 1 trang _MENU_ ",
            info: "Bản ghi từ _START_ đến _END_ Tổng công _TOTAL_ bản ghi",
            infoEmpty: "Khi không có dữ liệu, Hiển thị 0 bản ghi trong 0 tổng cộng 0 ",
            infoFiltered: "(Message bổ sung cho info khi không search đc record nào _MAX_)",
            infoPostFix: "Alo Alo", // Cái này khi thêm vào nó sẽ đứng sau info
            loadingRecords: "",
            zeroRecords: "Khi tìm kiếm không match với record nào",
            emptyTable: "Không có dữ liệu",
            paginate: {
                first: "Trang đầu",
                previous: "Trang trước",
                next: "Trang sau",
                last: "Trang cuối"
            },
            aria: {
                sortAscending: ": Message khi đang sắp xếp theo column",
                sortDescending: ": Message khi đang sắp xếp theo column",
            }
        },
    });
</script>