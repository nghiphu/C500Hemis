@model IEnumerable<C500Hemis.Models.TbThanhPhanThamGiaDoanCongTac>

@{
    ViewData["Title"] = "Thành Phần Tham Gia Đoàn Công Tác";
}

<head>
    <!-- Thư viện CSS cho DataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />
    <!-- Thư viện jQuery -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Thư viện DataTables JS -->
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <!-- Phông chữ từ Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap" rel="stylesheet">
    <!-- Thư viện biểu tượng Boxicons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        .logo img {
            width: 100px;
        }

        .logo {
            display: flex; /* Sử dụng Flexbox để dễ dàng căn giữa */
            justify-content: center;
            text-align: center;
        }

        body {
            background-color: rgb(230, 241, 216); /* Màu nền */
            font-family: 'Poppins', sans-serif; /* Phông chữ chính */
        }

        h1 {
            text-align: center; /* Căn giữa tiêu đề */
            font-family: 'Playfair Display', serif; /* Phông chữ cho tiêu đề */
            font-size: 28px; /* Kích thước chữ tiêu đề */
            margin: 10px 0; /* Khoảng cách trên và dưới tiêu đề */
        }

        p {
            text-align: center; /* Căn giữa phụ đề */
            font-size: 20px; /* Kích thước chữ cho phụ đề */
        }

        th, td {
            text-align: center; /* Căn giữa nội dung bảng */
            vertical-align: middle; /* Căn giữa theo chiều dọc */
        }

        thead {
            background-color: #3498db; /* Màu nền cho phần đầu bảng */
            color: white; /* Màu chữ cho phần đầu bảng */
        }

        tbody tr:nth-child(odd) {
            background-color: #e8e8e8; /* Màu nền cho dòng lẻ */
        }

        tbody tr:nth-child(even) {
            background-color: #ffffff; /* Màu nền cho dòng chẵn */
        }

        .btn {
            padding: 3px 6px; /* Khoảng cách trong nút */
            font-size: 12px; /* Kích thước chữ cho nút */
            border-radius: 4px; /* Bo góc cho nút */
            margin: 0 2px; /* Khoảng cách giữa các nút */
        }

        .btn-warning {
            background-color: #2ecc71; /* Màu nền cho nút cảnh báo */
            color: white; /* Màu chữ cho nút cảnh báo */
            width: 40px; /* Chiều rộng nút cảnh báo */
        }

        .btn-info {
            width: 40px; /* Chiều rộng nút thông tin */
            background-color: #3498db; /* Màu nền cho nút thông tin */
            color: white; /* Màu chữ cho nút thông tin */
            display: flex; /* Sử dụng flexbox để căn giữa icon và chữ */
            align-items: center; /* Căn giữa theo chiều dọc */
            padding: 5px 10px; /* Khoảng cách trong nút thông tin */
        }

            .btn-info i {
                margin-right: 5px; /* Khoảng cách giữa icon và chữ */
            }

        .btn-danger {
            background-color: #e74c3c;
            color: white; /* Màu chữ cho nút xóa */
            width: 40px; /* Chiều rộng nút xóa */
        }

        .btn-group {
            display: flex; /* Sử dụng flexbox cho nhóm nút */
            justify-content: space-around; /* Căn đều khoảng cách giữa các nút */
        }

        .btn-primary {
            width: 100px;
            font-size: 20px;
        }
    </style>
</head>
<div class="logo">
    <p>
        <img src="https://upload.wikimedia.org/wikipedia/vi/8/85/Logo_hoc_vien_ANND.png" alt="Học viện An ninh nhân dân">
    </p>
    <h1 class="text-center">
        Thành Phần Tham Gia Đoàn Công Tác <br />
        <p style="font-size: 20px"> (Đã nhập @Model.Count() Hội thảo, hội nghị) </p>
    </h1>
</div>
<p style="text-align:center">
    <a class="btn btn-primary" asp-action="Create">Tạo mới</a>
</p>



<body>


    <table id="ntable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tên Cán Bộ</th>
                <th> Mã Đoàn Công Tác</th>
                <th>Vai Trò Tham Gia</th>
                <th>  </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCanBoNavigation.IdNguoiNavigation.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdDoanCongTacNavigation.TenDoanCongTac)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdVaiTroThamGiaNavigation.VaiTroThamGia)
                    </td>
                    <td>
                        <div class="btn-group">

                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdThanhPhanThamGiaDoanCongTac"><i class="fa fa-pencil-alt"></i>Sửa</a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdThanhPhanThamGiaDoanCongTac"><i class="fa fa-info-circle"></i>Chi tiết</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdThanhPhanThamGiaDoanCongTac"><i class="fa fa-trash"></i>Xoá</a>

                        </div>
                </tr>
            }
        </tbody>
    </table>
</body>


<script>
    new DataTable('#ntable', {
        searching: true,
        processing: true,
        info: false,
        paging: true,
        lengthMenu: [5, 10],
        language: {
            processing: "Đang tải dữ liệu...",
            search: "Tìm kiếm",
            lengthMenu: "Hiển thị _MENU_ bản ghi",
            info: "Bản ghi từ _START_ đến _END_ trong tổng cộng _TOTAL_ bản ghi",
            infoEmpty: "Không có dữ liệu",
            infoFiltered: "(lọc từ _MAX_ bản ghi)",
            loadingRecords: "Đang tải...",
            zeroRecords: "Không tìm thấy bản ghi nào",
            emptyTable: "Không có dữ liệu",
            paginate: {
                first: "Trang đầu",
                previous: "Trang trước",
                next: "Trang sau",
                last: "Trang cuối"
            },
            aria: {
                sortAscending: ": sắp xếp tăng dần",
                sortDescending: ": sắp xếp giảm dần"
            }
        },
    });
</script>

<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>