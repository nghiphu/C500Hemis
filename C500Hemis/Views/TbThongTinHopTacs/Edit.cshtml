@model C500Hemis.Models.TbThongTinHopTac

@{
    ViewData["Title"] = "Chỉnh sửa";
}

<h1 style="text-align:center; color:aliceblue">Chỉnh sửa </h1>


<style>
    body {
        background-image: url('/images/nen2.jpg');
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .form-container {
        max-width: 800px;
        margin: auto;
        background-color: #f7f9fc;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    h1, h4 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        table th, table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        table th {
            background-color: #4CAF50; /* màu nền */
            color: #fff; /* màu  */
        }

        table td {
            background-color: #f2f2f2; 
        }

        table tr:hover {
            background-color: #ddd; /* hiệu ứng */
        }

    .form-group label {
        font-weight: bold;
        color: #333;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #d1d1d1;
        border-radius: 5px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease; 
    }

        .form-control:focus {
            border-color: #05c46b;
            box-shadow: 0 0 5px rgba(5, 196, 107, 0.5); 
            outline: none;
        }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #05c46b;
        border: none;
        color: #fff;
        font-weight: bold;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
        transition: background-color 0.3s ease, transform 0.3s ease; /* Hiệu ứng chuyển tiếp và nhấn nút mượt mà */
    }

        .btn-primary:hover {
            background-color: #048a55;
            transform: scale(1.05); /*Lớn hơn một chút*/
        }
</style>


<div class="form-container">
    <h4> Thông tin hợp tác với tổ chức  </h4>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <input type="hidden" asp-for="IdThongTinHopTac" />
        <table>
            <tr>
                <td>

                    
                    <div class="form-group">
                        <label asp-for="IdToChucHopTac" class="control-label"> Id Tổ chức hợp tác </label>
                        <select asp-for="IdToChucHopTac" class="form-control" asp-items="ViewBag.IdToChucHopTac"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThoiGianHopTacTu" class="control-label"> Thời gian hợp tác từ </label>
                        <input asp-for="ThoiGianHopTacTu" class="form-control" />
                        <span asp-validation-for="ThoiGianHopTacTu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThoiGianHopTacDen" class="control-label"> Thời gian hợp tác đến </label>
                        <input asp-for="ThoiGianHopTacDen" class="form-control" />
                        <span asp-validation-for="ThoiGianHopTacDen" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TenThoaThuan" class="control-label"> Tên thỏa thuận  </label>
                        <input asp-for="TenThoaThuan" class="form-control" />
                        <span asp-validation-for="TenThoaThuan" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThongTinLienHeDoiTac" class="control-label">Thông tin liên hệ đối tác </label>
                        <input asp-for="ThongTinLienHeDoiTac" class="form-control" />
                        <span asp-validation-for="ThongTinLienHeDoiTac" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MucTieu" class="control-label"> Mục tiêu </label>
                        <input asp-for="MucTieu" class="form-control" />
                        <span asp-validation-for="MucTieu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DonViTrienKhai" class="control-label"> Đơn vị triển khai </label>
                        <input asp-for="DonViTrienKhai" class="form-control" />
                        <span asp-validation-for="DonViTrienKhai" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group">
                        <label asp-for="SanPhamChinh" class="control-label"> Sản phẩm chính </label>
                        <input asp-for="SanPhamChinh" class="form-control" />
                        <span asp-validation-for="SanPhamChinh" class="text-danger"></span>
                    </div>

                </td>
            </tr>
        </table>

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> Quay lại </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
