@model C500Hemis.Models.TbThongTinHopTac

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa </h1>
<style>
    div {
        margin: auto
    }

    body {
        background-color: #05c46b;
        font-family: Verdana;
    }

    /* Căn giữa toàn bộ nội dung */
    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Chiều cao toàn màn hình */
    }

    form {
        background-color: #fff;
        max-width: 500px;
        padding: 30px 20px;
        box-shadow: 2px 5px 10px rgba(0, 0, 0, 0.5);
        border-radius: 10px;
    }

    h1, h4 {
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            margin-bottom: 5px;
            display: block;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background-color: #05c46b;
        border: none;
        color: #fff;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #048a55;
        }
</style>
<h4>Thông tin hợp tác</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdThongTinHopTac" />
            <div class="form-group">
                <label asp-for="IdToChucHopTac" class="control-label"></label>
                <select asp-for="IdToChucHopTac" class="form-control" asp-items="ViewBag.IdToChucHopTac"></select>
                <span asp-validation-for="IdToChucHopTac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianHopTacTu" class="control-label"></label>
                <input asp-for="ThoiGianHopTacTu" class="form-control" />
                <span asp-validation-for="ThoiGianHopTacTu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianHopTacDen" class="control-label"></label>
                <input asp-for="ThoiGianHopTacDen" class="form-control" />
                <span asp-validation-for="ThoiGianHopTacDen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenThoaThuan" class="control-label"></label>
                <input asp-for="TenThoaThuan" class="form-control" />
                <span asp-validation-for="TenThoaThuan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThongTinLienHeDoiTac" class="control-label"></label>
                <input asp-for="ThongTinLienHeDoiTac" class="form-control" />
                <span asp-validation-for="ThongTinLienHeDoiTac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MucTieu" class="control-label"></label>
                <input asp-for="MucTieu" class="form-control" />
                <span asp-validation-for="MucTieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonViTrienKhai" class="control-label"></label>
                <input asp-for="DonViTrienKhai" class="form-control" />
                <span asp-validation-for="DonViTrienKhai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdHinhThucHopTac" class="control-label"></label>
                <select asp-for="IdHinhThucHopTac" class="form-control" asp-items="ViewBag.IdHinhThucHopTac"></select>
                <span asp-validation-for="IdHinhThucHopTac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SanPhamChinh" class="control-label"></label>
                <input asp-for="SanPhamChinh" class="form-control" />
                <span asp-validation-for="SanPhamChinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> Quay lại </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
