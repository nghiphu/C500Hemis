@model IEnumerable<C500Hemis.Models.TbThongTinHopTac>

@{
    ViewData["Title"] = "Index";
}

<h1>Thông tin tổ chức hợp tác</h1>
<style>
    th, td {
        text-align: center;
        vertical-align: middle;
    }

    thead {
        background-color: #3498db;
        color: white;
    }


    tbody tr:nth-child(odd) {
        background-color: #e8e8e8;
    }

    tbody tr:nth-child(even) {
        background-color: #ffffff;
    }


    .btn {
        padding: 3px 6px;
        font-size: 12px;
        border-radius: 4px;
        margin: 0 2px;
    }

    .btn-warning {
        background-color: #2ecc71;
        color: white;
    }

    .btn-info {
        background-color: #3498db;
        color: white;
        white-space: nowrap;
        height: auto;
        line-height: 1;
        padding: 5px 10px;
        display: flex;
        align-items: center;
    }

        .btn-info i {
            margin-right: 5px;
        }

        .btn-info span {
            display: block;
        }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
    }

    .btn-group .btn {
        flex: 1;
        min-width: 60px;
    }

        .btn-group .btn i {
            margin-right: 5px;
        }

    .btn-group {
        display: flex;
        justify-content: space-around;
    }

    .table {
        width: 100%;
    }

</style>

<p>
    <a class="btn btn-primary" asp-action="Create"> Tạo mới </a>
</p>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
</head>
<body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(function () {
            $('.datetimepicker').datetimepicker({
                format: 'H:i d/m/Y '
            });
        });
    </script>
    <table id="ntable" class="table table-striped table-bordered" id="productsTable">
        <thead>
        <tr>
            <th>
                Mã hợp tác
            </th>
            <th>
                Thời gian họp tác từ
            </th>
            <th>
                Thời gian hợp tác đến
            </th>
            <th>
                Tên thỏa thuận
            </th>
            <th>
                Thông tin liên hệ đối tác
            </th>
            <th>
                Mục tiêu
            </th>
            <th>
               Đơn vị triển khai
            </th>
            <th>
                 Hình thức hợp tác
            </th>
            <th>
                Sản phẩm chính
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdToChucHopTacNavigation.IdToChucHopTacQuocTe)
                </td>
            <td>
               
                        @String.Format("{0:dd/MM/yyyy}", item.ThoiGianHopTacTu)
            </td>
            <td>
                        @String.Format("{0:dd/MM/yyyy}", item.ThoiGianHopTacDen)
                   
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenThoaThuan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThongTinLienHeDoiTac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MucTieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonViTrienKhai)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.IdHinhThucHopTacNavigation.IdHinhThucHopTac)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.SanPhamChinh)
            </td>
            
            <td>
               
                        <div class="btn-group">

                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdThongTinHopTac"><i class="fa fa-pencil-alt"></i>Sửa</a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdThongTinHopTac"><i class="fa fa-info-circle"></i>Chi tiết</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdThongTinHopTac"><i class="fa fa-trash"></i>Xoá</a>

                        </div>
            </td>
        </tr>
            }
        </tbody>
    </table>
</body>
<script>
    new DataTable('#ntable', {
        searching: true, // Mặc định là true, set false để tắt chức năng search
        processing: true,
        info: false, // Tắt thông tin về table VD: Showing 1 to 14 of 14 entries
        paging: true, // Bật chức năng phân trang
        lengthMenu: [5, 10], // Số bản ghi hiển thị trên một trang
        language: {
            processing: "Message khi đang tải dữ liệu",
            search: "Tìm kiếm",
            lengthMenu: " ",
            info: "Bản ghi từ START đến END Tổng công TOTAL bản ghi",
            infoEmpty: "Khi không có dữ liệu, Hiển thị 0 bản ghi trong 0 tổng cộng 0 ",
            infoFiltered: "(Message bổ sung cho info khi không search đc record nào MAX)",

            loadingRecords: "",
            zeroRecords: "Khi tìm kiếm không match với record nào",
            emptyTable: "Không có dữ liệu",
            paginate: {
                first: "Trang đầu",
                previous: "Trang trước",
                next: "Trang sau",
                last: "Trang cuối"
            },
            aria: {
                sortAscending: ": Message khi đang sắp xếp theo column",
                sortDescending: ": Message khi đang sắp xếp theo column",
            }
        },
    });

</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>