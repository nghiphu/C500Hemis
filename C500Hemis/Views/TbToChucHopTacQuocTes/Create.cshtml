@model C500Hemis.Models.TbToChucHopTacQuocTe

@{
    ViewData["Title"] = "Create";
}


<h1 style="text-align:center"> Tạo mới </h1>
<hr />

<style>
    body { /*chèn màu vào backgruond, chỉnh sửa font chữ cách hiện*/
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif color: #673ab7; /* Purple */
        text-align: left;
        margin-bottom: 20px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        background-image: linear-gradient(to right, #c6ffdd, #fbd786, #f7797d);
    }
    body {
        background-color: #f7f9fc;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .form-container {
        max-width: 800px;
        margin: auto;
        background-color: #f7f9fc;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    h1, h4 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        table th, table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        table th {
            background-color: #4CAF50; /* Green background */
            color: #fff; /* White text */
        }

        table td {
            background-color: #f2f2f2; /* Light grey background */
        }

        table tr:hover {
            background-color: #ddd; /* Darker grey on hover */
        }

    .form-group label {
        font-weight: bold;
        color: #333;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #d1d1d1;
        border-radius: 5px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease; /* Smooth transitions */
    }

        .form-control:focus {
            border-color: #05c46b;
            box-shadow: 0 0 5px rgba(5, 196, 107, 0.5); /* Slight glow */
            outline: none;
        }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #05c46b;
        border: none;
        color: #fff;
        font-weight: bold;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
        transition: background-color 0.3s ease, transform 0.3s ease; /* Smooth transition and button push effect */
    }

        .btn-primary:hover {
            background-color: #048a55;
            transform: scale(1.05); /* Slightly bigger */
        }
</style>


<div class="form-container">
    <h4>Thông tin tổ chức hợp tác quốc tế </h4>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

        <table>
            <tr>
                <td>

            <div class="form-group">
                <label asp-for="IdToChucHopTacQuocTe" class="control-label"> Id Tổ chức hợp tác quốc tế</label>
                <input asp-for="IdToChucHopTacQuocTe" class="form-control" />
                <span asp-validation-for="IdToChucHopTacQuocTe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaHopTac" class="control-label"> Mã hợp tác </label>
                <input asp-for="MaHopTac" class="form-control" />
                <span asp-validation-for="MaHopTac" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label asp-for="TenToChuc" class="control-label">  Tên tổ chức /cơ sở giáo dục quốc tế </label>
                <input asp-for="TenToChuc" class="form-control" />
                <span asp-validation-for="TenToChuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdQuocGia" class="control-label"> Quốc gia </label>
                <select asp-for="IdQuocGiaNavigation.TenNuoc" class ="form-control" asp-items="ViewBag.IdQuocGia"></select>
            </div>
            <div class="form-group">
                <label asp-for="NoiDung" class="control-label"> Nội dung </label>
                <input asp-for="NoiDung" class="form-control" />
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
                    <div class="form-group mb-3">
                        <label asp-for="ThoiGianKyKet" class="form-label"></label>
                        <input asp-for="ThoiGianKyKet" class="form-control border-info" type="datetime-local" placeholder="Nhập Ngày Ký kết" />
                        <span asp-validation-for="ThoiGianKyKet" class="text-danger"></span>
                    </div>
            <div class="form-group">
                <label asp-for="KetQuaHopTac" class="control-label"> Kết quả hợp tác </label>
                <input asp-for="KetQuaHopTac" class="form-control" />
                <span asp-validation-for="KetQuaHopTac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiToChuc" class="control-label"> Loại tổ chức </label>
                <input asp-for="LoaiToChuc" class="form-control" />
                <span asp-validation-for="LoaiToChuc" class="text-danger"></span>
            </div>
                </td>
            </tr>
        </table>
            <div class="form-group">
                <input type="submit" value="Tạo mới " class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> Quay lại </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
   
<script>
    $(document).ready(function() {
        $('.datetimepicker').datetimepicker({
            format: 'dd-mm-yyyy ' // hoặc định dạng bạn muốn
        });
    });
</script>


