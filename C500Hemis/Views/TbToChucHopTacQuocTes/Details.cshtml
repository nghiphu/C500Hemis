@model C500Hemis.Models.TbToChucHopTacQuocTe

@{
    ViewData["Title"] = "Thông tin chi tiết";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpofyKGjJUUqkLo" crossorigin="anonymous" referrerpolicy="no-referrer" />

<h1>Thông tin chi tiết</h1>

<style>
    body { /*chèn màu vào backgruond, chỉnh sửa font chữ cách hiện*/
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif color: #673ab7; /* Purple */
        text-align: left;
        margin-bottom: 20px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        background-image: linear-gradient(to right, #c6ffdd, #fbd786, #f7797d);
    }
    table {
        width: 100%; /* Chiều rộng bảng 100% */
        border-collapse: collapse; /* Gộp đường viền ô */
    }

    th, td {
        border: 1px solid #000; /* Đường viền đen cho các ô */
        text-align: left;
        padding: 8px; /* Khoảng cách giữa nội dung và đường viền ô */
    }

    th {
        font-weight: bold; /* Chữ đậm cho tiêu đề */
    }

    tr:hover {
        background-color: transparent; /* Không có màu nền khi di chuột qua hàng */
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #f2f2f2; /* Light gray background for the table */
    }

    th, td {
        border: 1px solid #ddd; /* Lighter border color */
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #4CAF50; /* Green background for headers */
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2; /* Light gray background for even rows */
    }

    tr:hover {
        background-color: #ddd; /* Gray background on hover */
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
    }

    .info-table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 20px;
    }

        .info-table th, .info-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .info-table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .info-table tr:hover {
            background-color: #f5f5f5;
        }

    .btn-primary, .btn-secondary {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }

    .fa-solid fa-pen-to-square, .fa-solid fa-arrow-left {
        margin-right: 5px;
    }
</style>


<div class="container">
    <h4 style="text-align:center">Tổ chức hợp tác quốc tế</h4>
    <hr />
    <table class="info-table">
    <table>
        <tr>
            <th>Mã hợp tác</th>
            <td>@Html.DisplayFor(model => model.MaHopTac)</td>
        </tr>
        <tr>
            <th>Tên tổ chức /cơ sở giáo dục quốc tế</th>
            <td>@Html.DisplayFor(model => model.TenToChuc)</td>
        </tr>
        <tr>
            <th>Quốc gia</th>
            <td>@Html.DisplayFor(model => model.IdQuocGiaNavigation.TenNuoc)</td>
        </tr>
        <tr>
            <th>Nội dung</th>
            <td>@Html.DisplayFor(model => model.NoiDung)</td>
        </tr>
        <tr>
            <th>Thời gian kí kết</th>
            <td>@Html.DisplayFor(model => model.ThoiGianKyKet)</td>
        </tr>
        <tr>
            <th>Kết quả hợp tác</th>
            <td>@Html.DisplayFor(model => model.KetQuaHopTac)</td>
        </tr>
        <tr>
            <th>Loại tổ chức</th>
            <td>@Html.DisplayFor(model => model.LoaiToChuc)</td>
        </tr>


    </table>

</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdToChucHopTacQuocTe" class="btn btn-primary">
        <i class="fa-solid fa-pen-to-square"></i> Sửa
    </a> 
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Quay lại
    </a>
</div>
