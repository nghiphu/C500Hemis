@model IEnumerable<C500Hemis.Models.TbToChucHopTacQuocTe>

@{
    ViewData["Title"] = "Tổ chức hợp tác quốc tế";
}
@section Heads{
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <link href="https://cdn.datatables.net/v/dt/jq-3.7.0/dt-2.1.7/r-3.0.3/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/dt/jq-3.7.0/dt-2.1.7/r-3.0.3/datatables.min.js"></script>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}
    <style>
        th, td {
            text-align: center;
            vertical-align: middle;
        }


        thead {
            background-color: #3498db;
            color: white;
        }


        tbody tr:nth-child(odd) {
            background-color: #e8e8e8;
        }

        tbody tr:nth-child(even) {
            background-color: #ffffff;
        }

        tbody tr:hover {
            background-color: #D6EEEE;
        }

        table.dataTable {
            text-align: center;
        }

        .btn {
            padding: 3px 6px;
            font-size: 12px;
            border-radius: 4px;
            margin: 0 2px;
        }

        .btn-warning {
            background-color: #2ecc71;
            color: white;
        }

        .btn-info {
            background-color: #3498db;
            color: white;
            white-space: nowrap;
            height: auto;
            line-height: 1;
            padding: 5px 10px;
            display: flex;
            align-items: center;
        }

            .btn-info i {
                margin-right: 5px;
            }

            .btn-info span {
                display: block;
            }

        .btn-danger {
            background-color: #e74c3c;
            color: white;
        }

        .btn-group .btn {
            flex: 1;
            min-width: 60px;
        }

            .btn-group .btn i {
                margin-right: 5px;
            }

        .btn-group {
            display: flex;
            justify-content: space-around;
        }

        .table {
            width: 100%;
        }
    </style>



<h1 class="text-center">TỔ CHỨC HỢP TÁC QUỐC TẾ</h1>

   
    
<p>
    <a class="btn btn-primary" asp-action="Create"> Tạo mới </a>
</p>
<body>


    <table id="dttable" class="table table-striped table-bordered">
    
        <thead>
        <tr>
            <th>Mã hợp tác</th>
            <th>
                Tên tổ chức
            </th>
            <th>
                Nội dung
            </th>
            <th>
                Thời gian kí kết
            </th>
            <th>
                Kết quả hợp tác
            </th>
            <th>
                Loại tổ chức
            </th>
            <th>
                Id Quốc Gia
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHopTac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenToChuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td>
             @String.Format("{0:dd/MM/yyyy}", item.ThoiGianKyKet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KetQuaHopTac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiToChuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdQuocGiaNavigation.IdQuocTich)
            </td>

            <td>
                        <div class="btn-group">

                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdToChucHopTacQuocTe"><i class="fa fa-pencil-alt"></i>Sửa</a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdToChucHopTacQuocTe"><i class="fa fa-info-circle"></i>Chi tiết</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdToChucHopTacQuocTe"><i class="fa fa-trash"></i>Xoá</a>

                        </div>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
@section Scripts{
<script>

    new DataTable('#dttable', {
        searching: true, // Mặc định là true, set false để tắt chức năng search
        processing: true,
        info: false, // Tắt thông tin về table VD: Showing 1 to 14 of 14 entries
        paging: true, // Bật chức năng phân trang
        lengthMenu: [10, 20, 30], // Số bản ghi hiển thị trên một trang
        language: {
            processing: "Message khi đang tải dữ liệu",
            search: "Tìm kiếm",
            lengthMenu: "Điều chỉnh số lượng bản ghi trên 1 trang _MENU_ ",
            info: "Bản ghi từ _START_ đến _END_ Tổng công _TOTAL_ bản ghi",
            infoEmpty: "Khi không có dữ liệu, Hiển thị 0 bản ghi trong 0 tổng cộng 0 ",
            infoFiltered: "(Message bổ sung cho info khi không search đc record nào _MAX_)",
            infoPostFix: "Alo Alo", // Cái này khi thêm vào nó sẽ đứng sau info
            loadingRecords: "",
            zeroRecords: "Khi tìm kiếm không match với record nào",
            emptyTable: "Không có dữ liệu",
            paginate: {
                first: "Trang đầu",
                previous: "Trang trước",
                next: "Trang sau",
                last: "Trang cuối"
            },
            aria: {
                sortAscending: ": Message khi đang sắp xếp theo column",
                sortDescending: ": Message khi đang sắp xếp theo column",
            }
        },
    });
</script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.datatables.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(function () {
        $('.datetimepicker').datetimepicker({
            format: ' d/m/Y '
        });
    });
</script>
}