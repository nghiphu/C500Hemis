@model IEnumerable<C500Hemis.Models.TbToChucHopTacQuocTe>

@{
    ViewData["Title"] = "Tổ chức hợp tác quốc tế";
}

<h1 class="text-center">TỔ CHỨC HỢP TÁC QUỐC TẾ</h1>
<style>
    th, td {
        text-align: center;
        vertical-align: middle;
    }

    thead {
        background-color: #3498db;
        color: white;
    }


    tbody tr:nth-child(odd) {
        background-color: #e8e8e8;
    }

    tbody tr:nth-child(even) {
        background-color: #ffffff;
    }

    tbody tr:hover {
        background-color: #D6EEEE;
    }
    table.dataTable{
        text-align:center;
    }

    .btn {
        padding: 3px 6px;
        font-size: 12px;
        border-radius: 4px;
        margin: 0 2px;
    }

    .btn-warning {
        background-color: #2ecc71;
        color: white;
    }

    .btn-info {
        background-color: #3498db;
        color: white;
        white-space: nowrap;
        height: auto;
        line-height: 1;
        padding: 5px 10px;
        display: flex;
        align-items: center;
    }

        .btn-info i {
            margin-right: 5px;
        }

        .btn-info span {
            display: block;
        }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
    }

    .btn-group .btn {
        flex: 1;
        min-width: 60px;
    }

    .btn-group .btn i {
            margin-right: 5px;
        }

    .btn-group {
        display: flex;
        justify-content: space-around;
    }
     .table{
        width: 100%;
    }
   
</style>
<p>
    <a class="btn btn-primary" asp-action="Create"> Tạo mới </a>
</p>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />


</head>
<body>


    <table id="ntable" class="table table-striped table-bordered">
    
        <thead>
        <tr>
            <th>Mã hợp tác</th>
            <th>
                Tên tổ chức
            </th>
            <th>
                Nội dung
            </th>
            <th>
                Thời gian kí kết
            </th>
            <th>
                Kết quả hợp tác
            </th>
            <th>
                Loại tổ chức
            </th>
            <th>
                Id Quốc Gia
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHopTac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenToChuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td>
             @String.Format("{0:dd/MM/yyyy}", item.ThoiGianKyKet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KetQuaHopTac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiToChuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdQuocGiaNavigation.IdQuocTich)
            </td>

            <td>
                        <div class="btn-group">

                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdToChucHopTacQuocTe"><i class="fa fa-pencil-alt"></i>Sửa</a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdToChucHopTacQuocTe"><i class="fa fa-info-circle"></i>Chi tiết</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdToChucHopTacQuocTe"><i class="fa fa-trash"></i>Xoá</a>

                        </div>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
<script>
    new DataTable('#ntable', {
        searching: true,
        processing: true,
        info: false,
        paging: true,
        lengthMenu: [5, 10],
        language: {
            processing: "Đang tải dữ liệu...",
            search: "Tìm kiếm",
            lengthMenu: "Hiển thị _MENU_ bản ghi",
            info: "Bản ghi từ _START_ đến _END_ trong tổng cộng _TOTAL_ bản ghi",
            infoEmpty: "Không có dữ liệu",
            infoFiltered: "(lọc từ _MAX_ bản ghi)",
            loadingRecords: "Đang tải...",
            zeroRecords: "Không tìm thấy bản ghi nào",
            emptyTable: "Không có dữ liệu",
            paginate: {
                first: "Trang đầu",
                previous: "Trang trước",
                next: "Trang sau",
                last: "Trang cuối"
            },
            aria: {
                sortAscending: ": sắp xếp tăng dần",
                sortDescending: ": sắp xếp giảm dần"
            }
        },
    });
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

<script>
    $(function () {
        $('.datetimepicker').datetimepicker({
            format: 'H:i d/m/Y '
        });
    });
</script>
