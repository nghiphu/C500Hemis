@model C500Hemis.Models.TbThuVienTrungTamHocLieu

@{
    ViewData["Title"] = "Tạo mới";
}

<h1 style="text-align:center"> Tạo mới </h1>
<hr />

<style>


    .form-container {
        max-width: 800px;
        margin: auto;
        background-color: #E1F0DA;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    h1, h4 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }



    .form-group label {
        font-weight: bold;
        color: #333;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #d1d1d1;
        border-radius: 5px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #05c46b;
            box-shadow: 0 0 5px rgba(5, 196, 107, 0.5);
            outline: none;
        }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #05c46b;
        border: none;
        color: #fff;
        font-weight: bold;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #048a55;
            transform: scale(1.05);
        }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr; /* Hai cột */
        gap: 20px; /* Khoảng cách giữa các phần tử */
    }

</style>

