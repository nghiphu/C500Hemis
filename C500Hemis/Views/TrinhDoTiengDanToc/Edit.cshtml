@model C500Hemis.Models.TbTrinhDoTiengDanToc

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Sửa Thông Tin Trình Độ Tiếng Dân Tộc</h1>

<div class="container">
    <h4 class="text-center">Thông Tin Trình Độ Tiếng Dân Tộc Của Cán Bộ</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdTrinhDoTiengDanToc" />

                <div class="form-group">
                    <label asp-for="IdCanBo" class="control-label"> Id Cán bộ</label>
                    <select asp-for="IdCanBo" class="form-control" asp-items="ViewBag.IdCanBo"></select>
                    <span asp-validation-for="IdCanBo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdTiengDanToc" class="control-label">Tiếng dân tộc</label>
                    <select asp-for="IdTiengDanToc" class="form-control" asp-items="ViewBag.IdTiengDanToc"></select>
                    <span asp-validation-for="IdTiengDanToc" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdKhungNangLucNgoaiNgu" class="control-label">Khung năng lực ngoại ngữ</label>
                    <select asp-for="IdKhungNangLucNgoaiNgu" class="form-control" asp-items="ViewBag.IdKhungNangLucNgoaiNgu"></select>
                    <span asp-validation-for="IdKhungNangLucNgoaiNgu" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Lưu" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
