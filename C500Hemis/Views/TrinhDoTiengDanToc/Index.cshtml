@model IEnumerable<C500Hemis.Models.TbTrinhDoTiengDanToc>

@{
    ViewData["Title"] = "Danh Sách Trình Độ Tiếng Dân Tộc";
}

<h1 class="text-center">Danh Sách Trình Độ Tiếng Dân Tộc</h1>

<p class="text-center">
    <a class="btn btn-primary" asp-action="Create">Tạo Mới</a>
</p>

<form asp-controller="TrinhDoTiengDanToc" asp-action="Index" method="get" class="text-center mb-3">
    <div class="input-group justify-content-center">
        <input type="number" name="Search" class="form-control" placeholder="Tìm kiếm theo Id cán bộ" />
        <button class="btn btn-outline-secondary" type="submit">Tìm Kiếm</button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id Cán bộ</th>
                <th>Khung năng lực Ngoại ngữ</th>
                <th>Tiếng dân tộc</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IdCanBoNavigation.IdCanBo)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdKhungNangLucNgoaiNguNavigation.IdKhungNangLucNgoaiNgu)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdTiengDanTocNavigation.IdTiengDanToc)</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.IdTrinhDoTiengDanToc">Sửa</a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.IdTrinhDoTiengDanToc">Chi Tiết</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdTrinhDoTiengDanToc">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
