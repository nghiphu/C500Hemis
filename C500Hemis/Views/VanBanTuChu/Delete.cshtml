@model C500Hemis.Models.TbVanBanTuChu

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background: pink; /* Đặt màu nền của body thành màu hồng */
    }

    hr {
        border: 3px dotted red; /* Đặt viền cho thẻ <hr> thành 3px kiểu chấm và màu đỏ */
    }

    div .row {
        background-color: #C4DAD2; /* Màu nền xanh nhạt cho lớp .row */
        justify-content: center; /* Căn giữa nội dung theo chiều ngang trong flex container */
        align-items: center; /* Căn giữa nội dung theo chiều dọc trong flex container */
        padding: 20px; /* Thêm 20px padding bên trong lớp .row */
        font-weight: bold; /* Làm cho font chữ in đậm */
        border-radius: 10px; /* Bo góc cho phần .row */
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Thêm bóng nhẹ để tạo chiều sâu */
        max-width: 600px; /* Giới hạn chiều rộng tối đa của .row là 600px */
        margin: 0 auto; /* Căn giữa lớp .row trong phần chứa */
        border: 6px outset black; /* Thêm viền 6px kiểu nổi và màu đen cho phần .row */
    }

    h1 {
        font-family: Apice; /* Đặt font chữ cho h1 là Apice */
        text-align: center; /* Căn giữa văn bản */
        color: #16423C; /* Đặt màu chữ cho h1 là màu xanh đậm */
    }

    dt {
        font-weight: bold; /* Làm cho văn bản trong <dt> (term định nghĩa) in đậm */
        color: #16423C; /* Đặt màu chữ cho <dt> là màu xanh đậm */
    }

    dd {
        white-space: normal; /* Cho phép văn bản trong <dd> (miêu tả định nghĩa) ngắt dòng bình thường */
    }

    .btn {
        background-color: #e74c3c; /* Đặt màu nền của nút thành màu đỏ */
        color: White; /* Đặt màu chữ của nút thành màu trắng */
        padding: 12px 20px; /* Thêm padding: 12px trên/dưới và 20px trái/phải */
        border: none; /* Loại bỏ viền mặc định của nút */
        border-radius: 5px; /* Bo góc cho nút */
        text-decoration: none; /* Xóa gạch chân nếu có */
        transition: background-color 0.3s; /* Hiệu ứng chuyển đổi mượt mà cho màu nền khi thay đổi */
    }

        .btn:hover {
            background-color: #c0392b; /* Thay đổi màu nền khi di chuột lên nút thành màu đỏ đậm hơn */
        }

    .btn-secondary {
        background-color: #3498db; /* Đặt màu nền cho nút thứ cấp là màu xanh */
        font-weight: bold; /* Làm cho chữ in đậm */
    }

        .btn-secondary:hover {
            background-color: #2980b9; /* Thay đổi màu nền khi di chuột lên nút thứ cấp thành màu xanh đậm hơn */
        }

    .action-links {
        display: flex; /* Sử dụng flexbox để bố trí các phần tử */
        gap: 10px; /* Thêm khoảng cách 10px giữa các phần tử */
        justify-content: center; /* Căn giữa các phần tử theo chiều ngang */
        margin-top: 20px; /* Thêm margin trên là 20px */
    }

</style>
<h1>BẠN CÓ MUỐN XOÁ VĂN BẢN NÀY</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.LoaiVanBan)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.LoaiVanBan)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.NoiDungVanBan)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.NoiDungVanBan)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.QuyetDinhBanHanh)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.QuyetDinhBanHanh)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.CoQuanQuyetDinhBanHanh)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.CoQuanQuyetDinhBanHanh)
        </dd>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdVanBanTuChu" />
            <div class="action links">
                <input type="submit" style="font-weight:bold;" value="XOÁ" class="btn" />
                <a asp-action="Index" class="btn btn-secondary">QUAY TRỞ LẠI DANH SÁCH</a>
            </div>
        </form>
    </dl>
</div>
